<binding>

	<!-- abstract mapping for PubItemVO -->
	<mapping type-name="PubItemVOOutputAbstract" class="de.mpg.escidoc.services.common.valueobjects.PubItemVO"
		ordered="false" flexible="true" allow-repeats="true" abstract="true">

		<!-- Node: item.@objid -->
		<!-- Field: PubItemVO.reference [PubItemRO] -->
		<structure field="reference" type="de.mpg.escidoc.services.common.referenceobjects.PubItemRO"
			test-method="alreadyExistsInFramework" usage="optional">
			<value style="attribute" name="objid" get-method="getObjectId" set-method="setObjectId" usage="optional" />
		</structure>

		<!-- Node: item.@schemaLocation -->
		<!-- useful to allow schema validation -->
		<value style="attribute" name="schemaLocation" ns="http://www.w3.org/2001/XMLSchema-instance"
			constant="http://www.escidoc.de/schemas/item/0.3 soap/item/0.3/item.xsd" usage="optional" />

		<!-- Node: item.@last-modification-date -->
		<!-- Field: PubItemVO.modificationDate [java.util.Date] -->
		<value style="attribute" name="last-modification-date" field="modificationDate" usage="optional" />

		<structure name="properties" ns="http://www.escidoc.de/schemas/item/0.3" ordered="false" flexible="true"
			allow-repeats="true">

			<!-- Node: item.properties.creation-date -->
			<!-- Field: PubItemVO.creationDate [java.util.Date] -->
			<!-- DISCARDED on output -->

			<!-- Node: item.properties.created-by.@objid -->
			<!-- Field: PubItemVO.owner [AccountUserRO] -->
			<!-- DISCARDED on output -->
			
			<!-- Node: item.properties.public-status -->
			<!-- Field: PubItemVO.state -->
			<!-- DISCARDED on output -->

			<!-- Node: item.properties.context -->
			<structure name="context" ns="http://www.escidoc.de/schemas/item/0.3" field="pubCollection"
				type="de.mpg.escidoc.services.common.referenceobjects.PubCollectionRO" usage="optional">

				<!-- Node: item.properties.context.@objid -->
				<!-- Field: PubItemVO.pubCollection [PubCollectionRO] -->
				<value style="attribute" name="objid" get-method="getObjectId" usage="optional" />

			</structure>

			<!-- Node: item.properties.content-model -->
			<!-- Field: none, but mandatory in the schema instances -->
			<structure name="content-model" ns="http://www.escidoc.de/schemas/item/0.3">

				<!-- Node: item.properties.content-model.@objid -->
				<!-- mandatory in XML during update and during create, useless in VO -->
				<value style="attribute" name="objid" constant="escidoc:persistent4" />

			</structure>

			<!-- Node: item.properties.lock-status -->
			<!-- Field: PubItemVO.lockStatus [PubItemVO.LockStatus] -->
			<!-- DISCARDED on output -->

			<!-- Node: item.properties.pid -->
			<!-- Field: PubItemVO.pid -->
			<value style="element" name="pid" ns="http://www.escidoc.de/schemas/item/0.3" field="pid" usage="optional"
				test-method="hasPID" />

			<!-- Node: item.properties.version -->
			<!-- DISCARDED on output -->

			<!-- Node: item.properties.latest-version -->
			<!-- DISCARDED on output -->

			<!-- Node: item.properties.content-model-specific -->
			<!-- Field: none, but mandatory in the schema instances -->
			<structure name="content-model-specific" ns="http://www.escidoc.de/schemas/item/0.3" ordered="false"
				flexible="true">
				<!-- structure name="anything" /-->
			</structure>

		</structure>

		<!-- Node: item.resources -->
		<!-- Field: none, but mandatory in the schema instances -->
		<structure name="resources" ns="http://www.escidoc.de/schemas/resources/0.2" usage="optional" />

		<!-- structure name="resources" ns="http://www.escidoc.de/schemas/resources/0.2" test-method="alreadyExistsInFramework"
			usage="optional"-->
		<!-- /structure-->

		<!-- Node: item.md-records -->
		<structure name="md-records" ns="http://www.escidoc.de/schemas/metadatarecords/0.3" ordered="false"
			flexible="true" allow-repeats="true">
			<!-- Node: item.md-records.md-record -->
			<structure name="md-record" ns="http://www.escidoc.de/schemas/metadatarecords/0.3" ordered="false"
				flexible="true" allow-repeats="true">

				<!-- Node: item.md-records.md-record.@name -->
				<!-- mandatory in XML, useless in VO -->
				<value style="attribute" name="name" constant="escidoc" />

				<!-- Node: item.md-records.md-record.publication -->
				<!-- Field: PubItemVO.metadata [MdsPublicationVO] -->
				<structure field="metadata" usage="optional" />

			</structure>
		</structure>

		<!-- Node: item.relations -->
		<!-- Field: relations [List<PubItemRelationVO>] -->
		<collection name="relations" ns="http://www.escidoc.de/schemas/relations/0.3" field="relations"
			factory="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.pubItemRelationVOListFactory"
			item-type="de.mpg.escidoc.services.common.valueobjects.PubItemRelationVO" test-method="hasRelations"
			usage="optional">
			<structure map-as="de.mpg.escidoc.services.common.valueobjects.PubItemRelationVO" />
		</collection>

		<!-- Node: item.components -->
		<!-- Field: PubItemVO.files -->
		<collection name="components" ns="http://www.escidoc.de/schemas/components/0.3" field="files"
			factory="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.pubFileVOListFactory"
			item-type="de.mpg.escidoc.services.common.valueobjects.PubFileVO" test-method="hasFiles" usage="optional">
			<structure map-as="de.mpg.escidoc.services.common.valueobjects.PubFileVO" />
		</collection>

	</mapping>

	<!-- concrete mapping for PubItemVO -->
	<mapping name="item" ns="http://www.escidoc.de/schemas/item/0.3"
		class="de.mpg.escidoc.services.common.valueobjects.PubItemVO">

		<!-- embed the abstract mapping -->
		<structure map-as="PubItemVOOutputAbstract" />

	</mapping>

</binding>
