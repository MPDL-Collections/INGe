	<!-- properties valid for all profiles -->
	<properties>
		<jdk.version>1.6</jdk.version>
		<!-- used by the cargo plugin to run a jboss server for integration-testing /goal: cargo:start-->
		<cargo.port>8080</cargo.port>
		<cargo.rmi.port>1099</cargo.rmi.port>
		<cargo.log>high</cargo.log>
		<!--  These properties are passed to the integration test jboss on commandline, therefore 
			no properties-service.xml is necessary -->
		<cargo.jvmargs>
			-Dcom.sun.xml.namespace.QName.useCompatibleSerialVersionUID=1.0 -Dpubman.properties.file=./pubman.properties
		</cargo.jvmargs>
		<!-- this path is used as root for all jboss installations -->
		<cargo.install.dir>${user.home}/jboss</cargo.install.dir>
		<!-- fetch the jboss from this url -->
		<cargo.jboss.url>http://heanet.dl.sourceforge.net/sourceforge/jboss/jboss-4.2.2.GA.zip</cargo.jboss.url>
		<!-- local intallation of the jboss for integration-tests -->
		<cargo.jboss.install.dir>${user.home}/jboss/jboss-4.2.2.GA/jboss-4.2.2.GA</cargo.jboss.install.dir>
		<!-- the ears are deployed to this server using jboss:harddeploy -->
		<jboss.install.dir>${user.home}/jboss/server_eclipse/jboss-4.2.2.GA/jboss-4.2.2.GA</jboss.install.dir>
		<jboss.install.node>default</jboss.install.node>
		<!-- These properties are included in the properties-service.xml via a xsl transformation -->
		<jboss.property.1>pubman.properties.file=./pubman.properties</jboss.property.1>
		<jboss.property.2>com.sun.xml.namespace.QName.useCompatibleSerialVersionUID=1.0</jboss.property.2>
		<!-- Flag to disable the GUI-entry points for UC_PM_SR_03 do advanced search -->
		<escidoc.pubman_presentation.disable.advanced_search>false</escidoc.pubman_presentation.disable.advanced_search>
		<escidoc.pubman_presentation.disable.export>false</escidoc.pubman_presentation.disable.export>
		<escidoc.pubman_presentation.disable.modify>false</escidoc.pubman_presentation.disable.modify>
		<escidoc.pubman_presentation.disable.new_revision>false</escidoc.pubman_presentation.disable.new_revision>
		<escidoc.pubman_presentation.disable.view_statistics>false</escidoc.pubman_presentation.disable.view_statistics>
		<escidoc.pubman_presentation.disable.view_revisions>false</escidoc.pubman_presentation.disable.view_revisions>
		<!-- URL of this PubMan instance -->
		<escidoc.pubman.instance.context.path>/pubman</escidoc.pubman.instance.context.path>
		<escidoc.pubman.item.pattern>/item/$1</escidoc.pubman.item.pattern>
		<escidoc.pubman.component.pattern>/viewComponentPage.jsp?componentId=$1</escidoc.pubman.component.pattern>		
		<!-- Links from PubMan -->
		<escidoc.pubman.policy.url>http://colab.mpdl.mpg.de/mediawiki/PubMan_Repository_Policy</escidoc.pubman.policy.url>
		<escidoc.pubman.contact.url>http://colab.mpdl.mpg.de/mediawiki/PubMan_Support</escidoc.pubman.contact.url>
		<!-- Properties for PubMan standard theme-->
		<escidoc.pubman.stylesheet.standard.url>/common/resources/cssFramework/themes/skin_blue/styles/theme.css</escidoc.pubman.stylesheet.standard.url>
		<escidoc.pubman.stylesheet.standard.type>stylesheet</escidoc.pubman.stylesheet.standard.type>
		<escidoc.pubman.stylesheet.standard.apply>true</escidoc.pubman.stylesheet.standard.apply>
		<!-- Properties for PubMan contrast theme-->
		<escidoc.pubman.stylesheet.contrast.url>/common/resources/cssFramework/themes/skin_highContrast/styles/theme.css</escidoc.pubman.stylesheet.contrast.url>
		<escidoc.pubman.stylesheet.contrast.type>alternate stylesheet</escidoc.pubman.stylesheet.contrast.type>
		<escidoc.pubman.stylesheet.contrast.apply>true</escidoc.pubman.stylesheet.contrast.apply>
