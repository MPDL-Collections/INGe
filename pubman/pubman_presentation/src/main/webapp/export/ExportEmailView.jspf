<div
	style="width: 860px; -rave-layout: grid"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://www.sun.com/web/ui"
	xmlns:h="http://java.sun.com/jsf/html">
	<f:subview id="ExportEmailView">
				 	
 		<h:panelGrid id="panelMsg">
			<ui:messageGroup binding="#{export$ExportItems.valMessage}" id="valMessage" styleClass="valMessage" visible="false"/>
 		</h:panelGrid>
	
		<h:panelGrid id="panelBackSend" columns="2"
			style="text-align: center; margin-left: 20px; margin-top: 160px; margin-bottom: 15px; width: 650px;" 
			border="0" cellspacing="0" cellpadding="0">

			<ui:hyperlink id="lnkBack"
				style="font-weight: bold; height: 20px; font-size: 16px"
				text="#{lbl.ExportEmail_lblBack}" action="#{export$ExportItems.backToList}" />

			<ui:hyperlink id="lnkSend"
				style="font-weight: bold; height: 20px;font-size: 16px"
				text="#{lbl.ExportEmail_lblSend}" action="#{export$ExportItems.sendEMail}" />
		</h:panelGrid>
		<h:panelGrid id="panelEmailHeader" style="margin-left: 20px; top: 253px; background-color: #F7F7F7; width: 650px;" >

		        <ui:label for="txtItemsAttached" id="lblItemsAttached"  text="#{lbl.ExportEmail_lblItemsAttached}"/>
		        
		        <ui:textField id="txtItemsAttached" style="height: 20px; width: 400px" 
		                      disabled="true" text="#{export$ExportItemsSessionBean.attExportFileName}"/>		        

		        <ui:label for="txtToRecipient" id="lblToRecipient"  text="#{lbl.ExportEmail_lblToRecipient}"/>
		        <ui:textField id="txtToRecipient" style="height: 20px; width: 400px" text="#{export$ExportItemsSessionBean.emailRecipients}"/>		        

		        <ui:label for="txtCCRecipient" id="lblCCRecipient"  text="#{lbl.ExportEmail_lblCCRecipient}"/>
		        <ui:textField id="txtCCRecipient" style="height: 20px; width: 400px" />		        
		</h:panelGrid>
		<h:panelGrid id="panelEmailContent"  style="margin-left: 20px; background-color: #F7F7F7; width: 650px" >
		        <ui:label for="txtEmailSubject" id="lblEmailSubject"  text="#{lbl.ExportEmail_lblSubject}"/>
		        <ui:textField id="txtEmailSubject" style="height: 20px; width: 600px" 
		        	disabled="true" text="#{export$ExportItemsSessionBean.exportEmailSubject}"/>		        
		        <ui:textArea id="txtaContent" style="height: 100px; width: 600px" 
		        	disabled="true" text="#{export$ExportItemsSessionBean.exportEmailTxt}"/>

		        <ui:label for="txtReturnToRecipient" id="lblReturnToRecipient"  text="#{lbl.ExportEmail_lblReturnToRecipient}"/>
		        <ui:textField id="txtReturnToRecipient" style="height: 20px; width: 400px" text="#{export$ExportItemsSessionBean.exportEmailReplyToAddr}"/>		        
		</h:panelGrid>
	</f:subview>
</div>