<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<div>

	<f:subview id="Export">
	
				<h1>
				<h:outputText id="lblExport"
					value="#{lbl.export_lblExport}" />
				</h1>
				<h:panelGrid columns="1">				
					<h:selectOneMenu id="cboExportFormats"  
									 value="#{ExportItemsSessionBean.exportFormatName}" 
									 disabled="#{!ExportItemsSessionBean.enableExport}">
							 <f:selectItems value="#{ExportItems.EXPORTFORMAT_OPTIONS}"/>
					</h:selectOneMenu>
			  	</h:panelGrid>   
				<hr />
				<h:selectOneMenu id="cboFileFormats" 
								  value="#{ExportItemsSessionBean.fileFormat}"
								  styleClass="exportFileTypeRadios"
								  disabled="#{!(ExportItemsSessionBean.enableExport && ExportItemsSessionBean.enableFileFormats)}"
								  layout="pageDirection"
								  >
						 <f:selectItems value="#{ExportItems.FILEFORMAT_OPTIONS}"/>
				</h:selectOneMenu>
									 
					<h:commandButton id="btnExportDownload" title="#{tip.export_btDownload}"
									 value="#{lbl.export_btDownload}"
									 actionListener="#{SearchResultList.downloadExportFile}"
									 disabled="#{!ExportItemsSessionBean.enableExport}"
									 styleClass="inlineButton exportDownloadButton" />
				
					<h:commandButton id="btnExportEMail" title="#{tip.export_btEMail}"
									 value="#{lbl.export_btEMail}"
									 action="#{SearchResultList.showExportEmailPage}"
									 disabled="#{!ExportItemsSessionBean.enableExport}"
									 styleClass="inlineButton exportSendMailButton" />
			
				<h:commandButton title="#{tip.export_exportFormats}" action="#{ExportItems.updateExportFormats}" id="btnUpdateExportFormats" value="updateExportFormats"  style="visibility:hidden;"/>									
</f:subview></div>
