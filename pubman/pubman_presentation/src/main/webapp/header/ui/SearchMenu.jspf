<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>

<div id="searchMenuSkipLinkAnchor" class="free_area0 searchMenu">
	<!-- search Menu starts here -->

	<span class="min_imgArea quickSearchIcon">&#160;</span>
	<span class="large_area0 quickSearchMenu">
		<h:inputText styleClass="large_txtInput quickSearchTextInput" value="#{Search.searchString}"/>
		<h:panelGroup styleClass="large_checkbox quickSearchCheckBoxMenu">
			<h:selectBooleanCheckbox id="quickSearchCheckBox" value="#{Search.includeFiles}" />
			<h:outputLabel for="quickSearchCheckBox" value="#{lbl.search_lblIncludeFiles}"/>
		</h:panelGroup>
	</span>
	<h:commandButton styleClass="xSmall_txtBtn xTiny_marginRIncl activeButton quickSearchBtn" title="#{tip.adv_search_btStart}" action="#{Search.startSearch}" value="start"/>




	<%--<h:outputLink styleClass="medium_area0_p3 xTiny_marginRIncl advancedSearchMenu" title="#{tip.search_lblAdvancedSearch}" value="#{ApplicationBean.appContext}AdvancedSearchPage.jsp" rendered="#{!AdvancedSearch.disableAdvancedSearch}">
		<span><h:outputText value="#{lbl.search_lblAdvancedSearch}"/></span>
	</h:outputLink>--%>
	<h:commandLink id="lnkAdvancedSearch" styleClass="medium_area0_p3 xTiny_marginRIncl advancedSearchMenu" title="#{tip.search_advanced}" immediate="true" rendered="#{!AdvancedSearch.disableAdvancedSearch}" action="#{AdvancedSearch.showSearchPage}">
		<h:outputText value="#{lbl.search_lblAdvancedSearch}"/>
	</h:commandLink>

	<%--<h:outputLink styleClass="medium_area0_p3 organisationSearchMenu endline" title="#{tip.search_affiliationTree}" value="#{ApplicationBean.appContext}AffiliationTreePage.jsp">
		<span><h:outputText value="#{lbl.mainMenu_lnkBrowseByAffiliation}"/></span>
	</h:outputLink>--%>
	<h:commandLink styleClass="medium_area0_p3 organisationSearchMenu endline" id="lnkBrowseByAffiliation" title="#{tip.search_byAffiliation}" immediate="true" action="#{Navigation.loadAffiliationTree}">
		<h:outputText value="#{lbl.mainMenu_lnkBrowseByAffiliation}"/>
	</h:commandLink>
	<!-- search Menu ends here -->
</div>