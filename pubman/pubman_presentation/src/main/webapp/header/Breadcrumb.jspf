<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f"%>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h"%>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<f:subview id="Breadcrumb">

<div class="clear breadcrumb">
	<!-- Breadcrumb starts here -->
	<ol>
		<tr:iterator id="BreadcrumbNavigation" var="item">
			<li>


<%-- start has to be reworked anyway --%>
					<tr:goLink id="lnkDestination" destination="/#{ApplicationBean.appContext}#{item.page}" rendered="#{!item.isLast && item.defaultAction == null}">
						<tr:outputText value="#{item.pageLabel}" />
					</tr:goLink>
					<tr:commandLink id="lnkAction" action="#{item.executeDefaultAction}" rendered="#{!item.isLast && item.defaultAction != null}">
						<tr:outputText value="#{item.pageLabel}" />
					</tr:commandLink>
					<tr:outputText value="#{item.pageLabel}" rendered="#{item.isLast}"/>
					<tr:outputText value=" / " rendered="#{!item.isLast}"/>
<%-- stop has to be reworked anyway --%>


			</li>
		</tr:iterator>
		<li>&#160;</li>
	</ol>
	<!-- Breadcrumb ends here -->
</div>

</f:subview>