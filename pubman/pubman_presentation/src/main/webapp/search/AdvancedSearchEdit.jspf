<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<f:loadBundle var="lbl" basename="Label"/>

<div>
	<f:subview id="AdvancedSearchEdit">
		<div class="advancedSearch">
			
				<h1><div class="headingAndIcon floatbox">Advanced Search</div>					
				<h:commandButton type="submit" styleClass="helpIcon" image="./resources/escidoc-css/images/PM_help_16.gif" onclick="loadHelp('#{InternationalizationHelper.selectedHelpPage}', '#x1-70003.2');return false"/>
					
			</h1>
												  
			<div class="objectButtons floatbox">				
				<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btStart}" action="#{AdvancedSearchEdit.startSearch}" />
				<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btClearAll}" action="#{AdvancedSearchEdit.clearAllForms}" />
			</div>
			<div class="formFieldLanguage">
				<h:outputLabel id="lblLanguage" value="#{lbl.adv_search_txtLanguage}" />
				<h:selectOneMenu styleClass="editItemComboBoxLanguage" value="#{AdvancedSearchEdit.languageString}">
					<f:selectItems value="#{AdvancedSearchEdit.languageOptions}"/>
				</h:selectOneMenu>
			</div>
			
			
			<%/* @ include file="../tools/ListControl.jspf" */%>
			
			
		   	<h:panelGroup id="panelAnyFieldCriterionCollection">
				<%@ include file="ui/AnyFieldCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelPersonCriterionCollection">
				<%@ include file="ui/PersonCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelOrganizationCriterionCollection">
				<%@ include file="ui/OrganizationCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelGenreCriterionCollection">
				<%@ include file="ui/GenreCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelDateCriterionCollection">
				<%@ include file="ui/DateCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelSourceCriterionCollection">
				<%@ include file="ui/SourceCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelEventCriterionCollection">
				<%@ include file="ui/EventCriterionCollection.jspf"%>
		</h:panelGroup>
		   	<h:panelGroup id="panelIdentifierCriterionCollection">
				<%@ include file="ui/IdentifierCriterionCollection.jspf"%>
		</h:panelGroup>
		<div class="objectButtons floatbox">				
				<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btStart}" action="#{AdvancedSearchEdit.startSearch}" />
				<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btClearAll}" action="#{AdvancedSearchEdit.clearAllForms}" />
			</div>
		</div>
	</f:subview>
</div>
