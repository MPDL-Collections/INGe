<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<div class="full_area0 itemBlock noTopBorder">
	<h3 class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{lbl.adv_search_lbHeaderCollection}" />
	</h3>
	<span class="seperator"></span>
	<div class="free_area0 itemBlockContent endline">
	
		<tr:iterator id="contextCriterion" rows="0" var="contextCriterionBean" value="#{AdvancedSearchEdit.contextCriterionCollection.contextCriterionManager.objectDM}" binding="#{AdvancedSearchEdit.contextCriterionIterator}">
	
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<span class="noDisplay"> </span>
				</b>

				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputLabel id="context" styleClass="noDisplay" value="#{contextCriterionBean.context}"/>

					<b class="quad_label">&#160;</b>
					
					<div class="xLarge_area0 endline selectContainer">
						<div class="xLarge_select selectboxIcon selectionBox">
							<h:outputText value="#{contextCriterionBean.contextName}" rendered="#{contextCriterionBean.contextCriterionVO.searchString != null}"/>
							<h:outputText value="--" rendered="#{contextCriterionBean.contextCriterionVO.searchString == null}"/>
						</div>
						<h:selectOneMenu style="background-color:#006D70; border:none; color:#FFFFFF;" onchange="submit();" id="selectContext" value="#{contextCriterionBean.contextCriterionVO.searchString}">
							<f:selectItems value="#{AdvancedSearchEdit.contextCriterionCollection.contextList}"/>
						</h:selectOneMenu>
					</div>
				</span>
				<span class="large_area0_p8 lineToolSection">
					<tr:commandButton id="btnAddFollowing" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.search_btAdd}" action="#{AdvancedSearchEdit.contextCriterionCollection.contextCriterionManager.addObject}" />
					<tr:commandButton id="btnRemoveFollowing" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.search_btRemove}" disabled="#{AdvancedSearchEdit.contextCriterionCollection.contextCriterionManager.size == 1}" action="#{AdvancedSearchEdit.contextCriterionCollection.contextCriterionManager.removeObject}"/>
				</span>
			</h:panelGroup>
				
            <h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder"></h:panelGroup>
            <h:panelGroup layout="block" styleClass="large_area0_p8 lineToolSection">
                <h:selectOneMenu styleClass="small_select xSmall_marginLIncl endline replace" value="#{contextCriterionBean.logicOperator}">
                    <f:selectItems value="#{contextCriterionBean.logicOptions}"/>
                </h:selectOneMenu>           
            </h:panelGroup>
		</tr:iterator>
	</div>

</div>