						<h:outputLabel value="#{lbl.adv_search_fileExcludeCategory}" for="fileCriterion_excludeCategory" />
					</span>
				</span>
			</span>
		</h:panelGroup>

		<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder"></h:panelGroup>
		<h:panelGroup layout="block" styleClass="large_area0_p8 lineToolSection">
<%--
				<h:selectOneMenu styleClass="small_select xSmall_marginLIncl endline replace" value=" !!!PUT IN LOGIC OPERATOR PULLDOWN HERE!!! ">
