				&#160;<span class="noDisplay"> </span>
			</b>
			<span class="xHuge_area0 xTiny_marginLExcl endline">
				<span class="large_area0 tiny_marginRIncl">
					<span class="xLarge_checkbox">
						<h:selectBooleanCheckbox id="fileCriterion_restrictedAccess" value="false" />
						<h:outputLabel value="#{lbl.adv_search_fileRestrictedAccess}" for="fileCriterion_restrictedAccess" />
					</span>
					<span class="xLarge_checkbox">
						<h:selectBooleanCheckbox id="fileCriterion_publicAvailable" value="false" />
