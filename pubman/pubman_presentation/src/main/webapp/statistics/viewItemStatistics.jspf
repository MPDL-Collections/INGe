<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f"%>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h"%>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<div xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:tr="http://myfaces.apache.org/trinidad">
	<f:subview id="ViewItemStatisitcs">
		<div class="floatbox">
		
		<h:outputLink value="#{ApplicationBean.appContext}#{ViewItemStatisticsPage.previousPageURI}">
			<h:outputText value="#{lbl.statistics_btnBack}" styleClass="statisticsBackLink"/>
		</h:outputLink>
		
		<h2>
			<div class="plaindocIcon"></div><div id="valItemStatisitics" class="viewItemTopHeader">
			<h:outputText value="#{lbl.statistics_lblHeader} #{ViewItemStatistics.pubItem.metadata.title.value}" />
			<h:commandButton type="submit" styleClass="helpIcon" image="./resources/escidoc-css/images/PM_help_16.gif" onclick="loadHelp('#{InternationalizationHelper.selectedHelpPage}', '#ItemStatistics');return false"/>
			</div>
		</h2>
		</div>
		
		
		
		<table class="statisticTable">
			<tr>
				<th class="statisticTableLeftCol"> </th>
				
				<th><h:outputText value="#{lbl.statistics_lblAllUsers}" /></th>
				
				<th><h:outputText value="#{lbl.statistics_lblAnonymousUsers}" /></th>
			</tr>
			
			
			<tr>
				<td class="statisticTableLeftCol"><h:outputText value="#{lbl.statistics_lblItemRetrievals}" styleClass="itemStatisticHeader"/></td>
				
				<td><h:outputText value="#{ViewItemStatistics.numberOfItemRetrievalsAllUsers}" /></td>
				
				<td><h:outputText value="#{ViewItemStatistics.numberOfItemRetrievalsAnonymousUsers}" /></td>
			</tr>
		
			<h:panelGroup rendered ="#{ViewItemStatistics.filesAvailable}">
			
				<tr>
					<td class="statisticTableLeftCol">&#160;</td>
					
					<td>&#160;</td>
					
					<td>&#160;</td>
				</tr>
			
				<tr>
					<td class="statisticTableLeftCol"><h:outputText value="#{lbl.statistics_lblAllFiles}" styleClass="itemStatisticHeader"/></td>
					
					<td><h:outputText value="#{ViewItemStatistics.numberOfFileDownloadsPerItemAllUsers}" /></td>
					
					<td><h:outputText value="#{ViewItemStatistics.numberOfFileDownloadsPerItemAnonymousUsers}" /></td>
				</tr>
				
			
			
				<tr:iterator value="#{ViewItemStatistics.fileList}" var="file" binding="#{ViewItemStatistics.fileIterator}" varStatus="index">	
					<tr>
						<td class="statisticTableLeftCol"><h:outputText value="#{lbl.statistics_lblFile} " styleClass="itemStatisticHeader"/><h:outputText value="#{file.file.name}" /></td>
						
						<td><h:outputText value="#{file.numberOfFileDownloadsPerFileAllUsers}" /></td>
						
						<td><h:outputText value="#{file.numberOfFileDownloadsPerFileAnonymousUsers}" /></td>
					</tr>	
				</tr:iterator>	
		
		</h:panelGroup>
		</table>
		
	</f:subview>
</div>