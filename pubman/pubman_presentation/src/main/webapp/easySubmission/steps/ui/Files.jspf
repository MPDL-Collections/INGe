<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f"%>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h"%>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<f:subview id="Source">
	
	<%-- FILES --%>
	<tr:iterator var="component" id="fileUploads" value="#{EasySubmission.files}" binding="#{EasySubmission.fileIterator}" varStatus="index">
     		<h:panelGroup >
     			<h:panelGroup layout="block" styleClass="easySubmissionBoxBodyLine" rendered="#{component.file.defaultMetadata != null and component.file.defaultMetadata.size > 0}">
     			<h:panelGroup layout="block" styleClass="easySubmissionSubBox">
     				<h:panelGroup layout="block" styleClass="easySubmissionFileListBox">
     					<tr:outputLabel value="#{lbl.easy_submission_lblUploaded}"/>
     					<tr:outputLabel value="#{component.file.defaultMetadata.title.value}, "/>		
     				
     					<tr:outputLabel value="#{component.contentCategory}, "/>	
     				
     					<tr:outputLabel value="#{lbl.easy_submission_lblFileVisibility}"/>	
     					<tr:outputLabel value="#{component.visibility}, "/>	
     				
     					<tr:outputLabel value="#{lbl.easy_submission_lblFileFileDescription}"/>
     					<tr:outputLabel value="#{component.file.description}"/>	
     				</h:panelGroup>
					<tr:commandButton styleClass="easySubmissionFileListButton inlineButton" text="#{lbl.easy_submission_btnRemoveFile}" action="#{component.removeFileEasySubmission}"/>	
				</h:panelGroup>
     			</h:panelGroup>
     			
     			<h:panelGroup layout="block" styleClass="easySubmissionSubBox" rendered="#{component.file.defaultMetadata==null || component.file.defaultMetadata.size == 0}">
     				<h3><h:outputText value="#{lbl.EditItem_lblFile}"/></h3>
     				<h:panelGroup layout="block" styleClass="easySubmissionBoxBodySubLine">
     					<h:panelGroup layout="block" styleClass="margin5Right">
     						<tr:outputLabel value="#{lbl.easy_submission_lbleasy_submission_lblFilePath} *"/>
     					</h:panelGroup>
     					<tr:inputFile value="#{EasySubmission.uploadedFile}"/>
     				</h:panelGroup>
     				<h:panelGroup layout="block" styleClass="easySubmissionBoxBodySubLine">
     					<tr:outputLabel value="#{lbl.easy_submission_lblFileProperties}" styleClass="margin5Top"/>
        		  		<h:panelGroup layout="block" styleClass="easySubmissionVisibilityLine">
          					<tr:outputLabel value="#{lbl.easy_submission_lblFileVisibility}"/>
          					<h:selectOneRadio value="#{component.file.visibility}">
           						<f:selectItems value="#{EasySubmission.visibilities}" />
          					</h:selectOneRadio>
          				</h:panelGroup>
          			</h:panelGroup>
          				
          			<h:panelGroup layout="block" styleClass="easySubmissionSubSubBox">
          				<h:panelGroup layout="block" styleClass="easySubmissionBoxBodySubLine" rendered="#{component.file.defaultMetadata==null || component.file.defaultMetadata.size == 0}">
          			
          					<h:panelGroup layout="block" styleClass="easySubmissionBasicSubItem">
          						<tr:outputLabel value="#{lbl.easy_submission_lblFileName} *"/>
          						<tr:inputText value="#{component.file.defaultMetadata.title.value}"/>
          					</h:panelGroup>
          					<h:panelGroup layout="block" styleClass="easySubmissionBasicSubItem">
          						<tr:outputLabel value="#{lbl.easy_submission_lblFileContentCategory} *"/>
          						<h:selectOneMenu id="fileContentCategory" value="#{component.file.contentCategory}">
           							<f:selectItems value="#{EasySubmission.contentCategories}" />
          						</h:selectOneMenu>
          					</h:panelGroup>
          				
          				</h:panelGroup>
          				<h:panelGroup layout="block" styleClass="easySubmissionBoxBodySubLine" rendered="#{component.file.defaultMetadata==null || component.file.defaultMetadata.size == 0}">
          					<h:panelGroup layout="block" styleClass="easySubmissionSubSubItem">
          						<tr:outputLabel value="#{lbl.easy_submission_lblFileDescription}" />
          						<tr:inputText value="#{component.file.description}" rows="4"/>	
          					</h:panelGroup>
          				</h:panelGroup>
          			</h:panelGroup>
         		</h:panelGroup>
         	

					<h:panelGroup layout="block" styleClass="editItemLeftCol easySubmissionBoxBodyLine">
						<h:panelGroup layout="block" styleClass="icon addIcon" rendered="#{EasySubmission.fileIterator.rowIndex+1 ==  EasySubmission.fileIterator.rowCount}"/>
						<tr:commandLink text="#{lbl.easy_submission_btnAddFile}" action="#{EasySubmission.addFile}" rendered="#{EasySubmission.fileIterator.rowIndex+1 ==  EasySubmission.fileIterator.rowCount}" />
					</h:panelGroup>
        		 	
       	</h:panelGroup>
    </tr:iterator> 
</f:subview>