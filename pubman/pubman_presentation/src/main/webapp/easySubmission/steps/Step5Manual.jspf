							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_source_basic_source_title_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_title_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:inputTextarea styleClass="quad_txtArea inputTxtArea sourceTitle" value="#{EasySubmission.sourceTitle}" cols="15" rows="3" required="#{genre.sources_source_basic_source_title_optional != 'true'}"/>
						</span>
					</h:panelGroup>

			<%-- Source alternative title copy&paste --%>
					<div class="free_area0 endline itemLine noTopBorder noDisplay">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="auto #{lbl.EditItem_lblAlternativeTitel}" /><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:inputTextarea styleClass="quad_txtArea inputTxtArea sourceAltTitlePasteField" value="#{EasySubmission.hiddenAlternativeTitlesField}" cols="15" rows="3" />
						</span>
					</div>

			<%-- Source details publisher, place --%>
					<div class="free_area0 endline itemLine noTopBorder noDisplay">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&nbsp;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><span class="noDisplay"> </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<span class="xDouble_area0 tiny_marginRIncl">
								<h:outputLabel styleClass="xDouble_label" value="#{lbl.EditItem_lblPublisher}" />
								<h:inputTextarea styleClass="xDouble_txtArea inputTxtArea publisher" value="#{EasySubmission.sourcePublisher}" cols="15" rows="3" />
							</span>
							<span class="large_area0 xTiny_marginRIncl">
								<h:outputLabel styleClass="large_label" value="#{lbl.EditItem_lblPlace}"/>
								<h:inputText styleClass="large_txtInput place" value="#{EasySubmission.sourcePublisherPlace}" />
							</span>
						</span>
					</div>

			<%-- Source details identifier copy&paste --%>
					<div class="free_area0 endline itemLine noTopBorder noDisplay">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="auto #{lbl.EditItem_lblIdentifier}" /><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:inputTextarea styleClass="quad_txtArea inputTxtArea sourceIdentifierPasteField" value="#{EasySubmission.hiddenIdsField}" cols="15" rows="3" />
						</span>
					</div>


				</div>
			</h:panelGroup>
		</div>

	<div class="free_area0 xTiny_marginLIncl"><h:outputText value="* #{msg.mandatoryField}" /></div>

	</div>
</div>
