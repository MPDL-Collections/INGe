				&#160;
			<!-- Subheadline ends here -->
		</div>
	</div>
</div>			
<div class="full_area0">
	<div class="full_area0 fullItem">
		<h:panelGroup layout="block" styleClass="full_area0 easySubmissionHeader" >
			<span class="small_area0 endline">
				&nbsp;
			</span>
			<span class="seperator"></span>
			<span class="endline huge_area0_p7 step">
				<b>
					<h:outputText value="#{lbl.easy_submission_lblStep}"/> 1
				</b>
			</span>
			<span class="seperator"></span>
			<span class="endline huge_area0_p7 step">
				<b>
					<h:outputText value="#{lbl.easy_submission_lblStep}"/> 2
				</b>
			</span>
			<span class="seperator"></span>
			<span class="endline huge_area0_p7 step">
				<b class="actual">
					<h:outputText value="#{lbl.easy_submission_lblStep}"/> 3
				</b>
			</span>
		</h:panelGroup>
		<div class="full_area0 itemBlock">
			<h3 class="xLarge_area0_p8 endline blockHeader">
				<h:outputText value="#{genre.details_label}" converter="GenreLabelConverter"/>
			</h3>
			<span class="seperator"></span>
			<div class="free_area0 itemBlockContent endline">

		<%-- Language of Publication --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.details_item_language_display != 'false' && genre.details_item_language_form_id != 'full-submission' || genre.details_item_language_display != 'true' && genre.details_item_language_form_id != 'easy-submission'&& genre.details_item_language_form_id != 'all'}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.details_item_language_item_language_optional != 'true'}"/><h:outputText value="#{genre.details_item_language_item_language_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<input type="text" class="large_txtInput tiny_marginRIncl languageSuggest" />
						<h:selectOneMenu styleClass="xDouble_select replace" value="#{EasySubmission.publicationLanguage}" onchange="$(this).parents('.itemLine').find('.languageSuggest').val('');">
							<f:selectItems value="#{EasySubmission.publicationLanguages}"/>
						</h:selectOneMenu>
					</span>
				</h:panelGroup>
		
		<%-- Dates --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.details_item_details_dates_display != 'false' && genre.details_item_details_dates_form_id != 'full-submission' || genre.details_item_details_dates_display != 'true' && genre.details_item_details_dates_form_id != 'easy-submission' && genre.details_item_details_dates_form_id != 'all'}">
