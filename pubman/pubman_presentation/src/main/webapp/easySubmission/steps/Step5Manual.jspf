						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.details_total_number_of_pages_item_total_number_of_pages_optional != 'true'}" /><span class="noDisplay"> </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<span class="large_area0 tiny_marginRIncl">
							<h:outputLabel styleClass="large_label" for="txtTotalNoOfPages" id="lblTotalNoOfPages" value="#{genre.details_total_number_of_pages_item_total_number_of_pages_label}" converter="GenreLabelConverter"/>
							<h:inputText styleClass="large_txtInput" id="txtTotalNoOfPages" value="#{ItemControllerSessionBean.currentPubItem.metadata.totalNumberOfPages}" required="#{genre.details_total_number_of_pages_item_total_number_of_pages_optional != 'true'}"/>
						</span>
					</span>
				</h:panelGroup>
		
		<%-- Publisher, Place --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.details_publishing_info_display != 'false' && genre.details_publishing_info_form_id != 'full-submission' || genre.details_publishing_info_display != 'true' && genre.details_publishing_info_form_id != 'easy-submission'&& genre.details_publishing_info_form_id != 'all'}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.details_publishing_info_publishing_info_publisher_optional != 'true' || genre.details_publishing_info_publishing_info_place_optional != 'true'}" /><span class="noDisplay"> </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<span class="xDouble_area0 tiny_marginRIncl">
							<h:outputLabel styleClass="xDouble_label" id="lblPublisher" for="txtaPublisher" value="#{genre.details_publishing_info_publishing_info_publisher_label}" converter="GenreLabelConverter"/>
							<h:inputTextarea styleClass="xDouble_txtArea inputTxtArea" id="txtaPublisher" value="#{ItemControllerSessionBean.currentPubItem.metadata.publishingInfo.publisher}" cols="15" rows="3" />
						</span>
						<span class="large_area0 tiny_marginRIncl">
							<h:outputLabel styleClass="large_label" id="lblPlace" for="txtPlace" value="#{genre.details_publishing_info_publishing_info_place_label}" converter="GenreLabelConverter"/>
							<h:inputText styleClass="large_txtInput" id="txtPlace" value="#{ItemControllerSessionBean.currentPubItem.metadata.publishingInfo.place}" />
						</span>
					</span>
				</h:panelGroup>
		
		<!-- Identifier -->
				<h:panelGroup layout="block" rendered="#{genre.details_identifiers_display != 'false' && genre.details_identifiers_form_id != 'full-submission' || genre.details_identifiers_display != 'true' && genre.details_identifiers_form_id != 'easy-submission'&& genre.details_identifiers_form_id != 'all'}">
					<tr:iterator var="identifier" value="#{EasySubmission.identifierCollection.identifierManager.objectDM}" binding="#{EasySubmission.identifierIterator}" varStatus="index">
						<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
							
							<b class="xLarge_area0_p8 endline labelLine clear">
								&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.details_identifiers_optional != 'true'}" /><h:outputText value="#{genre.details_identifiers_label}" converter="GenreLabelConverter" rendered="#{EasySubmission.identifierIterator.rowIndex == 0}" /><span class="noDisplay">: </span>
							</b>
							
							<span class="xHuge_area0 xTiny_marginLExcl endline">
								<span class="large_area0 largeFormPush">
									<h:outputLabel styleClass="large_label" value="#{genre.details_identifiers_item_identifier_type_label}" converter="GenreLabelConverter"/>
									<h:selectOneMenu styleClass="large_select replace" value="#{identifier.typeString}">
										<f:selectItems value="#{EasySubmission.identifierCollection.identifierTypes}"/>
									</h:selectOneMenu>
								</span>
								<h:outputLabel styleClass="xDouble_label" value="#{genre.details_identifiers_item_identifier_value_label}" converter="GenreLabelConverter"/>
								<h:inputText styleClass="xDouble_txtInput" value="#{identifier.id}" />
							</span>
							<span class="large_area0_p8 lineToolSection">
								<tr:commandButton styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.easy_submission_addID}" action="#{EasySubmission.identifierCollection.identifierManager.addObject}" rendered="#{genre.details_identifiers_repeatable != 'false'}"/>
								<tr:commandButton styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.easy_submission_removeID}" action="#{EasySubmission.identifierCollection.identifierManager.removeObject}" disabled="#{EasySubmission.identifierCollection.identifierManager.size == 1}" rendered="#{genre.details_identifiers_repeatable != 'false'}"/>
							</span>
						</h:panelGroup>
					</tr:iterator>
				</h:panelGroup>

		<%-- Edition, Degree type, location --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.details_item_degree_display != 'false' && genre.details_item_degree_form_id != 'full-submission' || genre.details_item_degree_display != 'true' && genre.details_item_degree_form_id != 'easy-submission'&& genre.details_item_degree_form_id != 'all'}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.details_item_degree_item_degree_optional != 'true'}" /><h:outputText value="#{genre.details_item_degree_label}" converter="GenreLabelConverter"/><span class="noDisplay"> </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<span class="large_area0 tiny_marginRIncl">
							<h:outputLabel styleClass="large_label" for="cboDegreeType" id="lblDegreeType" value="#{genre.details_item_degree_item_degree_label}" converter="GenreLabelConverter"/>
							<h:selectOneMenu styleClass="large_select replace" id="cboDegreeType" value="#{ItemControllerSessionBean.currentPubItem.metadata.degree}" required="#{genre.details_item_degree_item_degree_optional != 'true'}">
								<f:selectItems value="#{EasySubmission.degreeTypes}" />
							</h:selectOneMenu>
						</span>
					</span>
				</h:panelGroup>

			</div>
		</div>

		<h:panelGroup layout="block" styleClass="full_area0 itemBlock" rendered="#{genre.events_display != 'false' && genre.events_form_id != 'full-submission' || genre.events_display != 'true' && genre.events_form_id != 'easy-submission'&& genre.events_form_id != 'all'}">
			<h3 class="xLarge_area0_p8 endline blockHeader">
				<h:outputText value="#{genre.events_label}" converter="GenreLabelConverter"/>
			</h3>
			<span class="seperator"></span>

<%-- no Event section at the moment --%>
			<div class="free_area0 itemBlockContent endline">
		<!-- Event title -->
				<div class="free_area0 endline itemLine noTopBorder">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_title_optional != 'true'}" /><h:outputText value="#{genre.events_event_title_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:inputTextarea styleClass="quad_txtArea inputTxtArea" value="#{EasySubmission.eventTitleCollection.titleIF.title.value}" cols="15" rows="3" required="#{genre.events_event_title_optional != 'true'}"/>
					</span>
					<span class="large_area0_p8 lineToolSection">
						<h:commandButton title="#{tip.easy_submission_addTitle}" styleClass="min_imgBtn groupTool add" value=" " action="#{EasySubmission.eventTitleCollection.addTitle}" rendered="#{genre.events_event_title_repeatable != 'false'}"/>
						<h:commandButton title="#{tip.easy_submission_removeTitle}" styleClass="min_imgBtn groupTool remove" value=" " disabled="#{EasySubmission.eventTitleCollection.alternativeTitleManager.size == 0}" action="#{EasySubmission.eventTitleCollection.removeTitle}" rendered="#{genre.events_event_title_repeatable != 'false'}"/>
					</span>
				</div>
		
		<!-- Alternative event title -->
				<tr:iterator var="altTitle" value="#{EasySubmission.eventTitleCollection.alternativeTitleManager.objectDM}">
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.events_event_title_alternative_display != 'false'}">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_title_alternative_optional != 'true'}" /><h:outputText value="#{genre.events_event_title_alternative_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:inputTextarea styleClass="quad_txtArea inputTxtArea" value="#{altTitle.value}" cols="15" rows="3" required="#{genre.events_event_title_alternative_optional != 'true'}"/>
						</span>
						<span class="large_area0_p8 lineToolSection">
							<tr:commandButton styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.easy_submission_addAltTitle}" action="#{EasySubmission.eventTitleCollection.alternativeTitleManager.addObject}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
							<tr:commandButton styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.easy_submission_removeAltTitle}" action="#{EasySubmission.eventTitleCollection.alternativeTitleManager.removeObject}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
						</span>
					</h:panelGroup>
				</tr:iterator>
		
		<!-- Event place, Event start date, Event end date -->
				<div class="free_area0 endline itemLine noTopBorder">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_place_optional != 'true' || genre.events_event_start_date_optional != 'true' || genre.events_event_end_date_optional != 'true' || genre.events_event_invitation_status_optional != 'true'}" /><span class="noDisplay"> </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<span class="medium_area0 xTiny_marginRIncl">
							<h:outputLabel styleClass="medium_label" id="lblEventPlace" for="txtEventPlace" value="#{genre.events_event_place_label}" converter="GenreLabelConverter"/>
							<h:inputText styleClass="medium_txtInput" id="txtEventPlace" value="#{ItemControllerSessionBean.currentPubItem.metadata.event.place.value}" required="#{genre.events_event_place_optional != 'true'}"/>
						</span>
						<span class="medium_area0 xTiny_marginRIncl">
							<h:outputLabel styleClass="medium_label" id="lblEventStartDate" for="txtEventStartDate" value="#{genre.events_event_start_date_label}" converter="GenreLabelConverter"/>	
							<h:inputText styleClass="medium_txtInput dateJSInput" id="txtEventStartDate" value="#{ItemControllerSessionBean.currentPubItem.metadata.event.startDate}" required="#{genre.events_event_start_date_optional != 'true'}"/>
						</span>
						<span class="medium_area0 xTiny_marginRIncl">
							<h:outputLabel styleClass="medium_label" id="lblEventEndDate" for="txtEventEndDate" value="#{genre.events_event_end_date_label}" converter="GenreLabelConverter"/>	
							<h:inputText styleClass="medium_txtInput dateJSInput" id="txtEventEndDate" value="#{ItemControllerSessionBean.currentPubItem.metadata.event.endDate}" required="#{genre.events_event_end_date_optional != 'true'}"/>
						</span>
						<span class="medium_area0 toLabelBottom">
							<span class="medium_checkbox">
								<h:selectBooleanCheckbox id="chkInvitationStatus" value="#{EasySubmission.invited}" />
								<h:outputLabel id="lblInvitationStatus" for="chkInvitationStatus" value="#{genre.events_event_invitation_status_label}" converter="GenreLabelConverter"/>
							</span>
						</span>
					</span>
				</div>
			</h:panelGroup>

			<h:panelGroup layout="block" styleClass="full_area0 itemBlock" rendered="#{genre.sources_display != 'false' && genre.sources_form_id != 'full-submission' || genre.sources_display != 'true' && genre.sources_form_id != 'easy-submission'&& genre.sources_form_id != 'all'}">
				<h3 class="xLarge_area0_p8 endline blockHeader">
					<h:outputText value="#{genre.sources_label}" converter="GenreLabelConverter"/>
				</h3>
				<span class="seperator"></span>
				<div class="free_area0 itemBlockContent endline">

			<%-- Source genre --%>
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.sources_source_basic_source_genre_display != 'false'}">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_source_basic_source_genre_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_genre_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
