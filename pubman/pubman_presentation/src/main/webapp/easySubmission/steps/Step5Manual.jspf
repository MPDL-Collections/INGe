						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:selectOneMenu styleClass="large_select replace journalPulldown" value="#{EasySubmission.source.genre}" valueChangeListener="#{EasySubmission.chooseSourceGenre}" required="#{genre.sources_source_basic_source_genre_display != 'false'}">
								<f:selectItems value="#{EasySubmission.sourceGenreOptions}"/>
							</h:selectOneMenu>
						</span>
					</h:panelGroup>
		
			<%-- Source title --%>
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{genre.sources_source_basic_source_title_display != 'false'}">
