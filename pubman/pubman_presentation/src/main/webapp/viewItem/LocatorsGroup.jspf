<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup id="locators" layout="block" styleClass="full_area0 itemBlock" rendered="#{!ViewItemFull.isStateWithdrawn}">
	<h3 class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{lbl.ViewItemFull_lblSubHeaderLocators}" />
	</h3>
	<span class="seperator"></span>
	<h:panelGroup layout="block" styleClass="free_area0 itemBlockContent endline" rendered="#{ViewItemFull.showLocators}">

		<tr:iterator var="locator" value="#{ViewItemFull.locatorList}" binding="#{ViewItemFull.locatorIterator}" varStatus="index">

			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine newBlock" rendered="#{ViewItemFull.locatorIterator.rowIndex > 0}"/>

<%-- Locator URL --%>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
				<b class="xLarge_area0 endline labelLine">
					<h:outputText value="#{lbl.ViewItemFull_lblLocatorLocation}"/><span class="noDisplay">: <br /></span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:outputLink value="#{locator.locatorLink}" rendered="#{ViewItemFull.isStateWithdrawn == false && locator.locatorIsLink}" target="_blank">
							<h:outputText value="#{locator.fileName}" />
						</h:outputLink>
						<h:outputText value="#{locator.fileName}" rendered="#{ViewItemFull.isStateWithdrawn == false && !locator.locatorIsLink}"/>
						<h:outputText value="#{lbl.ViewItemFull_lblNoAccess}" rendered="#{ViewItemFull.isStateWithdrawn == true}"/>
				</span>
			</h:panelGroup>

<%-- Locator visibility --%>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine">
				<b class="xLarge_area0 endline labelLine">
					<h:outputText value="#{lbl.ViewItemMedium_lblFileVisibility}"/><span class="noDisplay">: <br /></span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputText value="#{locator.visibility}" rendered="#{ViewItemFull.isStateWithdrawn == false}"/>
					<h:outputText value="#{lbl.ViewItemFull_lblWithdrawn}" rendered="#{ViewItemFull.isStateWithdrawn == true}"/>
				</span>
			</h:panelGroup>

<%-- Locator content category --%>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine">
				<b class="xLarge_area0 endline labelLine">
					<h:outputText value="#{lbl.ViewItemMedium_lblFileCategory}"/><span class="noDisplay">: <br /></span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputText value="#{locator.contentCategory}"/>
				</span>
			</h:panelGroup>

<%-- Locator description --%>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine">
				<b class="xLarge_area0 endline labelLine">
					<h:outputText value="#{lbl.ViewItemMedium_lblFileDescription}"/><span class="noDisplay">: <br /></span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputText value="#{locator.file.description}"/>
				</span>
			</h:panelGroup>

		</tr:iterator>

		<a class="free_area0 collapse"><h:outputText value="#{lbl.ViewItemFull_lblHideGroup} #{lbl.ViewItemFull_lblSubHeaderLocators}" /></a>	
	</h:panelGroup>
	<a class="free_area0 expand"><h:outputText value="#{lbl.ViewItemFull_lblShowGroup}  #{lbl.ViewItemFull_lblSubHeaderLocators}" /></a>
</h:panelGroup>