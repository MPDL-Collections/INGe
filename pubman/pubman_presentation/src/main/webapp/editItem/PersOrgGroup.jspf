<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup layout="block" id="editPerson" styleClass="full_area0 itemBlock" rendered="#{!(genre.creator_person_organization_display == 'false' && genre.creator_person_organization_form_id == 'full-submission' || genre.creator_person_organization_display == 'false' && genre.creator_person_organization_form_id == 'all')}">
	<h:panelGroup layout="block" id="editPersonInner" styleClass="free_area0" rendered="#{!(genre.creator_person_organization_creator_display == 'false' && genre.creator_person_organization_creator_form_id == 'full-submission' || genre.creator_person_organization_creator_display == 'false' && genre.creator_person_organization_creator_form_id == 'all')}">
		<h3 class="xLarge_area0_p8 endline blockHeader">
			<h:outputText value="#{genre.creator_person_organization_label}" converter="GenreLabelConverter"/>
		</h3>
		<span class="seperator"></span>
		<div class="free_area0 itemBlockContent endline">
				<input id="btnShowMultipleAuthors" type="button" class="free_txtBtn groupBtn showMultipleAuthors" value="<h:outputText value='#{lbl.submission_lblAuthorCopyPasteLabel}'/>" />
			<%-- Author copy&paste --%>
			<h:panelGroup layout="block" styleClass="free_area0 multipleAuthors">
					<%-- Hidden field for display/non-display Author copy&paste group --%>
				<h:inputHidden id="inpshowAuthorCopyPaste" value="#{EditItemSessionBean.showAuthorCopyPaste}"></h:inputHidden>
						
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" />
						<h:outputText value="#{lbl.submission_lblAuthorCopyPasteLabel}"/>
						<span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:outputText styleClass="quad_area0" value="#{lbl.submission_lblAuthorCopyPaste}" />
						<h:inputTextarea id="inpcreatorParseString" styleClass="xDouble_txtArea tiny_marginRIncl inputTxtArea" value="#{EditItemSessionBean.creatorParseString}" cols="15" rows="3" />
						<span class="large_checkbox">
							<h:selectBooleanCheckbox id="chkOverwriteStatus" value="#{EditItemSessionBean.overwriteCreators}" />
							<h:outputLabel for="chkOverwriteStatus" value="#{lbl.EditItem_btnAddAuthorsOverwrite}" />
						</span>
					</span>
				</h:panelGroup>
	
				<%--Copy&Paste Organisations for Authors--%>
				<tr:iterator id="iterCopyPasteOrganisationAuthors" var="pasteOrga" value="#{EditItemSessionBean.authorCopyPasteOrganizationsCreatorBean.personOrganisationManager.objectDM}">
					<h:panelGroup styleClass="suggestAnchor">
						<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
							<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" />
								<span class="noDisplay"></span>
							</b>
							<span class="xHuge_area0 xTiny_marginLExcl endline">
								<h:panelGroup styleClass="quad_area0">
									<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.creator_person_organization_creator_organizations_organization_name_optional != 'true'}" />
									<h:outputText value="#{genre.creator_person_organization_creator_organizations_organization_name_label}" converter="GenreLabelConverter" />
								</h:panelGroup>
								<h:inputText id="inpPasteOrgaName" styleClass="quad_txtInput organizationSuggest organizationName" value="#{pasteOrga.name.value}"/>
								<h:inputText id="inpPasteOrgaIdentifier" styleClass="noDisplay organizationIdentifier" value="#{pasteOrga.identifier}"/>
							</span>
						</h:panelGroup>
						<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
							<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory organizationAddress" title="#{msg.mandatoryField}" value="*" rendered="#{genre.creator_person_organization_creator_organizations_organization_address_optional != 'true'}" />
								<span class="noDisplay"></span>
							</b>
							<span class="xHuge_area0 xTiny_marginLExcl endline">
								<h:inputTextarea id="inpPasteOrganisation" styleClass="quad_txtArea inputTxtArea" value="#{pasteOrga.address}" cols="15" rows="3" />
							</span>
							<span class="large_area0_p8 lineToolSection">
								<h:commandButton id="btnAddOrganisation" styleClass="min_imgBtn groupTool add" value=" " title="#{tip.EditItem_addOrga}" action="#{EditItemSessionBean.authorCopyPasteOrganizationsCreatorBean.personOrganisationManager.addObject}" rendered="#{genre.creator_person_organization_creator_organizations_repeatable != 'false'}"/>
								<h:commandButton id="btnRemoveOrganisation" styleClass="min_imgBtn groupTool remove" value=" " title="#{tip.EditItem_removeOrga}" disabled="#{EditItemSessionBean.authorCopyPasteOrganizationsCreatorBean.personOrganisationManager.size == 1}" action="#{EditItemSessionBean.authorCopyPasteOrganizationsCreatorBean.personOrganisationManager.removeObject}" rendered="#{genre.creator_person_organization_creator_organizations_repeatable != 'false'}"/>
							</span>
						</h:panelGroup>
					</h:panelGroup>
				</tr:iterator>
				<h:panelGroup styleClass="large_area0_p8 sectionToolSection">
					<h:commandButton id="btnAddAuthors" title="#{tip.EditItem_btnAddAuthors}" styleClass="free_txtBtn groupBtn sectionTool" value="#{lbl.EditItem_btnAddAuthors}" action="#{EditItem.addCreatorString}" />
				</h:panelGroup>
			</h:panelGroup>
		</div>
	</h:panelGroup>
	
	<h:panelGroup layout="block" styleClass="full_area0 xLarge_marginLExcl itemBlockContent endline">
		<h3 class="xLarge_area0_p8 endline blockHeader clear">
			<h:outputText value="" />
		</h3>
		<h:panelGroup styleClass="free_area0 large_marginLExcl itemLine noTopBorder endline" rendered="#{!(genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'all')}">
			<h:outputText styleClass="small_area0 xSmall_marginLExcl" value="#{genre.creator_person_organization_creator_select_roles_label}" converter="GenreLabelConverter"/>
			<h:outputText styleClass="small_area0" value="#{genre.creator_person_organization_creator_select_roles_creator_type_label}" converter="GenreLabelConverter"/>
			<h:outputText styleClass="large_area0" value="#{genre.creator_person_organization_creator_persons_person_family_name_label}" converter="GenreLabelConverter" rendered="#{!(genre.creator_person_organization_creator_persons_person_family_name_display == 'false' && genre.creator_person_organization_creator_persons_person_family_name_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_person_family_name_display == 'false' && genre.creator_person_organization_creator_persons_person_family_name_form_id == 'all')}"/>
			<h:outputText styleClass="large_area0" value="#{genre.creator_person_organization_creator_persons_person_given_name_label}" converter="GenreLabelConverter" rendered="#{!(genre.creator_person_organization_creator_persons_person_given_name_display == 'false' && genre.creator_person_organization_creator_persons_person_given_name_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_person_given_name_display == 'false' && genre.creator_person_organization_creator_persons_person_given_name_form_id == 'all')}"/>
			<h:outputText styleClass="xSmall_area0" value="#{lbl.organizationNumbers}" rendered="#{!(genre.creator_person_organization_creator_organizations_display == 'false' && genre.creator_person_organization_creator_organizations_form_id == 'full-submission' || genre.creator_person_organization_creator_organizations_display == 'false' && genre.creator_person_organization_creator_organizations_form_id == 'all')}"/>
			<h:outputText styleClass="medium_area0" value=" "/>
		</h:panelGroup>
					<span class="free_area0 clear">&nbsp;</span>
		<tr:iterator id="iterCreatorOrganisationAuthors" var="creatorBean" value="#{EditItem.creatorCollection.creatorManager.objectDM}" rows="0">
			<h:panelGroup layout="block" styleClass="suggestAnchor xSmall_marginLExcl">
				<%-- Creator person family name, Creator person given name --%>
				<h:panelGroup layout="block" rendered="#{creatorBean.personType and !(genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'all')}">
					<span class="large_area0 clear">&nbsp;</span>
					<%-- Creator role --%>
					<h:selectOneMenu id="selCreatorRoleString" styleClass="small_select replace" value="#{creatorBean.creator.roleString}" rendered="#{!(genre.creator_person_organization_creator_select_roles_display == 'false' && genre.creator_person_organization_creator_select_roles_form_id == 'full-submission' || genre.creator_person_organization_creator_select_roles_display == 'false' && genre.creator_person_organization_creator_select_roles_form_id == 'all')}">
						<f:selectItems value="#{creatorBean.creatorRoles}"/>
					</h:selectOneMenu>
					<h:selectOneMenu id="selcreatorTypeString" value="#{creatorBean.creator.type}" styleClass="small_select" rendered="#{!(genre.creator_person_organization_creator_select_roles_creator_type_display == 'false' && genre.creator_person_organization_creator_select_roles_creator_type_form_id == 'full-submission' || genre.creator_person_organization_creator_select_roles_creator_type_display == 'false' && genre.creator_person_organization_creator_select_roles_creator_type_form_id == 'all')}" onchange="$('.hiddenButtonPasteOrganizations').click();">
						<f:selectItems value="#{creatorBean.creatorTypes}"/>
					</h:selectOneMenu>
					<h:inputText id="inpcreator_persons_person_family_name_optional" readonly="#{creatorBean.identifierValue != null}" styleClass="large_txtInput personSuggest familyName" value="#{creatorBean.creator.person.familyName}" rendered="#{!(genre.creator_person_organization_creator_persons_person_family_name_display == 'false' && genre.creator_person_organization_creator_persons_person_family_name_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_person_family_name_display == 'false' && genre.creator_person_organization_creator_persons_person_family_name_form_id == 'all')}"/>
					<h:inputText id="inppersons_person_given_name_optional" readonly="#{creatorBean.identifierValue != null}" styleClass="large_txtInput givenName" value="#{creatorBean.creator.person.givenName}"/>
					<h:inputText id="inppersons_person_ous_optional" styleClass="xSmall_txtInput" value="#{creatorBean.ouNumbers}"/>
					<h:inputText id="inppersons_identifier" styleClass="noDisplay personIdentifier" value="#{creatorBean.identifierValue}"/>
					<h:inputText id="inpcreator_hidden_organizations" styleClass="noDisplay organizationPasteField" value="#{creatorBean.autoPasteValue}"/>
					<h:outputLink styleClass="small_area0 authorCard authorLink" value="#{creatorBean.identifierValue}" rendered="#{creatorBean.identifierValue != null}" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h:outputLink>
					<h:panelGroup rendered="#{creatorBean.identifierValue == null}" styleClass="xSmall_area0 authorLink">&nbsp;</h:panelGroup>
					<h:panelGroup styleClass="large_area0_p8 lineToolSection">
						<tr:commandButton id="btnAddCreator" shortDesc="#{tip.EditItem_addCreator}" styleClass="min_imgBtn groupTool add" action="#{EditItem.creatorCollection.creatorManager.addObject}" rendered="#{genre.creator_person_organization_repeatable != 'false'}"/>
						<tr:commandButton id="btnRemoveCreator" shortDesc="#{tip.EditItem_removeCreator}" styleClass="min_imgBtn groupTool remove" disabled="#{EditItem.creatorCollection.creatorManager.size == 1}" action="#{EditItem.creatorCollection.creatorManager.removeObject}" rendered="#{genre.creator_person_organization_repeatable != 'false'}"/>
					</h:panelGroup>
				</h:panelGroup>
				
		<%-- If Organization is Creator --%>
				<h:panelGroup styleClass="full_area0 endline suggestAnchor" layout="block" rendered="#{creatorBean.organisationType and !(genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'all')}">
					<%-- Creator role --%>
					<span class="large_area0">&nbsp;</span>
					<h:selectOneMenu id="selCreatorOrgRoleString" styleClass="small_select replace" value="#{creatorBean.creator.roleString}" rendered="#{!(genre.creator_person_organization_creator_select_roles_display == 'false' && genre.creator_person_organization_creator_select_roles_form_id == 'full-submission' || genre.creator_person_organization_creator_select_roles_display == 'false' && genre.creator_person_organization_creator_select_roles_form_id == 'all')}">
						<f:selectItems value="#{creatorBean.creatorRoles}"/>
					</h:selectOneMenu>
					<h:selectOneMenu id="selcreatorOrgTypeString" styleClass="small_select" rendered="#{!(genre.creator_person_organization_creator_select_roles_creator_type_display == 'false' && genre.creator_person_organization_creator_select_roles_creator_type_form_id == 'full-submission' || genre.creator_person_organization_creator_select_roles_creator_type_display == 'false' && genre.creator_person_organization_creator_select_roles_creator_type_form_id == 'all')}" value="#{creatorBean.creator.typeString}" onchange="$('.hiddenButtonPasteOrganizations').click();">
						<f:selectItems value="#{creatorBean.creatorTypes}"/>
					</h:selectOneMenu>
					<h:inputText id="inpcreator_organization_name_optional" styleClass="huge_txtInput organizationSuggest organizationName xSmall_marginRExcl" value="#{creatorBean.creator.organization.name.value}" rendered="#{!(genre.creator_person_organization_creator_organizations_organization_name_display == 'false' && genre.creator_person_organization_creator_organizations_organization_name_form_id == 'full-submission' || genre.creator_person_organization_creator_organizations_organization_name_display == 'false' && genre.creator_person_organization_creator_organizations_organization_name_form_id == 'all')}"/>
					<h:inputText id="inpcreator_organization_identifier_optional" styleClass="noDisplay organizationIdentifier small_marginRExcl" value="#{creatorBean.creator.organization.identifier}"/>
				
					<h:outputLink styleClass="small_area0 ouCard ouLink" rendered="#{creatorBean.creator.organization.identifier != null}" value="#" onclick="openCenteredWindow('AffiliationDetailPage.jsp?id=#{creatorBean.creator.organization.identifier}', 980, 400, 'Details');return false"></h:outputLink>
						<h:panelGroup rendered="#{creatorBean.creator.organization.identifier == null}" styleClass="xSmall_area0 ouLink">
						</h:panelGroup>
					<h:panelGroup styleClass="xSmall_marginLExcl">
						<tr:commandButton id="btnAddCreatorOrg" shortDesc="#{tip.EditItem_addCreator}" styleClass="min_imgBtn groupTool add" action="#{EditItem.creatorCollection.creatorManager.addObject}" rendered="#{genre.creator_person_organization_repeatable != 'false'}"/>
						<tr:commandButton id="btnRemoveCreatorOrg" shortDesc="#{tip.EditItem_removeCreator}" styleClass="min_imgBtn groupTool remove" disabled="#{EditItem.creatorCollection.creatorManager.size == 1}" action="#{EditItem.creatorCollection.creatorManager.removeObject}" rendered="#{genre.creator_person_organization_repeatable != 'false'}"/>
					</h:panelGroup>
				</h:panelGroup>

			</h:panelGroup>
		</tr:iterator>
		<span class="large_area0 clear">&nbsp;</span>				
		<h:commandButton styleClass="noDisplay hiddenButtonPasteOrganizations" action="#{EditItemSessionBean.readPastedOrganizations}"/>
		
		<!-- Creator Organizations - Headline -->
		<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'all')}">
			<span class="large_area0 clear">&nbsp;</span>
			<h:outputText styleClass="xSmall_area0 xSmall_marginLExcl" value=""/>
			<h:outputText styleClass="huge_area0 xSmall_marginLExcl" value="#{lbl.EditItem_lblOrganization}"/>
			<h:outputText styleClass="xLarge_area0" value="#{lbl.EditItem_lblOrganizationAddress}"/>
		</h:panelGroup>

		<tr:iterator id="iterCreatorOrganisation" var="organization" value="#{EditItemSessionBean.creatorOrganizations}" rows="0" rendered="#{!(genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'full-submission' || genre.creator_person_organization_creator_persons_display == 'false' && genre.creator_person_organization_creator_persons_form_id == 'all')}">
			<h:panelGroup layout="block" styleClass="suggestAnchor personOrganizations">
			
				<span class="large_area0 clear">&nbsp;</span>
				<span style="text-align: right";><h:outputText styleClass="xSmall_area0" value="#{organization.number}"/></span>
				<h:inputText id="inporganizations_organization_name" styleClass="huge_txtInput organizationSuggest organizationName" value="#{organization.name.value}"/>
				<h:inputText id="inporganizations_organization_identifier" styleClass="noDisplay organizationIdentifier" value="#{organization.identifier}"/>
				<h:inputText id="inporganizations_organization_address" styleClass="xLarge_txtInput organizationAddress" value="#{organization.address}"/>
				<h:outputLink styleClass="small_area0 ouCard ouLink" rendered="#{organization.identifier != null}" value="#" onclick="openCenteredWindow('AffiliationDetailPage.jsp?id=#{organization.identifier}', 980, 400, 'Details');return false">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h:outputLink>
				<h:panelGroup rendered="#{organization.identifier == null}" styleClass="xSmall_area0 ouLink">&nbsp;</h:panelGroup>					
				<h:panelGroup styleClass="large_area0_p8 lineToolSection">
					<tr:commandButton id="btnAddCreatorPersonAffiliation" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.EditItem_addOrga}" action="#{organization.add}" rendered="#{genre.creator_person_organization_creator_organizations_repeatable != 'false'}"/>
					<tr:commandButton id="btnRemoveCreatorPersonAffiliation" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.EditItem_removeOrga}" disabled="#{EditItemSessionBean.organizationCount == 1}" action="#{organization.remove}" rendered="#{genre.creator_person_organization_creator_organizations_repeatable != 'false'}"/>
				</h:panelGroup>
			</h:panelGroup>
		</tr:iterator>
		<a class="free_area0 collapse">
			<h:outputText value="#{lbl.ViewItemFull_lblHideGroup}" />
			<h:outputText value="#{genre.creator_person_organization_label}" converter="GenreLabelConverter" />
		</a>
	</h:panelGroup>
	<a class="free_area0 expand">
		<h:outputText value="#{lbl.ViewItemFull_lblShowGroup}" />
		<h:outputText value="#{genre.creator_person_organization_label}" converter="GenreLabelConverter" />
	</a>
</h:panelGroup>