<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup layout="block" styleClass="full_area0" id="editSource" rendered="#{!(genre.sources_display == 'false' && genre.sources_form_id == 'full-submission' || genre.sources_display == 'false' && genre.sources_form_id == 'all')}">
	<tr:iterator var="sourceBean" value="#{EditItemSessionBean.sources}">
		<h:panelGroup layout="block" styleClass="full_area0 itemBlock free_area0" >
			<h3 class="xLarge_area0_p8 endline blockHeader">
				<h:outputText value="#{genre.sources_label}" converter="GenreLabelConverter"/> <h:outputText value="#{sourceBean.position + 1}" />
			</h3>
			<span class="seperator"></span>
			<div class="free_area0 itemBlockContent endline">
			<h:panelGroup layout="block" rendered="#{!(genre.sources_source_basic_display == 'false' && genre.sources_source_basic_form_id == 'full-submission' || genre.sources_source_basic_display == 'false' && genre.sources_source_basic_form_id == 'all')}">
		<%-- Source genre --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_basic_source_genre_display == 'false' && genre.sources_source_basic_source_genre_form_id == 'full-submission' || genre.sources_source_basic_source_genre_display == 'false' && genre.sources_source_basic_source_genre_form_id == 'all')}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_basic_optional != 'true' && genre.sources_source_basic_source_genre_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_genre_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:selectOneMenu id="selChooseSourceGenre" styleClass="large_select replace journalPulldown" value="#{sourceBean.source.genre}" valueChangeListener="#{sourceBean.chooseSourceGenre}">
							<f:selectItems value="#{sourceBean.sourceGenreOptions}"/>
						</h:selectOneMenu>
					</span>
					<span class="huge_area0_p8 lineToolSection sourcesControls">
						<tr:commandButton id="btnAddEditItem_btRemoveSource" styleClass="min_imgBtn groupBtn remove sectionTool" text=" " shortDesc="#{tip.EditItem_btRemoveSource}" action="#{sourceBean.remove}" disabled="#{sourceBean.singleElement}" rendered="#{genre.sources_repeatable != 'false'}"/>
						<tr:commandButton id="btnRemoveEditItem_btRemoveSource" styleClass="min_imgBtn groupBtn add sectionTool" text=" " shortDesc="#{tip.EditItem_btAddSource}" action="#{sourceBean.add}" rendered="#{genre.sources_repeatable != 'false'}"/>
					</span>
				</h:panelGroup>
	
		<%-- Source title --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline ite mLine noTopBorder" rendered="#{!(genre.sources_source_basic_source_title_display == 'false' && genre.sources_source_basic_source_title_form_id == 'full-submission' || genre.sources_source_basic_source_title_display == 'false' && genre.sources_source_basic_source_title_form_id == 'all')}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_basic_optional != 'true' && genre.sources_source_basic_source_title_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_title_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:inputTextarea id="inpSourceTitle_Journal" styleClass="quad_txtArea inputTxtArea sourceTitle#{sourceBean.journalSuggestClass}" value="#{sourceBean.titleCollection.titleIF.title.value}" cols="15" rows="3"/>
					</span>
					<span class="large_area0_p8 lineToolSection">
						<tr:commandButton id="btnAddSourceTitle" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btAdd}" action="#{sourceBean.titleCollection.addTitle}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{!((genre.sources_source_basic_source_title_alternative_repeatable != 'false') || (genre.sources_source_basic_source_title_alternative_repeatable != 'true' && sourceBean.titleCollection.alternativeTitleManager.size != 1))}"/>
						<tr:commandButton id="btnRemoveSourceTitle" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btRemove}" action="#{sourceBean.titleCollection.removeTitle}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{sourceBean.titleCollection.alternativeTitleManager.size == 0}" />
					</span>
				</h:panelGroup>
				
		<%-- Source alternative title copy&paste --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder noDisplay">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="auto #{lbl.EditItem_lblAlternativeTitel}" /><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:inputTextarea id="inpSourceAlternativeTitleCopy" styleClass="quad_txtArea inputTxtArea sourceAltTitlePasteField" value="#{sourceBean.hiddenAlternativeTitlesField}" cols="15" rows="3" />
					</span>
				</h:panelGroup>
	
		<%-- Source alternative title --%>
				<tr:iterator id="iterSourceGroupAlternativeTitle" var="altTitle" value="#{sourceBean.titleCollection.alternativeTitleManager.objectDM}" rendered="#{!(genre.sources_source_basic_source_title_alternative_display == 'false' && genre.sources_source_basic_source_title_alternative_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_display == 'false' && genre.sources_source_basic_source_title_alternative_form_id == 'all')}">
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_source_basic_source_title_alternative_optional != 'true' && (genre.sources_source_basic_source_title_alternative_source_title_alternative_type_optional != 'true' || genre.sources_source_basic_source_title_alternative_source_title_alternative_value_optional != 'true')}" />
							<h:outputText value="#{genre.sources_source_basic_source_title_alternative_label}" rendered="#{sourceBean.titleCollection.alternativeTitleManager.objectDM.rowIndex == 0}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:panelGroup styleClass="large_area0 largeFormPush" rendered="#{!(genre.sources_source_basic_source_title_alternative_source_title_alternative_type_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_type_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_source_title_alternative_type_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_type_form_id == 'all')}">
								<h:outputLabel id="lblSelectAltTitleType" styleClass="large_label" value="#{genre.sources_source_basic_source_title_alternative_source_title_alternative_type_label}" converter="GenreLabelConverter"/>
								<h:selectOneMenu id="selSelectAlternativeTitleType" styleClass="large_select replace" value="#{altTitle.type}" >
									<f:selectItems value="#{sourceBean.titleCollection.alternativeTitleManager.alternativeTitleTypes}"/>
								</h:selectOneMenu>
							</h:panelGroup>
							<h:panelGroup rendered="#{!(genre.sources_source_basic_source_title_alternative_source_title_alternative_value_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_value_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_source_title_alternative_value_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_value_form_id == 'all')}">
								<h:outputLabel id="lblAltTitleValue" styleClass="xDouble_label" value="#{genre.sources_source_basic_source_title_alternative_source_title_alternative_value_label}" converter="GenreLabelConverter"/>
								<h:inputTextarea id="inpAltTitleValue" styleClass="xDouble_txtArea inputTxtArea" value="#{altTitle.value}" />
							</h:panelGroup>
						</span>
						<span class="large_area0_p8 lineToolSection">
							<tr:commandButton id="btnAddDetails" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btAdd}" action="#{sourceBean.titleCollection.alternativeTitleManager.addObject}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{!(genre.sources_source_basic_source_title_alternative_repeatable == 'true')}"/>
							<tr:commandButton id="btnRemoveDetails" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btRemove}" action="#{sourceBean.titleCollection.alternativeTitleManager.removeObject}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{sourceBean.titleCollection.alternativeTitleManager.size == 0}" />
						</span>
					</h:panelGroup>
				</tr:iterator>
				
			</h:panelGroup>
	<%-- Source creator --%>
		
				<h3 class="xLarge_area0_p8 endline blockHeader clear">
					<h:outputText value="#{genre.creator_person_organization_label}" converter="GenreLabelConverter"/>
				</h3>
				<span class="itemBlockContent">&nbsp;</span>
				<h:panelGroup styleClass="free_area0 large_marginLExcl itemLine noTopBorder endline" rendered="#{!(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">
					<h:outputText styleClass="small_area0 xSmall_marginLExcl" value="#{genre.creator_person_organization_creator_select_roles_label}" converter="GenreLabelConverter"/>
					<h:outputText styleClass="small_area0" value="#{genre.creator_person_organization_creator_select_roles_creator_type_label}" converter="GenreLabelConverter"/>
					<h:outputText styleClass="large_area0" value="#{genre.creator_person_organization_creator_persons_person_family_name_label}" converter="GenreLabelConverter" rendered="#{!(genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'all')}"/>
					<h:outputText styleClass="large_area0" value="#{genre.creator_person_organization_creator_persons_person_given_name_label}" converter="GenreLabelConverter" rendered="#{!(genre.sources_source_person_organization_source_persons_person_given_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_given_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_person_given_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_given_name_form_id == 'all')}"/>
					<h:outputText styleClass="xSmall_area0" value="#{lbl.organizationNumbers}" rendered="#{!(genre.sources_source_person_organization_source_organizations_display == 'false' && genre.sources_source_person_organization_source_organizations_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_display == 'false' && genre.sources_source_person_organization_source_organizations_form_id == 'all')}"/>
					<h:outputText styleClass="medium_area0" value=" "/>
				</h:panelGroup>
		
				<tr:iterator id="iterCreatorOrganisationAuthors" var="creator" value="#{sourceBean.creators}" rows="0">
					<h:panelGroup layout="block" styleClass="suggestAnchor xSmall_marginLExcl">
						<%-- Creator person family name, Creator person given name --%>
						<h:panelGroup layout="block" styleClass="full_area0 endline personArea" rendered="#{creator.personType and !(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">
							<span class="large_area0 clear">&nbsp;</span>
							<%-- Creator role --%>
							<h:selectOneMenu id="selCreatorRoleString" styleClass="small_select replace" value="#{creator.roleString}" rendered="#{!(genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'all')}">
								<f:selectItems value="#{sourceBean.creatorRoles}"/>
							</h:selectOneMenu>
							<h:selectOneMenu id="selcreatorTypeString" value="#{creator.typeString}" styleClass="small_select" rendered="#{!(genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'all')}" onchange="$('.hiddenButtonPasteOrganizations').click();">
								<f:selectItems value="#{sourceBean.creatorTypes}"/>
							</h:selectOneMenu>
							<h:inputText id="inpcreator_persons_person_family_name_optional" styleClass="large_txtInput personSuggest familyName" value="#{creator.person.familyName}" rendered="#{!(genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'all')}"/>
							<h:inputText id="inppersons_person_given_name_optional" styleClass="large_txtInput givenName" value="#{creator.person.givenName}"/>
							<h:inputText id="inpcreator_hidden_organizations" styleClass="noDisplay organizationPasteField" value="#{creator.autoPasteValue}"/>
							<tr:commandButton id="btnAddCreatorOrganization" styleClass="noDisplay hiddenButtonPasteOrganizations" action="#{creator.addOrganization}"/>
							<h:inputText id="inppersons_person_ous_optional" styleClass="xSmall_txtInput ouNumber" value="#{creator.ouNumbers}"/>
							<h:inputText id="inppersons_identifier" styleClass="noDisplay personIdentifier" value="#{creator.person.identifier.id}"/>
							<h:outputLink styleClass="small_area0 authorCard authorLink" value="#{creator.person.identifier.id}" rendered="#{creator.person.identifier.id != null and creator.person.identifier.id != ''}" target="_blank">&nbsp;</h:outputLink>
							<h:panelGroup rendered="#{creator.person.identifier.id == null || creator.person.identifier.id == ''}" styleClass="xSmall_area0 authorLink">&nbsp;</h:panelGroup>
							<h:panelGroup styleClass="large_area0_p8">
								<tr:commandButton id="btnAddCreator" shortDesc="#{tip.EditItem_addCreator}" styleClass="min_imgBtn groupTool add" action="#{creator.add}" rendered="#{genre.sources_source_person_organization_repeatable != 'false'}"/>
								<tr:commandButton id="btnRemoveCreator" shortDesc="#{tip.EditItem_removeCreator}" styleClass="min_imgBtn groupTool remove" disabled="#{creator.singleCreator}" action="#{creator.remove}" rendered="#{genre.sources_source_person_organization_repeatable != 'false'}"/>
							</h:panelGroup>
						</h:panelGroup>
				<%-- If Organization is Creator --%>
						<h:panelGroup styleClass="full_area0 endline suggestAnchor" layout="block" rendered="#{creator.organizationType and !(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">
							<%-- Creator role --%>
							<span class="large_area0">&nbsp;</span>
							<h:selectOneMenu id="selCreatorOrgRoleString" styleClass="small_select replace" value="#{creator.roleString}" rendered="#{!(genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'all')}">
								<f:selectItems value="#{sourceBean.creatorRoles}"/>
							</h:selectOneMenu>
							<h:selectOneMenu id="selcreatorOrgTypeString" styleClass="small_select" value="#{creator.typeString}" rendered="#{!(genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'all')}" onchange="$('.hiddenButtonPasteOrganizations').click();">
								<f:selectItems value="#{sourceBean.creatorTypes}"/>
							</h:selectOneMenu>
							<h:inputText id="inpcreator_organization_name_optional" styleClass="huge_txtInput organizationSuggest organizationName xSmall_marginRExcl" value="#{creator.organization.name.value}" rendered="#{!(genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'all')}"/>
							<h:inputText id="inpcreator_organization_identifier_optional" styleClass="noDisplay organizationIdentifier small_marginRExcl" value="#{creator.organization.identifier}"/>
						
							<h:outputLink styleClass="small_area0 ouCard ouLink" rendered="#{creator.organization.identifier != null and creator.organization.identifier != ''}" value="#" onclick="openCenteredWindow('AffiliationDetailPage.jsp?id=#{creator.organization.identifier}', 980, 400, 'Details');return false"></h:outputLink>
								<h:panelGroup rendered="#{creator.organization.identifier == null || creator.organization.identifier == ''}" styleClass="xSmall_area0 ouLink">&nbsp;</h:panelGroup>
							<h:panelGroup styleClass="large_area0_p8">
								<tr:commandButton id="btnAddCreatorOrg" shortDesc="#{tip.EditItem_addCreator}" styleClass="min_imgBtn groupTool add" action="#{creator.add}" rendered="#{genre.sources_source_person_organization_repeatable != 'false'}"/>
								<tr:commandButton id="btnRemoveCreatorOrg" shortDesc="#{tip.EditItem_removeCreator}" styleClass="min_imgBtn groupTool remove" disabled="#{creator.singleCreator}" action="#{creator.remove}" rendered="#{genre.sources_source_person_organization_repeatable != 'false'}"/>
							</h:panelGroup>
						</h:panelGroup>
			
					</h:panelGroup>
				</tr:iterator>
				<span class="large_area0 clear">&nbsp;</span>				

				<!-- Creator Organizations - Headline -->
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">
					<span class="large_area0 clear">&nbsp;</span>
					<h:outputText styleClass="xSmall_area0 xSmall_marginLExcl" value=""/>
					<h:outputText styleClass="huge_area0 xSmall_marginLExcl" value="#{lbl.EditItem_lblOrganization}"/>
					<h:outputText styleClass="xLarge_area0" value="#{lbl.EditItem_lblOrganizationAddress}"/>
				</h:panelGroup>
		
				<tr:iterator id="iterCreatorOrganisation" var="organization" value="#{sourceBean.creatorOrganizations}" rows="0" rendered="#{!(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">
					<h:panelGroup layout="block" styleClass="suggestAnchor personOrganizations large_marginLExcl clear">
						<h:outputText styleClass="xSmall_area0" value="#{organization.number}"/>
						<h:inputText id="inporganizations_organization_name" styleClass="huge_txtInput organizationSuggest organizationName" value="#{organization.name.value}"/>
						<h:inputText id="inporganizations_organization_identifier" styleClass="noDisplay organizationIdentifier" value="#{organization.identifier}"/>
						<h:inputText id="inporganizations_organization_address" styleClass="xLarge_txtInput organizationAddress" value="#{organization.address}"/>
						<h:outputLink styleClass="small_area0 ouCard ouLink" rendered="#{organization.identifier != null and organization.identifier != ''}" value="#" onclick="openCenteredWindow('AffiliationDetailPage.jsp?id=#{organization.identifier}', 980, 400, 'Details');return false">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h:outputLink>
						<h:panelGroup rendered="#{organization.identifier == null || organization.identifier == ''}" styleClass="xSmall_area0 ouLink">&nbsp;</h:panelGroup>					
						<h:panelGroup styleClass="large_area0_p8 lineToolSection">
							<tr:commandButton id="btnAddCreatorPersonAffiliation" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.EditItem_addOrga}" action="#{organization.add}" rendered="#{genre.sources_source_person_organization_source_organizations_repeatable != 'false'}"/>
							<tr:commandButton id="btnRemoveCreatorPersonAffiliation" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.EditItem_removeOrga}" disabled="#{sourceBean.organizationCount == 1}" action="#{organization.remove}" rendered="#{genre.sources_source_person_organization_source_organizations_repeatable != 'false'}"/>
						</h:panelGroup>
					</h:panelGroup>
				</tr:iterator>
	
	<%-- Source Details --%>
	
		<%-- Source details volume --%>
				<h:panelGroup layout="block" rendered="#{!(genre.sources_source_volume_issue_pages_display == 'false' && genre.sources_source_volume_issue_pages_form_id == 'full-submission' || genre.sources_source_volume_issue_pages_display == 'false' && genre.sources_source_volume_issue_pages_form_id == 'all')}">
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine" rendered="#{!(genre.sources_source_volume_issue_pages_source_volume_display == 'false' && genre.sources_source_volume_issue_pages_source_volume_form_id == 'full-submission' || genre.sources_source_volume_issue_pages_source_volume_display == 'false' && genre.sources_source_volume_issue_pages_source_volume_form_id == 'all')}">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="#{genre.sources_source_volume_issue_pages_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<span class="large_area0">
								<span class="large_area0">
									<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_source_volume_issue_pages_source_volume_optional != 'true'}" />
