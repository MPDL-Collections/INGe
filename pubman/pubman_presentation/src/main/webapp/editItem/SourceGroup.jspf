<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup rendered="#{!(genre.sources_display == 'false' && genre.sources_form_id == 'full-submission' || genre.sources_display == 'false' && genre.sources_form_id == 'all')}">
	<h:dataTable id="editSource" styleClass="free_area0" var="sourceBean" value="#{EditItem.sourceCollection.sourceManager.objectDM}">
	    <h:column>
		<h:panelGroup layout="block" styleClass="full_area0 itemBlock" >
			<h3 class="xLarge_area0_p8 endline blockHeader">
				<h:outputText value="#{genre.sources_label}" converter="GenreLabelConverter"/> <h:outputText value="#{EditItem.sourceCollection.sourceManager.objectDM.rowIndex+1}" />
			</h3>
			<span class="seperator"></span>
			<div class="free_area0 itemBlockContent endline">
			<h:panelGroup layout="block" rendered="#{!(genre.sources_source_basic_display == 'false' && genre.sources_source_basic_form_id == 'full-submission' || genre.sources_source_basic_display == 'false' && genre.sources_source_basic_form_id == 'all')}">
		<%-- Source genre --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_basic_source_genre_display == 'false' && genre.sources_source_basic_source_genre_form_id == 'full-submission' || genre.sources_source_basic_source_genre_display == 'false' && genre.sources_source_basic_source_genre_form_id == 'all')}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_basic_optional != 'true' && genre.sources_source_basic_source_genre_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_genre_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:selectOneMenu id="selChooseSourceGenre" styleClass="large_select replace journalPulldown" value="#{sourceBean.source.genre}" valueChangeListener="#{sourceBean.chooseSourceGenre}">
							<f:selectItems value="#{sourceBean.sourceGenreOptions}"/>
						</h:selectOneMenu>
					</span>
					<span class="huge_area0_p8 lineToolSection sourcesControls">
						<tr:commandButton id="btnAddEditItem_btRemoveSource" styleClass="min_imgBtn groupBtn remove sectionTool" text=" " shortDesc="#{tip.EditItem_btRemoveSource}" action="#{EditItem.sourceCollection.sourceManager.removeObject}" disabled="#{EditItem.sourceCollection.sourceManager.size == 1}" rendered="#{genre.sources_repeatable != 'false'}"/>
						<tr:commandButton id="btnRemoveEditItem_btRemoveSource" styleClass="min_imgBtn groupBtn add sectionTool" text=" " shortDesc="#{tip.EditItem_btAddSource}" action="#{EditItem.sourceCollection.sourceManager.addObject}" rendered="#{genre.sources_repeatable != 'false'}"/>
					</span>
				</h:panelGroup>
	
		<%-- Source title --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline ite mLine noTopBorder" rendered="#{!(genre.sources_source_basic_source_title_display == 'false' && genre.sources_source_basic_source_title_form_id == 'full-submission' || genre.sources_source_basic_source_title_display == 'false' && genre.sources_source_basic_source_title_form_id == 'all')}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_basic_optional != 'true' && genre.sources_source_basic_source_title_optional != 'true'}" /><h:outputText value="#{genre.sources_source_basic_source_title_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:inputTextarea id="inpSourceTitle" styleClass="quad_txtArea inputTxtArea sourceTitle" value="#{sourceBean.titleCollection.titleIF.title.value}" cols="15" rows="3" />
					</span>
					<span class="large_area0_p8 lineToolSection">
						<tr:commandButton id="btnAddSourceTitle" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btAdd}" action="#{sourceBean.titleCollection.addTitle}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{!((genre.sources_source_basic_source_title_alternative_repeatable != 'false') || (genre.sources_source_basic_source_title_alternative_repeatable != 'true' && sourceBean.titleCollection.alternativeTitleManager.size != 1))}"/>
						<tr:commandButton id="btnRemoveSourceTitle" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btRemove}" action="#{sourceBean.titleCollection.removeTitle}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{sourceBean.titleCollection.alternativeTitleManager.size == 0}" />
					</span>
				</h:panelGroup>
				
		<%-- Source alternative title copy&paste --%>
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder noDisplay">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="auto #{lbl.EditItem_lblAlternativeTitel}" /><span class="noDisplay">: </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<h:inputTextarea id="inpSourceAlternativeTitleCopy" styleClass="quad_txtArea inputTxtArea sourceAltTitlePasteField" value="#{sourceBean.hiddenAlternativeTitlesField}" cols="15" rows="3" />
					</span>
				</h:panelGroup>
	
		<%-- Source alternative title --%>
				<tr:iterator id="iterSourceGroupAlternativeTitle" var="altTitle" value="#{sourceBean.titleCollection.alternativeTitleManager.objectDM}" rendered="#{!(genre.sources_source_basic_source_title_alternative_display == 'false' && genre.sources_source_basic_source_title_alternative_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_display == 'false' && genre.sources_source_basic_source_title_alternative_form_id == 'all')}">
					<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
						<b class="xLarge_area0_p8 endline labelLine clear">
							&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_source_basic_source_title_alternative_optional != 'true' && (genre.sources_source_basic_source_title_alternative_source_title_alternative_type_optional != 'true' || genre.sources_source_basic_source_title_alternative_source_title_alternative_value_optional != 'true')}" />
							<h:outputText value="#{genre.sources_source_basic_source_title_alternative_label}" rendered="#{sourceBean.titleCollection.alternativeTitleManager.objectDM.rowIndex == 0}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
						</b>
						<span class="xHuge_area0 xTiny_marginLExcl endline">
							<h:panelGroup styleClass="large_area0 largeFormPush" rendered="#{!(genre.sources_source_basic_source_title_alternative_source_title_alternative_type_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_type_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_source_title_alternative_type_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_type_form_id == 'all')}">
								<h:outputLabel id="lblSelectAltTitleType" styleClass="large_label" value="#{genre.sources_source_basic_source_title_alternative_source_title_alternative_type_label}" converter="GenreLabelConverter"/>
								<h:selectOneMenu id="selSelectAlternativeTitleType" styleClass="large_select replace" value="#{altTitle.type}" >
									<f:selectItems value="#{sourceBean.titleCollection.alternativeTitleManager.alternativeTitleTypes}"/>
								</h:selectOneMenu>
							</h:panelGroup>
							<h:panelGroup rendered="#{!(genre.sources_source_basic_source_title_alternative_source_title_alternative_value_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_value_form_id == 'full-submission' || genre.sources_source_basic_source_title_alternative_source_title_alternative_value_display == 'false' && genre.sources_source_basic_source_title_alternative_source_title_alternative_value_form_id == 'all')}">
								<h:outputLabel id="lblAltTitleValue" styleClass="xDouble_label" value="#{genre.sources_source_basic_source_title_alternative_source_title_alternative_value_label}" converter="GenreLabelConverter"/>
								<h:inputTextarea id="inpAltTitleValue" styleClass="xDouble_txtArea inputTxtArea" value="#{altTitle.value}" />
							</h:panelGroup>
						</span>
						<span class="large_area0_p8 lineToolSection">
							<tr:commandButton id="btnAddDetails" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btAdd}" action="#{sourceBean.titleCollection.alternativeTitleManager.addObject}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{!(genre.sources_source_basic_source_title_alternative_repeatable == 'true')}"/>
							<tr:commandButton id="btnRemoveDetails" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{lbl.EditItem_lblAlternativeTitel} #{tip.EditItem_btRemove}" action="#{sourceBean.titleCollection.alternativeTitleManager.removeObject}" rendered="#{genre.sources_source_basic_source_title_alternative_display != 'false'}" disabled="#{sourceBean.titleCollection.alternativeTitleManager.size == 0}" />
						</span>
					</h:panelGroup>
				</tr:iterator>
				
			</h:panelGroup>
	<%-- Source creator --%>
				<h:panelGroup layout="block" rendered="#{!(genre.sources_source_person_organization_display == 'false' && genre.sources_source_person_organization_form_id == 'full-submission' || genre.sources_source_person_organization_display == 'false' && genre.sources_source_person_organization_form_id == 'all')}">
					<h:dataTable id="iterSourceGroupCreator" styleClass="free_area0" var="creatorBean" value="#{sourceBean.creatorCollection.creatorManager.objectDM}" >
		            <h:column>
						<div class="suggestAnchor">
							<h:panelGroup layout="block" styleClass="free_area0 endline itemLine multipleAuthors" rendered="#{sourceBean.creatorCollection.creatorManager.objectDM.rowIndex == 0}">
								<b class="xLarge_area0_p8 endline labelLine clear">
									&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="#{lbl.submission_lblAuthorCopyPasteLabel}"/><span class="noDisplay">: </span>
								</b>
								<span class="xHuge_area0 xTiny_marginLExcl endline">
									<h:outputText styleClass="quad_area0" value="#{lbl.submission_lblAuthorCopyPaste}" />
									<h:inputTextarea id="inpSourceCreatorParseString" styleClass="xDouble_txtArea tiny_marginRIncl inputTxtArea" value="#{sourceBean.creatorParseString}" cols="15" rows="3" />
									<span class="large_checkbox">
										<h:selectBooleanCheckbox id="chkOverwriteStatus" value="#{sourceBean.overwriteCreators}" />
										<h:outputLabel id="txtOverwriteStatus" for="chkOverwriteStatus" value="#{lbl.EditItem_btnAddAuthorsOverwrite}" />
									</span>
									<h:commandButton id="btnAddAuthors" title="#{tip.EditItem_btnAddAuthors}" styleClass="free_txtBtn groupBtn toTextAreaBottom" value="#{lbl.EditItem_btnAddAuthors}" action="#{sourceBean.addCreatorString}" />
								</span>
							</h:panelGroup>
				
				<%-- Source creator role --%>
							<h:panelGroup layout="block" styleClass="free_area0 endline itemLine" rendered="#{!(genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_display == 'false' && genre.sources_source_person_organization_select_roles_form_id == 'all')}">
								<b class="xLarge_area0_p8 endline labelLine clear">
									&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_select_roles_optional != 'true'}" /><h:outputText value="#{genre.sources_source_person_organization_select_roles_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
								</b>
								<span class="xHuge_area0 xTiny_marginLExcl endline">
									<h:selectOneMenu id="selSourceCreatorRole" styleClass="large_select replace" value="#{creatorBean.creator.roleString}" >
										<f:selectItems value="#{creatorBean.creatorRoles}"/>
									</h:selectOneMenu>
								</span>
								<h:panelGroup styleClass="large_area0_p8 lineToolSection" rendered="#{sourceBean.creatorCollection.creatorManager.objectDM.rowIndex == 0}">
									<input id="inSourceCreatorRole" type="button" class="free_txtBtn groupBtn showMultipleAuthors" value="<h:outputText value='#{lbl.submission_lblAuthorCopyPasteLabel}'/>" />
								</h:panelGroup>
							</h:panelGroup>
			
				<%-- Source creator type --%>
							<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_select_roles_creator_type_form_id == 'all')}">
								<b class="xLarge_area0_p8 endline labelLine clear">
									&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_select_roles_creator_type_optional != 'true'}" /><h:outputText value="#{genre.sources_source_person_organization_select_roles_creator_type_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
								</b>
								<span class="xHuge_area0 xTiny_marginLExcl endline">
									<h:selectOneRadio id="selSourceCreatorType" styleClass="medium_radioBtn double_area0" value="#{creatorBean.creator.typeString}" 
										valueChangeListener="#{creatorBean.processCreatorTypeChanged}" onclick="submit(); fullItemReload();" >
										<f:selectItems value="#{creatorBean.creatorTypes}"/>
									</h:selectOneRadio>
								</span>
							</h:panelGroup>
			
				<%-- Source creator person family name, Creator person given name --%>
							<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{creatorBean.personType && !(genre.sources_source_person_organization_source_persons_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'full-submission' || genre.sources_source_person_organization_select_roles_creator_type_display == 'false' && genre.sources_source_person_organization_source_persons_form_id == 'all')}">				
								<b class="xLarge_area0_p8 endline labelLine clear">
									&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><span class="noDisplay"> </span>
								</b>
								<span class="xHuge_area0 xTiny_marginLExcl endline">
									<h:panelGroup styleClass="double_area0 xTiny_marginRIncl" rendered="#{!(genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_person_family_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_family_name_form_id == 'all')}">
										<h:panelGroup styleClass="double_area0">
											<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_source_persons_person_family_name_optional != 'true'}" />
											<h:outputText value="#{genre.sources_source_person_organization_source_persons_person_family_name_label}" converter="GenreLabelConverter"/>
										</h:panelGroup>
										<h:inputText id="inpSourceCreatorNameOptional" styleClass="double_txtInput personSuggest familyName" value="#{creatorBean.creator.person.familyName}" />
									</h:panelGroup>
									<h:panelGroup styleClass="double_area0" rendered="#{!(genre.sources_source_person_organization_source_persons_person_given_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_given_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_persons_person_given_name_display == 'false' && genre.sources_source_person_organization_source_persons_person_given_name_form_id == 'all')}">
										<h:panelGroup styleClass="double_area0">
											<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_source_persons_person_given_name_optional != 'true'}" />
											<h:outputText value="#{genre.sources_source_person_organization_source_persons_person_given_name_label}" converter="GenreLabelConverter"/>
										</h:panelGroup>
										<h:inputText id="inpSourceCreatorGivenName" styleClass="double_txtInput givenName" value="#{creatorBean.creator.person.givenName}" />
										<h:inputText id="inpSourceCreatorIdentifier" styleClass="noDisplay personIdentifier" value="#{creatorBean.identifierValue}"/>
									</h:panelGroup>
								</span>
							</h:panelGroup>
			
				<%-- Source creator person affiliation --%>
							<h:panelGroup layout="block" rendered="#{!(genre.sources_source_person_organization_source_organizations_display == 'false' && genre.sources_source_person_organization_source_organizations_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_display == 'false' && genre.sources_source_person_organization_source_organizations_form_id == 'all')}">
								<h:dataTable id="iterSourceCreatorPersonAffiliation" styleClass="free_area0" var="persOrga" value="#{creatorBean.personOrganisationManager.objectDM}" rendered="#{creatorBean.personType && genre.sources_source_person_organization_source_persons_display != 'false'}">
									<h:column>
									<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'all')}">
										<b class="xLarge_area0_p8 endline labelLine clear">
											&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><span class="noDisplay"> </span>
										</b>
										<span class="xHuge_area0 xTiny_marginLExcl endline">
											<h:panelGroup styleClass="quad_area0">
												<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_source_organizations_organization_name_optional != 'true'}" />
												<h:outputText value="#{genre.sources_source_person_organization_source_organizations_organization_name_label}" converter="GenreLabelConverter" />
											</h:panelGroup>
											<h:inputText id="inpSourceCreatorPersonAffiliationName" styleClass="quad_txtInput orgName" value="#{persOrga.name.value}" />
											<h:inputText id="inpSourceCreatorPersonAffiliationIdentifier" styleClass="noDisplay orgIdentifier" value="#{persOrga.identifier}"/>
										</span>
										<span class="large_area0_p8 lineToolSection">
											<tr:commandButton id="btnSourceCreatorPersonAffiliation" styleClass="free_txtBtn groupBtn" text="#{lbl.EditItem_btSelect}" shortDesc="#{tip.EditItem_btSelect}" action="#{creatorBean.selectPersonOrganisation}" />
										</span>
									</h:panelGroup>
									<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.sources_source_person_organization_source_organizations_organization_address_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_address_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_organization_address_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_address_form_id == 'all')}">
										<b class="xLarge_area0_p8 endline labelLine clear">
											&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.sources_optional != 'true' && genre.sources_source_person_organization_source_organizations_organization_address_optional != 'true'}" /><span class="noDisplay"> </span>
										</b>
										<span class="xHuge_area0 xTiny_marginLExcl endline">
											<h:inputTextarea id="inpSourceCreatorPersonAffiliationAddress" styleClass="quad_txtArea inputTxtArea" value="#{persOrga.address}" cols="15" rows="3" />	
										</span>
										<span class="large_area0_p8 lineToolSection">
											<tr:commandButton id="btnAddSourceCreatorPersonAffiliation" styleClass="min_imgBtn groupTool add" text=" " shortDesc="#{tip.EditItem_addOrga}" action="#{creatorBean.personOrganisationManager.addObject}" rendered="#{genre.sources_source_person_organization_source_organizations_repeatable != 'false'}"/>
											<tr:commandButton id="btnRemoveSourceCreatorPersonAffiliation" styleClass="min_imgBtn groupTool remove" text=" " shortDesc="#{tip.EditItem_removeOrga}" disabled="#{creatorBean.personOrganisationManager.size == 1}" action="#{creatorBean.personOrganisationManager.removeObject}" rendered="#{genre.sources_source_person_organization_source_organizations_repeatable != 'false'}"/>
										</span>
									</h:panelGroup>
									</h:column>
								</h:dataTable>
							</h:panelGroup>
				<%-- Source creator organisation affiliation --%>
							<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{creatorBean.organisationType && !(genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'full-submission' || genre.sources_source_person_organization_source_organizations_organization_name_display == 'false' && genre.sources_source_person_organization_source_organizations_organization_name_form_id == 'all')}">
								<b class="xLarge_area0_p8 endline labelLine clear">
									&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><span class="noDisplay"> </span>
								</b>
								<span class="xHuge_area0 xTiny_marginLExcl endline">
									<h:panelGroup styleClass="quad_area0">
										<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{creatorBean.organisationType && genre.sources_optional != 'true' && genre.sources_source_person_organization_source_organizations_organization_name_optional != 'true'}" />
										<h:outputText value="#{genre.sources_source_person_organization_source_organizations_organization_name_label}" converter="GenreLabelConverter" />
									</h:panelGroup>
									<h:inputText id="inpSourceCreatorOrgaAffiliationName" styleClass="quad_txtInput" value="#{creatorBean.creator.organization.name.value}" />
								</span>
								<span class="large_area0_p8 lineToolSection">
									<tr:commandButton id="btnSourceCreatorOrgaAffiliation" styleClass="free_txtBtn groupBtn" text="#{lbl.EditItem_btSelect}" shortDesc="#{tip.EditItem_btSelect}" action="#{creatorBean.selectOrganisation}" />
