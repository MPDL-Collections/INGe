<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://richfaces.org/rich" prefix="rich" %> <%@ taglib uri="http://richfaces.org/a4j" prefix="a4j" %>

<h:panelGroup layout="block" id="editEvent" styleClass="full_area0 itemBlock" rendered="#{EditItem.pubItem!=null and !(genre.events_display == 'false' && genre.events_form_id == 'full-submission' || genre.events_display == 'false' && genre.events_form_id == 'all')}">
	<h3 class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{genre.events_label}" converter="GenreLabelConverter"/>
	</h3>
	<span class="seperator"></span>
	<a class="free_area0 expand"><h:outputText value="#{lbl.ViewItemFull_lblShowGroup} " /></a>
	<div class="free_area0 itemBlockContent endline">
		<a class="free_area0 collapse"><h:outputText value="#{lbl.ViewItemFull_lblHideGroup} " /></a>

<%-- Event title --%>
		<h:panelGroup styleClass="free_area0 endline itemLine noTopBorder" rendered="#{!(genre.events_event_title_display == 'false' && genre.events_event_title_form_id == 'full-submission' || genre.events_event_title_display == 'false' && genre.events_event_title_form_id == 'all')}">
			<b class="xLarge_area0_p8 endline labelLine clear">
				&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_title_optional != 'true'}" /><h:outputText value="#{genre.events_event_title_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
			</b>
			<span class="xHuge_area0 xTiny_marginLExcl endline">
				<h:inputTextarea id="inpEventTitle" styleClass="quad_txtArea inputTxtArea" value="#{EditItem.eventTitleCollection.titleIF.title.value}" cols="15" rows="3" />
			</span>
			<span class="large_area0_p8 lineToolSection">
				<a4j:commandButton reRender="editEvent" id="btnAddEventTitle" title="#{tip.EditItem_addTitle}" styleClass="min_imgBtn groupTool add" value=" " action="#{EditItem.eventTitleCollection.addTitle}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
				<a4j:commandButton reRender="editEvent" id="btnRemoveEventTitle" title="#{tip.EditItem_removeTitle}" styleClass="min_imgBtn groupTool remove" value=" " disabled="#{EditItem.eventTitleCollection.alternativeTitleManager.size == 0}" action="#{EditItem.eventTitleCollection.removeTitle}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
			</span>
		</h:panelGroup>

<%-- Alternative event title --%>
		<a4j:repeat id="iterAlternativeEventTitle" var="altTitle" value="#{EditItem.eventTitleCollection.alternativeTitleManager.objectDM}" rendered="#{!(genre.events_event_title_alternative_display == 'false' && genre.events_event_title_alternative_form_id == 'full-submission' || genre.events_event_title_alternative_display == 'false' && genre.events_event_title_alternative_form_id == 'all')}">
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_title_alternative_optional != 'true'}" /><h:outputText value="#{genre.events_event_title_alternative_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:inputTextarea id="inpAlternateEventTitle" styleClass="quad_txtArea inputTxtArea" value="#{altTitle.value}" cols="15" rows="3" />
				</span>
				<span class="large_area0_p8 lineToolSection">
					<a4j:commandButton reRender="editEvent" id="btnAddAlternateEventTitle" styleClass="min_imgBtn groupTool add" value=" " title="#{tip.EditItem_addAltTitle}" action="#{EditItem.eventTitleCollection.alternativeTitleManager.addObject}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
					<a4j:commandButton reRender="editEvent" id="btnRemoveAlternateEventTitle" styleClass="min_imgBtn groupTool remove" value=" " title="#{tip.EditItem_removeAltTitle}" action="#{EditItem.eventTitleCollection.alternativeTitleManager.removeObject}" rendered="#{genre.events_event_title_alternative_repeatable != 'false'}"/>
				</span>
			</h:panelGroup>
		</a4j:repeat>

<%-- Event place, Event start date, Event end date --%>
		<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">
			<b class="xLarge_area0_p8 endline labelLine clear">
				&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><span class="noDisplay"> </span>
			</b>
			<span class="xHuge_area0 xTiny_marginLExcl endline">
				<h:panelGroup styleClass="medium_area0 xTiny_marginRIncl" rendered="#{!(genre.events_event_place_display == 'false' && genre.events_event_place_form_id == 'full-submission' || genre.events_event_place_display == 'false' && genre.events_event_place_form_id == 'all')}">
					<h:panelGroup styleClass="medium_area0">
						<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_place_optional != 'true'}" />
						<h:outputText value="#{genre.events_event_place_label}" converter="GenreLabelConverter"/>
					</h:panelGroup>
					<h:inputText styleClass="medium_txtInput" id="txtEventPlace" value="#{EditItem.pubItem.metadata.event.place.value}" />
				</h:panelGroup>
				<h:panelGroup styleClass="medium_area0 xTiny_marginRIncl" rendered="#{!(genre.events_event_start_date_display == 'false' && genre.events_event_start_date_form_id == 'full-submission' || genre.events_event_start_date_display == 'false' && genre.events_event_start_date_form_id == 'all')}">
					<h:panelGroup styleClass="medium_area0">
						<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_start_date_optional != 'true'}" />
						<h:outputText value="#{genre.events_event_start_date_label}"  converter="GenreLabelConverter"/>
					</h:panelGroup>
					<h:inputText styleClass="medium_txtInput dateJSInput" id="txtEventStartDate" value="#{EditItem.pubItem.metadata.event.startDate}" />
				</h:panelGroup>
				<h:panelGroup styleClass="medium_area0 xTiny_marginRIncl" rendered="#{!(genre.events_event_end_date_display == 'false' && genre.events_event_end_date_form_id == 'full-submission' || genre.events_event_end_date_display == 'false' && genre.events_event_end_date_form_id == 'all')}">
					<h:panelGroup styleClass="medium_area0">
						<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.events_event_end_date_optional != 'true'}" />
						<h:outputText value="#{genre.events_event_end_date_label}"  converter="GenreLabelConverter"/>
					</h:panelGroup>
					<h:inputText styleClass="medium_txtInput dateJSInput" id="txtEventEndDate" value="#{EditItem.pubItem.metadata.event.endDate}" />
				</h:panelGroup>
				<h:panelGroup styleClass="medium_area0 toLabelBottom" rendered="#{!(genre.events_event_invitation_status_display == 'false' && genre.events_event_invitation_status_form_id == 'full-submission' || genre.events_event_invitation_status_display == 'false' && genre.events_event_invitation_status_form_id == 'all')}">
					<span class="medium_checkbox">
						<h:selectBooleanCheckbox id="chkInvitationStatus" value="#{EditItem.invited}" />
						<h:outputLabel id="lblInvitationStatus" for="chkInvitationStatus" value="#{genre.events_event_invitation_status_label}" converter="GenreLabelConverter"/>
					</span>
				</h:panelGroup>
			</span>
		</h:panelGroup>
	</div>
</h:panelGroup>