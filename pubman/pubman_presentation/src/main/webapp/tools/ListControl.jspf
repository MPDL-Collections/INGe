<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<f:loadBundle var="lbl" basename="Label"/>

<h:panelGroup> 
	<%/* panTitleBar */%>
	<h:panelGroup> 
		<%@ include file="PaginatorControlTop.jspf"%>
		<div class="listHeader dark">
			<%/* panItemListControls */%>
			<h:panelGroup>
				<h:selectOneMenu style="min-width:75px;" value="#{ListControlSessionBean.selectMultipleItems}" onchange="submit()"
					valueChangeListener="#{ListControlSessionBean.processSelectMultipleItemsChanged}">
					<f:selectItems value="#{ListControlSessionBean.selectMultipleItemOptions}"/>
				</h:selectOneMenu>
				<h:outputText value="#{lbl.ItemList_SortBy}" style="margin-left:5px; margin-right:5px;"/>
				<h:selectOneMenu style="min-width:75px;" value="#{ListControlSessionBean.selectSortBy}" onchange="submit()"
					valueChangeListener="#{ListControlSessionBean.processSelectSortByChanged}">
					<f:selectItems value="#{ListControlSessionBean.selectSortByOptions}"/>
				</h:selectOneMenu>
				<h:outputText value="#{lbl.ItemList_SortOrderAscending}" style="margin-left:5px; margin-right:5px;" rendered="#{ListControlSessionBean.sortOrderAscending}"/>
				<h:commandButton image="images/sort_icon_descending.jpg" rendered="#{ListControlSessionBean.sortOrderAscending}"
					action="#{ListControlSessionBean.sortButtonAction}" actionListener="#{ListControlSessionBean.sortButtonPressed}" />
				<h:outputText value="#{lbl.ItemList_SortOrderDescending}" style="margin-left:5px; margin-right:5px;" rendered="#{!ListControlSessionBean.sortOrderAscending}"/>
				<h:commandButton image="images/sort_icon_ascending.jpg" rendered="#{!ListControlSessionBean.sortOrderAscending}"
					action="#{ListControlSessionBean.sortButtonAction}" actionListener="#{ListControlSessionBean.sortButtonPressed}" />
				<div class="displayControls">
					<h:outputText value="#{lbl.ItemList_Details}" style="margin-right:5px;"/>
					<h:commandButton image="images/short_view_item.jpg" 
						action="#{ListControlSessionBean.shortButtonAction}" actionListener="#{ListControlSessionBean.shortButtonPressed}" />
					<h:commandButton image="images/medium_view_item.jpg" 
						action="#{ListControlSessionBean.mediumButtonAction}" actionListener="#{ListControlSessionBean.mediumButtonPressed}" />
				</div>
			</h:panelGroup>
		</div>
	</h:panelGroup>
	
	<%/* panContainer */%>
	<h:panelGroup>

		
		<% /* this is the place where you can include your list representation */ %>


	</h:panelGroup>

	<%/* panFooter */%>
	<h:panelGroup> 
		<%@ include file="PaginatorControlBottom.jspf"%>
	</h:panelGroup>

</h:panelGroup>
