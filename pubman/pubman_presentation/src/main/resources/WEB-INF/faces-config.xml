<faces-config>

  <!-- Set default locale and add supported locales here... -->
  <application>
		<message-bundle>
		de.mpg.escidoc.pubman.bundle.Label_de</message-bundle>
		<message-bundle>
		de.mpg.escidoc.pubman.bundle.Label_en</message-bundle>
		<message-bundle>
		de.mpg.escidoc.pubman.bundle.Messages_de</message-bundle>
		<message-bundle>
		de.mpg.escidoc.pubman.bundle.Messages_en</message-bundle>
		<locale-config>
		   <default-locale>en</default-locale>
		   <supported-locale>de</supported-locale>
		</locale-config>
	</application>


	<lifecycle>
		<phase-listener id="debugRenderResponse">de.mpg.escidoc.pubman.util.RenderResponsePhaseListener</phase-listener>
	</lifecycle>


 	<converter>
  		<converter-id>EnumConverter</converter-id>
