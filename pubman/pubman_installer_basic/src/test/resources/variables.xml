      <entry key="java.io.tmpdir">" condition="!izpack.macinstall</entry>
      <!-- JDBC jar (absolute path) -->
      <entry key="DatabaseDriver">${jdbc.driver.postgres}</entry>
     
      <!-- database driver class -->
      <entry key="DatabaseDriverClass">${DatabaseDriverClassPostgres}</entry>
      
      <!-- database identifier for JDBC URL -->
      <entry key="DatabaseIdentifier">postgresql</entry>
      
      <entry key="DatabaseURL">jdbc:${DatabaseIdentifier}://${DatabaseHost}:${DatabasePortPostgres}</entry> 
      
      <entry key="DatabasePort">${DatabasePortPostgres}</entry>
      
      <entry key="DatabaseAdminUsername">${DatabaseAdminUsernamePostgres}</entry>
     
      <!-- database max prepared statements -->
      
      <entry key="DatabaseMaxStatements">${DatabaseMaxStatementsPostgres}</entry>
      
      <entry key="DatabaseMaxStatementsPerConnection">${DatabaseMaxStatementsPerConnectionPostgres}</entry>
      <!-- PostgreSQL requires a root database to which one needs to connected to be able to create database and roles -->
      <entry key="DatabaseAccessor">DirectPostgresDatabaseAccessor</entry>
      
      <!-- PostgreSQL requires autocommit to be switched on, MySQL doesn't understand this parameter -->
      <entry key="DatabaseAutocommit">autocommit=&quot;true&quot;</entry>
      
      <!-- name of the subdirectory containing the SQL scripts -->
      <entry key="DatabaseScriptPrefix">postgres</entry>      
      <entry key="DatasourceEscidoc">escidoc-core</entry>     
      <entry key="DatasourceFedora">fedora3</entry>  
      <entry key="DatasourceTriplestore">riTriples</entry>      
      <entry key="HibernateDialect">PostgreSQLDialect</entry>      
      <entry key="TriplestoreUsername">${FedoraUsername}</entry>      
      <entry key="TriplestorePassword">${FedoraPassword}</entry>
      
      <!-- DDLGenerator for MPTStore -->
      <entry key="DDLGeneratorClass">org.nsdl.mptstore.impl.postgres.PostgresDDLGenerator</entry>
      
      <!-- format of SQL scripts -->
      <entry key="SqlScriptDelimiter">${SqlScriptDelimiterPostgres}</entry>      
      <entry key="SqlScriptDelimiterType">${SqlScriptDelimiterTypePostgres}</entry>      
      <entry key="SqlScriptKeepFormat">${SqlScriptKeepFormatPostgres}</entry>
    
      <!-- Oracle doesn't know about a "boolean" datatype -->
      <entry key="SqlTrue">true</entry>
      
</properties>