<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<userInput>
    <!-- Install -->
    <panel order="0">
        <!-- Coreservice credentials -->
        <createForPack name="PubMan" />
        <field type="title" txt="Coreservice credentials" bold="true" size="1" />
        <field type="divider" align="top" />
        <!-- Underlying RDBMS -->
        <field type="staticText" align="left"
            txt="The URL of the server you are using for for the coreservice installation. The installer requires 'up and running' coreservice installation." />
        <field type="staticText" align="left" txt="Please use this form: http://hostname.domain:port" />
        <field type="text" align="left" variable="CoreserviceUrl">
            <spec txt="Url:" size="25" set="${CoreserviceUrl}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Url must not be empty string." />
        </field>
        <field type="staticText" align="left" txt="Please provide a user with admin rights on coreservice." />
        <field type="text" align="left" variable="CoreserviceAdminUser">
            <spec txt="Admin User:" size="25" set="${CoreserviceAdminUser}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Admin User must not be empty string." />
        </field>
        <field type="password" align="left" variable="CoreserviceAdminPassword">
            <spec>
                <pwd txt="Admin Password:" size="25" set="" />
            </spec>
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Admin password must not be empty string." />
        </field>
        <field type="divider" align="bottom" />
    </panel>
    <panel order="1">
        <!-- General settings -->
        <createForPack name="PubMan" />
        <field type="title" txt="General settings" bold="true" size="1" />
        <field type="divider" align="top" />
        <field type="text" align="left" variable="InstanceUrl">
            <spec txt="Url of this PubMan instance:" size="25" set="${InstanceUrl}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Instance Url must not be empty string." />
        </field>
        <field type="divider" align="bottom" />
    </panel>
    <panel order="2">
        <createForPack name="PubMan" />
        <field type="title" txt="Mailserver settings" bold="true" size="1" />
        <field type="divider" align="top" />
        <field type="text" align="left" variable="MailHost">
            <spec txt="Mailserver hostname:" size="25" set="${MailHost}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Mailserver hostname must not be empty string." />
        </field>
        <field type="text" align="left" variable="MailSenderAdress">
            <spec txt="Mailserver sender address:" size="25" set="${MailSenderAdress}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Sender address must not be empty string." />
        </field>
        <field type="combo" variable="MailUseAuthentication">
            <description>Does the server needs authorization credentials?</description>
            <spec txt="Authorization on mailserver needed?">
                <choice txt="yes" value="true" set="true" />
                <choice txt="no" value="false" />
            </spec>
        </field>
        <field type="text" align="left" variable="MailUsername">
            <spec txt="Mailserver user name:" size="25" set="${MailUsername}" />
        </field>
        <field type="text" align="left" variable="MailPassword">
            <spec txt="Mailserver user password:" size="25" set="${MailPassword}" />
        </field>
        <field type="divider" align="bottom" />
    </panel>
    <panel order="3">
        <createForPack name="PubMan" />
        <field type="title" txt="CoNE settings" bold="true" size="1" />
        <field type="divider" align="top" />
        <field type="space" />
        <field type="text" align="left" variable="ConeHost">
            <spec txt="Database hostname:" size="25" set="${ConeHost}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Database hostname must not be empty string." />
        </field>
        <field type="text" align="left" variable="ConePort">
            <spec txt="Database port:" size="25" set="${ConePort}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Database port must not be empty string." />
        </field>
        <field type="text" align="left" variable="ConeUser">
            <spec txt="User name:" size="25" set="${ConeUser}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="User name must not be empty string." />
        </field>
        <field type="text" align="left" variable="ConePassword">
            <spec txt="User password:" size="25" set="${ConePassword}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="User password must not be empty string." />
        </field>
        <field type="space" />
        <field type="divider" align="bottom" />
    </panel>
    <panel order="4">
        <createForPack name="Initial dataset" />
        <field type="title" txt="Dataset settings" bold="true" size="1" />
        <field type="divider" align="top" />
        <field type="text" align="left" variable="InitialUserPassword">
            <spec txt="Initial user password:" size="25" set="${InitialUserPassword}" />
            <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Initial user password must not be empty string." />
        </field>
        <field type="divider" align="bottom" />
    </panel>
</userInput>