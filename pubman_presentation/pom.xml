<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>INGe</artifactId>
    <groupId>de.mpg.mpdl.inge</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>pubman_presentation</artifactId>
  <name>pubman_presentation</name>
  <version>8.0.0-SNAPSHOT</version>
  <packaging>war</packaging>

  <scm>
    <connection>scm:git:git@github.com:MPDL/INGe/pubman_presentation</connection>
    <developerConnection>scm:git:git@github.com:MPDL/INGe/pubman_presentation</developerConnection>
    <url>https://github.com/MPDL/INGe/</url>
    <tag>HEAD</tag>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <warName>pubman_presentation</warName>
          <warSourceExcludes>**/opensource/**</warSourceExcludes>
          <archive>
            <manifestEntries>
              <Dependencies>com.h2database.h2</Dependencies>
            </manifestEntries>
          </archive>
          <classifier>${escidoc.pubman.build.mode}</classifier>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>citationmanager</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>structuredexportmanager</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>inge_validation</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>model</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>dataacquisition</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>transformationManager</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>search</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.mpg.mpdl.inge</groupId>
      <artifactId>pubman_logic</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.primefaces</groupId>
      <artifactId>primefaces</artifactId>
      <version>5.1</version>
    </dependency>
    <dependency>
      <groupId>com.sun.faces</groupId>
      <artifactId>jsf-api</artifactId>
      <version>2.2.14</version>
    </dependency>
    <dependency>
      <groupId>com.sun.faces</groupId>
      <artifactId>jsf-impl</artifactId>
      <version>2.2.14</version>
    </dependency>
    <dependency>
      <groupId>commons-net</groupId>
      <artifactId>commons-net</artifactId>
      <version>3.0.1</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>env-pure</id>
      <properties />
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
              <warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
              <webResources>
                <resource>
                  <targetPath>WEB-INF/classes</targetPath>
                  <directory>${project.basedir}/src/main/resources/mpg</directory>
                  <includes>
                    <include>**/*.properties</include>
                  </includes>
                </resource>
              </webResources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    
    <profile>
      <id>env-opensource</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties />
      <build>
        <plugins>
          <plugin>
            <groupId>org.beardedgeeks</groupId>
            <artifactId>maven-merge-properties-plugin</artifactId>
            <version>0.2</version>
            <configuration>
              <merges>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_de.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/opensource/Label_de.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_de.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_en.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/opensource/Label_en.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_en.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_es.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/opensource/Label_es.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_es.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_ja.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/opensource/Label_ja.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_ja.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
              </merges>
            </configuration>
            <executions>
              <execution>
                <phase>compile</phase>
                <goals>
                  <goal>merge</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <warSourceExcludes>${project.basedir}/src/main/resources/mpg</warSourceExcludes>
              <warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
              <warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
              <webResources>
                <resource>
                  <targetPath></targetPath>
                  <directory>${project.basedir}/src/main/webapp/home/opensource</directory>
                  <includes>
                    <include>StartPageLoggedIn.jspf</include>
                    <include>StartPageLoggedOut.jspf</include>
                  </includes>
                </resource>
              </webResources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    
    <profile>
      <id>env-nims</id>
      <properties />
      <build>
        <plugins>
          <plugin>
            <groupId>org.beardedgeeks</groupId>
            <artifactId>maven-merge-properties-plugin</artifactId>
            <version>0.1.1</version>
            <configuration>
              <merges>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_de.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/nims/Label_de.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_de.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_en.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/nims/Label_en.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_en.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_es.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/nims/Label_es.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_es.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
                <merge>
                  <targetFile>${project.build.outputDirectory}/Label_ja.properties</targetFile>
                  <propertiesFiles>
                    <propertiesFile>src/main/resources/nims/Label_ja.properties</propertiesFile>
                    <propertiesFile>src/main/resources/mpg/Label_ja.properties</propertiesFile>
                  </propertiesFiles>
                </merge>
              </merges>
            </configuration>
            <executions>
              <execution>
                <phase>compile</phase>
                <goals>
                  <goal>merge</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <warSourceExcludes>${project.basedir}/src/main/resources/mpg</warSourceExcludes>
              <warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
              <warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
              <webResources>
                <resource>
                  <targetPath></targetPath>
                  <directory>${project.basedir}/src/main/webapp/home/opensource</directory>
                  <includes>
                    <include>StartPageLoggedIn.jspf</include>
                    <include>StartPageLoggedOut.jspf</include>
                  </includes>
                </resource>
              </webResources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>