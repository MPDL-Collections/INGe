<h:panelGroup layout="block" id="editLocator" styleClass="full_area0 itemBlock" rendered="#{!(genre.locators_display == 'false' and genre.locators_form_id == 'easy-submission' || genre.locators_display == 'false' and genre.locators_form_id == 'all')}">
	<h3 class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{genre.locators_label}" converter="GenreLabelConverter"/>
	</h3>
	<span class="seperator"></span>
	<div class="free_area0 itemBlockContent endline">
		<ui:repeat var="locator" id="locatorUploads" value="#{EasySubmission.locators}">

<!-- Add locator -->
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{(locator.locator == null || locator.locator == '') and locator.index == 0 }" >
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.locators_optional != 'true'}" /><h:outputText value="#{lbl.EditItem_lblLocator}"/><span class="noDisplay">: </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputLabel id="lblURL" styleClass="quad_label" value="#{lbl.EditItem_lblURL}" />
					<h:inputText id="inpLocatorLocator1" styleClass="quad_txtInput" value="#{locator.locator}"/>
				</span>
				<span class="large_area0_p8 lineToolSection">
					<h:commandButton id="lblEasySubmissionSaveLocator" styleClass="free_txtBtn groupBtn" value="#{lbl.EditItem_lnkSave}" action="#{EasySubmission.saveLocator}" />
				</span>
			</h:panelGroup>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine" rendered="#{(locator.locator == null || locator.locator == '') and locator.index > 0 }" >
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.locators_optional != 'true'}" /><h:outputText value="#{lbl.EditItem_lblNewLocator}"/><span class="noDisplay">: </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputLabel id="lblEditItemURL" styleClass="quad_label" value="#{lbl.EditItem_lblURL}" />
					<h:inputText id="inpLocatorLocator2" styleClass="quad_txtInput" value="#{locator.locator}"/>
				</span>
				<span class="large_area0_p8 lineToolSection">
					<h:commandButton id="tr" styleClass="free_txtBtn groupBtn" value="#{lbl.EditItem_lnkSave}" action="#{EasySubmission.saveLocator}" />
				</span>
			</h:panelGroup>

<!-- Locator URL -->
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{(locator.locator != null and locator.locator != '') and locator.index == 0}">
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<span class="noDisplay"> </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputText value="#{locator.locator}" />
				</span>
			</h:panelGroup>
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{(locator.locator != null and locator.locator != '') and locator.index > 0}">
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<span class="noDisplay"> </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:outputText value="#{locator.locator}" />
				</span>
			</h:panelGroup>

<!-- Locator content category -->
			<h:panelGroup rendered="#{!(genre.locators_component_content_category_display == 'false' and genre.locators_component_content_category_form_id == 'easy-submission' || genre.locators_component_content_category_display == 'false' and genre.locators_component_content_category_form_id == 'all')}">
				<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{locator.locator != null and locator.locator != ''}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.locators_component_content_category_optional != 'true'}" /><h:outputText value="#{genre.locators_component_content_category_label}" converter="GenreLabelConverter"/><span class="noDisplay">: </span>
					</b>
					<span class="double_area0 xTiny_marginLExcl xTiny_marginRIncl">
						
						<h:panelGroup layout="block" styleClass="double_area1 endline selectContainer">
							<h:panelGroup layout="block" styleClass="double_area0">
								<h:panelGroup styleClass="double_area0 selectionBox">&#160;</h:panelGroup>
								<h:panelGroup layout="block" styleClass="min_imgArea selectboxIcon">&#160;</h:panelGroup>
							</h:panelGroup>
							<h:selectOneMenu id="selContentCategoryLoc" styleClass="replace" onfocus="updateSelectionBox(this);" value="#{locator.file.contentCategory}" onchange="updateSelectionBox(this);">
								<f:selectItems id="selContentCategorysLoc" value="#{EasySubmission.contentCategories}" />
							</h:selectOneMenu>
						</h:panelGroup>
					<!--
						<h:selectOneMenu id="selContentCategoryLoc" styleClass="double_select replace" value="#{locator.file.contentCategory}" >
							<f:selectItems id="selContentCategorysLoc" value="#{EasySubmission.contentCategories}" />
						</h:selectOneMenu>	-->
					</span>
				</h:panelGroup>
			</h:panelGroup>

<!-- Locator name-->
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{locator.locator != null and locator.locator != ''}">
				<b class="xLarge_area0_p8 endline labelLine clear">
					&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="false" /><h:outputText value="#{lbl.EditItem_lblFileProperties}" /><span class="noDisplay">: </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:panelGroup rendered="#{!(genre.locators_component_name_display == 'false' and genre.locators_component_name_form_id == 'easy-submission' || genre.locators_component_name_display == 'false' and genre.locators_component_name_form_id == 'all')}">
					<span class="xDouble_area0 tiny_marginRIncl">
						<label class="xDouble_label"><span class="mandatory" title="#{msg.mandatoryField}"><h:outputText value="*" rendered="#{genre.locators_component_name_optional != 'true'}"/></span><h:outputText value="#{genre.locators_component_name_label}" converter="GenreLabelConverter"/></label>
						<h:inputText id="inpLocatorFileDefaultMetadataTitle" styleClass="xDouble_txtInput" value="#{locator.file.defaultMetadata.title}"/>
					</span>
					</h:panelGroup>
				</span>
			</h:panelGroup>

<!-- Locator description -->
			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder" rendered="#{locator.locator != null and locator.locator != ''}">
				<h:panelGroup rendered="#{!(genre.locators_component_description_display == 'false' and genre.locators_component_description_form_id == 'easy-submission' || genre.locators_component_description_display == 'false' and genre.locators_component_description_form_id == 'all')}">
					<b class="xLarge_area0_p8 endline labelLine clear">
						&#160;<h:outputText styleClass="mandatory" title="#{msg.mandatoryField}" value="*" rendered="#{genre.locators_component_description_optional != 'true'}" /><span class="noDisplay"> </span>
					</b>
					<span class="xHuge_area0 xTiny_marginLExcl endline">
						<span class="xDouble_area0 tiny_marginRIncl">
							<h:outputLabel id="lblLocatorsComponentDescription" styleClass="xDouble_label" value="#{genre.locators_component_description_label}" converter="GenreLabelConverter"/>
							<h:inputTextarea id="inpLocatorFileDescription" styleClass="xDouble_txtArea inputTxtArea" value="#{locator.description}" cols="15" rows="3"/>
						</span>
					</span>
				</h:panelGroup>

				<span class="large_area0_p8 lineToolSection">
					<h:commandButton id="btnRemoveLocatorEasySubmission" styleClass="min_imgBtn sectionTool remove" value=" " action="#{locator.removeLocatorEasySubmission}" rendered="#{genre.locators_repeatable != 'false'}"/>	
					<h:commandButton id="btnEasySubmissionAddLocator" styleClass="min_imgBtn sectionTool add" value=" " action="#{EasySubmission.addLocator}" disabled="#{EasySubmission.locators[EasySubmission.numberOfLocators-1].locator == null || EasySubmission.locators[EasySubmission.numberOfLocators-1].locator == '' }" rendered="#{genre.locators_repeatable != 'false'}"/>
				</span>
			</h:panelGroup>

		</ui:repeat>
	</div>
</h:panelGroup>

</ui:composition>