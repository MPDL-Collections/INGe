<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<div xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html" xmlns:jsp="http://java.sun.com/JSP/Page">
	<f:subview id="AffiliationDetail">

		<h:panelGroup id="panelAffiliationDetail" styleClass="advancedSearch" layout="block">
			<h:panelGroup styleClass="listHeader dark" layout="block">
				<h3>
					<h:outputText value="#{AffiliationDetail.affiliationVO.name}"/>
<%-- 
					<h:panelGroup rendered="#{AffiliationDetail.affiliationVO.abbreviation != ''}">
						(<h:outputText value="#{AffiliationDetail.affiliationVO.abbreviation}"/>)
					</h:panelGroup>
--%>
				</h3>
				<h:panelGroup styleClass="displayControls moveTop" layout="block">
					<h:commandLink styleClass="smallFont" value="[#{lbl.Search_lblShowHide}]" action="#{AffiliationDetail.toggleDetails}" rendered="#{!AffiliationDetail.renderDetails}"/>
					<h:commandLink styleClass="smallFont" value="[#{lbl.Search_lblShowHide}]" action="#{AffiliationDetail.toggleDetails}" rendered="#{AffiliationDetail.renderDetails}"/>
				</h:panelGroup>
			</h:panelGroup>
			<h:panelGroup styleClass="formField" layout="block" rendered="#{AffiliationDetail.renderDetails}">
				<tr:iterator var="description" value="#{AffiliationDetail.affiliationVO.defaultMetadata.descriptions}" varStatus="index">
					<h:outputText value="#{description}"/>
					<br/>
				</tr:iterator>
				
				
				<br/><br/>
				<h:outputText value="#{AffiliationDetail.affiliationVO.defaultMetadata.city}, #{AffiliationDetail.affiliationVO.defaultMetadata.countryCode}"/>
				<br/>
				<%--URIs as links --%>
				<tr:iterator var="uri" value="#{AffiliationDetail.affiliationVO.uris}" varStatus="index">
					<h:outputLink value="#{uri}" target="_blank">
						<h:outputText value="#{uri}"/>
					</h:outputLink>
					<br/>
				</tr:iterator>
				<%--other identifiers as plain text --%>
				<tr:iterator var="identifier" value="#{AffiliationDetail.affiliationVO.defaultMetadata.identifiers}" varStatus="index">
						<h:outputText value="#{identifier.id}" rendered="#{identifier.typeString != 'URI'}"/>
					<br/>
				</tr:iterator>
<%-- 
				<h:outputText value="#{AffiliationDetail.affiliationVO.postcode}"/>
				<h:outputText value="#{AffiliationDetail.affiliationVO.city}"/>
				<br/>
				<br/>
				<h:panelGroup rendered="#{AffiliationDetail.affiliationVO.telephone != ''}">
					<h:outputText value="#{lbl.affiliation_detail_phone}"/>: <h:outputText value="#{AffiliationDetail.affiliationVO.telephone}"/>, 
				</h:panelGroup>
				<h:panelGroup rendered="#{AffiliationDetail.affiliationVO.fax != ''}">
					<h:outputText value="#{lbl.affiliation_detail_fax}"/>: <h:outputText value="#{AffiliationDetail.affiliationVO.fax}"/>, 
				</h:panelGroup>
				<h:panelGroup rendered="#{AffiliationDetail.affiliationVO.email != ''}">
					<h:outputText value="#{lbl.affiliation_detail_email}"/>: <h:outputText value="#{AffiliationDetail.affiliationVO.email}"/>, 
				</h:panelGroup>
				<h:panelGroup rendered="#{AffiliationDetail.affiliationVO.homepageUrl != ''}">
					<h:outputLink value="#{AffiliationDetail.affiliationVO.homepageUrl}" target="_blank">
						<h:outputText value="#{AffiliationDetail.affiliationVO.homepageUrl}"/>
					</h:outputLink>
				</h:panelGroup>
--%>

			</h:panelGroup>
		</h:panelGroup>
	</f:subview>
</div>
