										value="#{lbl.adv_search_fileExcludeCategory}"
										for="fileCriterion_excludeCategory" />
							</span>
						</span>
					</span>
					</span>
					<span class="large_area0_p8 lineToolSection"> <h:commandButton
							id="btnAdd" styleClass="min_imgBtn groupTool add" value=" "
							title="#{tip.search_btAdd}"
							action="#{AdvancedSearchEdit.fileCriterionCollection.fileCriterionManager.addObject}" />
						<h:commandButton id="btnRemove"
							styleClass="min_imgBtn groupTool remove" value=" "
							title="#{tip.search_btRemove}"
							disabled="#{AdvancedSearchEdit.fileCriterionCollection.fileCriterionManager.size == 1}"
							action="#{AdvancedSearchEdit.fileCriterionCollection.fileCriterionManager.removeObject}" />
						<!-- 
                    <h:commandButton styleClass="free_txtBtn groupBtn" value="#{lbl.adv_search_btClear}" action="#{dateCriterionBean.clearCriterion}" />
-->
