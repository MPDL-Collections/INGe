										<h:panelGroup layout="block"
											styleClass="min_imgArea selectboxIcon">&#160;</h:panelGroup>
									</h:panelGroup>
									<h:selectOneMenu id="selComponentAvailabilityOptions"
										styleClass="replace"
										value="#{fileCriterionBean.fileCriterionVO.componentAvailability}"
										onfocus="updateSelectionBox(this);"
										onchange="updateSelectionBox(this);">
										<f:selectItems
											value="#{fileCriterionBean.componentAvailabilityOptions}" />
									</h:selectOneMenu>
								</h:panelGroup> <!--	<h:selectOneMenu id="selComponentAvailabilityOptions" styleClass="large_select replace" value="#{fileCriterionBean.fileCriterionVO.componentAvailability}">
