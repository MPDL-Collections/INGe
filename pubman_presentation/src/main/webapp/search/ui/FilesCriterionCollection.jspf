			<a class="clear free_area0 collapse advSearchCollapse"><h:outputText
					value="#{lbl.ViewItemFull_lblHideGroup} #{lbl.adv_search_lbHeaderFiles}" /></a>
			<ui:repeat id="fileCriterion" rows="0" var="fileCriterionBean"
				value="#{AdvancedSearchEdit.fileCriterionCollection.fileCriterionManager.objectDM}"
				binding="#{AdvancedSearchEdit.fileCriterionIterator}"
				rowKeyVar="index">
				<h:panelGroup layout="block"
					styleClass="free_area0 endline itemLine noTopBorder">
					<b class="xLarge_area0_p8 endline labelLine clear"> &#160;<span
