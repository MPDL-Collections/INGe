										<h:panelGroup layout="block"
											styleClass="min_imgArea selectboxIcon">&#160;</h:panelGroup>
									</h:panelGroup>
									<h:selectOneMenu id="selContentCategories" styleClass="replace"
										value="#{fileCriterionBean.fileCriterionVO.contentCategory}"
										onfocus="updateSelectionBox(this);"
										onchange="updateSelectionBox(this);">
										<f:selectItems value="#{fileCriterionBean.contentCategories}" />
									</h:selectOneMenu>
								</h:panelGroup> <!--	<h:selectOneMenu id="selContentCategories" styleClass="large_select replace" value="#{fileCriterionBean.fileCriterionVO.contentCategory}">
							<f:selectItems value="#{fileCriterionBean.contentCategories}" />
