<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<f:loadBundle var="lbl" basename="Label"/>

<h:dataTable var="anyFieldCriterionBean" value="#{AdvancedSearchEdit.anyFieldCriterionCollection.anyFieldCriterionManager.objectDM}" rendered="#{AdvancedSearchEdit.anyFieldCriterionCollection.anyFieldCriterionManager.size > 0}" rowClasses="list-row-even, list-row-odd">
	<h:column>

		<%/* panTitleBar */%>
		<h:panelGroup> 
			<div class="listHeader dark">
				<%/* panTitelComponent */%>				
					<h3>
						<h:outputText value="#{lbl.adv_search_lbHeaderWoP}" />
					</h3>			
			
				<%/* panControls */%>				
					<div class="displayControls moveTop">
						<h:commandLink styleClass="smallFont" value="[#{lbl.Search_lblShowHide}]" action="#{anyFieldCriterionBean.collapse}" rendered="#{!anyFieldCriterionBean.collapsed}" />	
						<h:commandLink styleClass="smallFont" value="[#{lbl.Search_lblShowHide}]" action="#{anyFieldCriterionBean.expand}" rendered="#{anyFieldCriterionBean.collapsed}"/>	
					</div>
				
			</div>
		</h:panelGroup>
		
		<%/* panContainer */%>
		<h:panelGroup rendered="#{!anyFieldCriterionBean.collapsed}">
			<div class="formField floatbox">
				<div class=" light fullWidth floatbox">
					<div class="searchTerm">
						<h:outputLabel value="#{lbl.adv_search_lblSearchTerm}" />
						<h:inputText value="#{anyFieldCriterionBean.criterionVO.searchString}" />
					</div>
				

				
					<div class="formGroupTitle floatbox">
						<h:selectOneRadio layout="pageDirection" value="#{anyFieldCriterionBean.selectedType}" valueChangeListener="#{anyFieldCriterionBean.processTypeChanged}" onchange="submit()">
							<f:selectItems value="#{anyFieldCriterionBean.typeOptions}"/>
						</h:selectOneRadio>
						<h:panelGroup styleClass="check checkItem">
							<h:selectBooleanCheckbox value="#{anyFieldCriterionBean.includeFiles}" disabled="#{anyFieldCriterionBean.includeFilesDisabled}"/>
							<h:outputLabel value="#{lbl.adv_search_lblChkInclude}" />
						</h:panelGroup>					
					</div>
				</div>	
				
				
					
						
						<div class="objectButtons floatbox">							
							<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btRemove}" action="#{AdvancedSearchEdit.anyFieldCriterionCollection.anyFieldCriterionManager.removeObject}" rendered="#{AdvancedSearchEdit.anyFieldCriterionCollection.anyFieldCriterionManager.size > 1}"/>
							<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btAdd}" action="#{AdvancedSearchEdit.anyFieldCriterionCollection.anyFieldCriterionManager.addObject}" />
							<h:commandButton styleClass="inlineButton" value="#{lbl.adv_search_btClear}" action="#{anyFieldCriterionBean.clearCriterion}" />
						</div>
					
				
			</div>
			
		</h:panelGroup>

		
			<div class="operatorCenter floatbox">
				<h:selectOneMenu value="#{anyFieldCriterionBean.logicOperator}">
					<f:selectItems value="#{anyFieldCriterionBean.logicOptions}"/>
				</h:selectOneMenu>
			</div>
		
		
	</h:column>
</h:dataTable>


