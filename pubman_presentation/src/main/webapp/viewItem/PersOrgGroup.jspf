<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup layout="block" styleClass="full_area0 itemBlock" rendered="#{!ViewItemFull.isStateWithdrawn}">
	<h3 id="lblViewItemFull_lblCreatorsHeader" class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{lbl.ViewItemFull_lblCreators}" />
	</h3>
	<span class="seperator"></span>
	<div class="free_area0 itemBlockContent endline">

<%-- Creators --%>
		<div class="free_area0 endline itemLine noTopBorder">
			<b id="lblViewItemFull_lblCreators" class="xLarge_area0_p8 endline labelLine">
				<sup>&nbsp;</sup><h:outputText value="#{lbl.ViewItemFull_lblCreators}"/><span class="noDisplay">: <br /></span>
			</b>
			<span class="xHuge_area0 xTiny_marginLExcl endline">
				<span class="free_area0 authorsGroup">
					<!-- Display {ViewItemFull.defaultSize} creators by default -->
					<tr:iterator var="creatorPerson" value="#{ViewItemFull.creatorArray}" rows="#{ViewItemFull.defaultSize}" varStatus="creatorStatus"> 
						<h:panelGroup id="txtCreatorPersonFormattedDisplay" styleClass="free_area0 creator clear">
							<h:outputText value="#{creatorPerson.formattedDisplay}" escape="false"/>
							<h:panelGroup rendered="#{creatorPerson.portfolioLink != null}">
								&#160;
								<h:outputLink id="lnkCreatorPersonPortfolioLink" styleClass="authorCard" value="#{creatorPerson.portfolioLink}?lang=#{InternationalizationHelper.locale}" target="_blank">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</h:outputLink>
							</h:panelGroup>
						</h:panelGroup>
						<br/>
					</tr:iterator>
					
					<!-- Hidden creators, visible after clicking on more -->
					<tr:iterator var="creatorPerson" value="#{ViewItemFull.creatorArray}" varStatus="creatorStatus" first="#{ViewItemFull.defaultSize}" rows="#{ViewItemFull.creatorArraySize}" rendered="#{ViewItemFull.creatorArraySize > ViewItemFull.defaultSize}"> 
						<h:panelGroup id="txtCreatorPersonFormattedHidden" styleClass="free_area0 creator creatorHidden tiny_marginRIncl">
							<h:outputText value="#{creatorPerson.formattedDisplay}" escape="false"/>
							<h:panelGroup rendered="#{creatorPerson.portfolioLink != null}">
								&#160;
								<h:outputLink id="lnkCreatorPersonPortfolioLink" styleClass="authorCard" value="#{creatorPerson.portfolioLink}?lang=#{InternationalizationHelper.locale}" target="_blank">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</h:outputLink>
							</h:panelGroup>
						</h:panelGroup>
					</tr:iterator>
					
					<h:panelGroup rendered="#{ViewItemFull.creatorArraySize > ViewItemFull.defaultSize}">
						<a class="large_area0 tiny_marginRIncl showMoreAuthors" ><h:outputText value="#{lbl.adv_search_btShowMore}" /></a>
					</h:panelGroup>
					
					<tr:iterator var="creatorOrganization" value="#{ViewItemFull.creatorOrganizationsArray}" >
						<h:panelGroup styleClass="free_area0 creator clear">
							<h:panelGroup id="txtCreatorOrganizationOrganizationName">
								<h:outputText value="#{creatorOrganization.organizationName}"/>
							</h:panelGroup>
							&#160;
							<h:outputLink id="lnkCreatorOrganizationLink" styleClass="ouCard" rendered="#{creatorOrganization.identifier != null and creatorOrganization.identifier != ''}" value="#" onclick="openCenteredWindow('AffiliationDetailPage.jsp?id=#{creatorOrganization.identifier}', 980, 400, 'Details');return false">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</h:outputLink>
						</h:panelGroup>
						<br/>
					</tr:iterator>
				</span>		
			</span>
		</div>

<%-- Affiliations --%>
		<div class="free_area0 endline itemLine">
			<b id="lblViewItemFull_lblAffiliations" class="xLarge_area0_p8 endline labelLine">
				<h:outputText value="#{lbl.ViewItemFull_lblAffiliations}"/><span class="noDisplay">: <br /></span>
			</b>
			<span class="xHuge_area0 xTiny_marginLExcl endline">
				<tr:iterator var="creatorAffiliation" value="#{ViewItemFull.organizationList}" rows="0">
					<h:panelGroup styleClass="xTiny_area0 endline"><h:outputText value="#{creatorAffiliation.position}"/></h:panelGroup>
					<h:panelGroup id="txtCreatorAffiliation" styleClass="free_area0 affiliation">
						<h:outputText value="#{creatorAffiliation.organizationName}"/>
						<h:outputText value=", #{creatorAffiliation.organizationAddress}" rendered="#{not empty creatorAffiliation.organizationAddress}"/>
						<h:outputText value=", #{creatorAffiliation.organizationIdentifier}" rendered="#{not empty creatorAffiliation.organizationIdentifier}"/>
						
						<h:panelGroup rendered="#{creatorAffiliation.hasOrganizationalIdentifier}">
							&#160;
							<h:outputLink id="lnkAffiliationDetail" value="" styleClass="ouCard" onclick="openCenteredWindow('#{ApplicationBean.appContext}AffiliationDetailPage.jsp?id=#{creatorAffiliation.organizationIdentifier}', 980, 400, 'Details');return false" target="_blank">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</h:outputLink>
						</h:panelGroup>
					</h:panelGroup>
					<h:outputText value="<br />" escape="false"/>
				</tr:iterator>
			</span>
		</div>
	
		<a id="lnkHideGroupPersOrg" class="free_area0 collapse"><h:outputText value="#{lbl.ViewItemFull_lblHideGroup} #{lbl.ViewItemFull_lblCreators}" /></a>	
	</div>
	<a id="lnkShowGroupPersOrg" class="free_area0 expand"><h:outputText value="#{lbl.ViewItemFull_lblShowGroup}  #{lbl.ViewItemFull_lblCreators}" /></a>
</h:panelGroup>