<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f"%>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h"%>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<h:panelGroup layout="block" styleClass="full_area0 shortView">
	<h:outputText value="<abbr class='unapi-id' title='#{item.link}'></abbr>" escape="false" rendered="#{item.isReleased}"/>
	<div class="free_area0_p0  small_marginLIncl endline listItemLine">
		<span class="huge_area0_p8 endline labelLine">
 			<div><a class="collapse"><span class="noDisplay"><h:outputText value="#{lbl.ViewItemShort_lblShow}"/> </span><h:outputText value="#{lbl.ViewItemShort_lblLess}"/><span class="noDisplay"> <h:outputText value="#{lbl.ViewItemShort_lblDetails}"/></span></a>
			<a class="expand"><span class="noDisplay"><h:outputText value="#{lbl.ViewItemShort_lblShow}"/> </span><h:outputText value="#{lbl.ViewItemShort_lblMore}"/><span class="noDisplay"> <h:outputText value="#{lbl.ViewItemShort_lblDetails}"/></span></a></div>
			<h:outputText value="#{lbl.ViewItemShort_lblCreators}"/><span class="noDisplay">: </span>
		</span>
		
		<h:outputLabel styleClass="xHuge_area0 endline" value="#{item.creatorsShort}" title="#{item.creators}"/>
		
	</div>
	<div class="free_area0_p0 small_marginLIncl endline listItemLine">
		<span class="huge_area0_p8 endline labelLine">
			<h:outputText value="#{lbl.ViewItemShort_lblDates}"/><span class="noDisplay">: </span>
		</span>
		<span class="xHuge_area0 endline">
			<h:outputText value="#{item.datesAsString}"/>&#160;
		</span>
	</div>
	<div class="free_area0_p0  small_marginLIncl endline listItemLine">
		<span class="huge_area0_p8 endline labelLine">
			<h:outputText value="#{lbl.ViewItemShort_lblGenre}"/><span class="noDisplay">: </span>
		</span>
		<span class="xHuge_area0 endline">
			<h:outputText value="#{item.genre}"/>&#160;
		</span>
	</div>
	<div class="free_area0_p0  small_marginLIncl endline listItemLine">
		<span class="huge_area0_p8 endline labelLine">
			<h:outputText value="#{lbl.ViewItemShort_lblFile}"/><span class="noDisplay">: </span>
		</span>
		<h:panelGroup styleClass="xHuge_area0 endline" rendered="#{item.numberOfFiles > 0}">
			<span class="files"><h:outputLink value="#{item.link}#files"><h:outputText value="#{item.fileInfo}"/></h:outputLink></span>
		</h:panelGroup>
		<h:panelGroup styleClass="xHuge_area0 endline" rendered="#{item.numberOfFiles == 0}">
			<h:outputText value="#{lbl.ViewItemFull_lblNoEntry}"/>
		</h:panelGroup>
	</div>
	<div class="free_area0_p0  small_marginLIncl endline listItemLine">
		<span class="huge_area0_p8 endline labelLine">
			<h:outputText value="#{lbl.ViewItemShort_lblLocator}"/><span class="noDisplay">: </span>
		</span>
		<h:panelGroup styleClass="xHuge_area0 endline" rendered="#{item.numberOfLocators > 0}">
			<span class="locators"><h:outputLink value="#{item.link}#locators"><h:outputText value="#{item.locatorInfo}"/></h:outputLink></span>
		</h:panelGroup>
		<h:panelGroup styleClass="xHuge_area0 endline" rendered="#{item.numberOfLocators == 0}">
			<h:outputText value="#{lbl.ViewItemFull_lblNoEntry}"/>
		</h:panelGroup>
	</div>
</h:panelGroup>


<%-- 
