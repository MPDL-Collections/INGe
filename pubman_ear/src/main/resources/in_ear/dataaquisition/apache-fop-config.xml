<?xml version="1.0"?>
<fop version="1.0">

<!-- Strict user configuration -->
    <strict-configuration>true</strict-configuration>

<!-- Strict FO validation -->
    <strict-validation>true</strict-validation>

<!-- Base URL for resolving relative URLs -->
    <base>file:///${jboss.install.dir}/server/${jboss.install.node}/conf/</base>

<!-- Font Base URL for resolving relative font URLs -->
    <font-base>file:///${jboss.install.dir}/server/${jboss.install.node}/conf/fonts/</font-base>

<!-- Source resolution in dpi (dots/pixels per inch) for determining the size of pixels in SVG and bitmap images, default: 72dpi -->
    <source-resolution>72</source-resolution>
<!-- Target resolution in dpi (dots/pixels per inch) for specifying the target resolution for generated bitmaps, default: 72dpi -->
    <target-resolution>72</target-resolution>

<!-- default page-height and page-width, in case
value is specified as auto -->
    <default-page-settings height="11in" width="8.26in"/>

    <renderers>
        <renderer mime="application/pdf">
            <!-- Sample fonts (Open Source) can be found in the EAR-File (dataaquisition/fonts/) -->
            <fonts>
                <font metrics-url="./DejaVuSans.xml" kerning="yes" embed-url="./DejaVuSans.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans" style="normal" weight="normal"/>
                </font>
                <font metrics-url="./DejaVuSans-Bold.xml" kerning="yes" embed-url="./DejaVuSans-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans" style="normal" weight="bold"/>
                </font>
                <font metrics-url="./DejaVuSerif.xml" kerning="yes" embed-url="./DejaVuSerif.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="normal" weight="normal"/>
                </font>
                <font metrics-url="./DejaVuSerif-Italic.xml" kerning="yes" embed-url="./DejaVuSerif-Italic.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="italic" weight="normal"/>
                </font>
                <font metrics-url="./DejaVuSerif-Bold.xml" kerning="yes" embed-url="./DejaVuSerif-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="normal" weight="bold"/>
                </font>
                <font metrics-url="./DejaVuSansMono.xml" kerning="yes" embed-url="./DejaVuSansMono.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans Mono" style="normal" weight="normal"/>
                </font>
                <font metrics-url="./DejaVuSansMono-Bold.xml" kerning="yes" embed-url="./DejaVuSansMono-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans Mono" style="normal" weight="bold"/>
                </font>
            </fonts>
        </renderer>

        <renderer mime="application/postscript">
            <!-- Sample fonts (Open Source) can be found in the EAR-File (dataaquisition/fonts/) -->
            <fonts>
                <font metrics-url="DejaVuSans.xml" kerning="yes" embed-url="DejaVuSans.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans" style="normal" weight="normal"/>
                </font>
                <font metrics-url="DejaVuSans-Bold.xml" kerning="yes" embed-url="DejaVuSans-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans" style="normal" weight="bold"/>
                </font>
                <font metrics-url="DejaVuSerif.xml" kerning="yes" embed-url="DejaVuSerif.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="normal" weight="normal"/>
                </font>
                <font metrics-url="./DejaVuSerif-Italic.xml" kerning="yes" embed-url="./DejaVuSerif-Italic.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="italic" weight="normal"/>
                </font>
                <font metrics-url="DejaVuSerif-Bold.xml" kerning="yes" embed-url="DejaVuSerif-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Serif" style="normal" weight="bold"/>
                </font>
                <font metrics-url="DejaVuSansMono.xml" kerning="yes" embed-url="DejaVuSansMono.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans Mono" style="normal" weight="normal"/>
                </font>
                <font metrics-url="DejaVuSansMono-Bold.xml" kerning="yes" embed-url="DejaVuSansMono-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="DejaVu Sans Mono" style="normal" weight="bold"/>
                </font>
            </fonts>
        </renderer>
    </renderers>
</fop>

