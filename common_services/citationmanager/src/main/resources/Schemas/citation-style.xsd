<xs:schema xmlns="http://www.escidoc.de/citationstyle" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.escidoc.de/citationstyle" elementFormDefault="qualified">


    <!--citation-style -->
	<xs:element name="citation-style">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="variables" type="variablesType" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element name="layout-elements" type="layoutElementsType" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element ref="cs-layout-definition" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="element-specific" type="yes-noType" use="required"/>
			<xs:attribute name="read-only" type="yes-noType" use="required"/>
			<xs:attribute name="name" type="xs:NCName" use="required"/>
			<xs:attribute name="md-xpath" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<!-- variables--> 
	<xs:complexType name="variablesType">
		<xs:sequence>
			<xs:element name="variable" maxOccurs="unbounded">
				<xs:complexType mixed="true"> 
					<xs:attribute name="name" type="xs:NCName" use="required" />
					<xs:attribute name="type" type="variableTypeType" use="required" />
<!--					<xs:attribute name="xpath" type="xs:string" use="optional" />-->
<!--					<xs:attribute name="expression" type="xs:string" use="optional" />-->
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	

	
	
    <!-- cs-layout-definition -->
	<xs:element name="cs-layout-definition">
		<xs:complexType>
			<xs:all>
				<xs:element ref="parameters"/>
				<xs:element ref="elements"/>
			</xs:all>
			<xs:attribute name="name" type="xs:NCName" use="required"/>
		</xs:complexType>
	</xs:element>
	
	
	<!-- 
		layout-elements bundle type for predefined
		layout-elements of the citation-style
	 -->
	<xs:complexType name="layoutElementsType">
		<xs:sequence>
			<xs:element name="layout-element" type="layoutElementType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	
	<!-- layout-element -->
	<xs:complexType name="layoutElementType">
		<xs:group ref="layout-elementGroup" minOccurs="0" maxOccurs="unbounded" />
		<xs:attribute name="name" type="xs:NCName" />
		<xs:attribute name="ref" />
		<xs:attribute name="repeatable" type="repeatableType" />
		<xs:attribute name="func" type="funcType" />
	</xs:complexType>
	
	<xs:group name="layout-elementGroup">
		<xs:sequence>
				<xs:element ref="parameters" />
				<xs:element ref="elements" />
		</xs:sequence>
	</xs:group>
	
	<!-- elements -->
	<xs:element name="elements">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="layout-element" type="layoutElementType" minOccurs="0" maxOccurs="unbounded" />
			</xs:sequence>
			<xs:attribute name="position" type="positionType"/>
		</xs:complexType>
	</xs:element>
	
	<!-- parameters -->
	<xs:element name="parameters">
		<xs:complexType>
			<xs:all>
				<xs:element ref="valid-if" minOccurs="0"/>
				<xs:element ref="starts-with" minOccurs="0"/>
				<xs:element ref="ends-with" minOccurs="0"/>
				<xs:element ref="font-style" minOccurs="0"/>
				<xs:element ref="delimiter" minOccurs="0"/>
				<xs:element ref="internal-delimiter" minOccurs="0"/>
				<xs:element ref="max-count" minOccurs="0"/>
				<xs:element ref="max-count-ends-with" minOccurs="0"/>
				<xs:element ref="max-length" minOccurs="0"/>
				<xs:element ref="max-length-ends-with" minOccurs="0"/>
			</xs:all>
			<xs:attribute name="position" type="positionType"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="valid-if" type="xs:string"/>
	
	<xs:element name="starts-with">
		<xs:complexType>
			<xs:attribute name="value" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="ends-with">
		<xs:complexType>
			<xs:attribute name="value" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="font-style">
		<xs:complexType>
			<xs:attribute name="ref" type="xs:NCName" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="delimiter">
		<xs:complexType>
			<xs:attribute name="value" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="internal-delimiter">
		<xs:complexType>
			<xs:attribute name="value" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="max-count">
		<xs:complexType mixed="true">
			<xs:attribute name="value" type="xs:integer" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="max-count-ends-with">
		<xs:complexType mixed="true">
			<xs:attribute name="value" type="xs:integer" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="max-length">
		<xs:complexType mixed="true">
			<xs:attribute name="value" type="xs:integer" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="max-length-ends-with">
		<xs:complexType mixed="true">
			<xs:attribute name="value" type="xs:integer" use="required"/>
		</xs:complexType>
	</xs:element>
	
	<!-- shared types -->
	<xs:simpleType name="repeatableType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="yes"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="yes-noType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="yes"/>
			<xs:enumeration value="no"/>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="positionType">
		<xs:restriction base="xs:string">
			<xs:pattern value="last|last-max-count|default|[0-9][0-9]|[1-9]"/>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="funcType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="get_initials"/>
			<xs:enumeration value="get_year"/>
			<xs:enumeration value="get_month"/>
			<xs:enumeration value="get_day"/>
			<xs:enumeration value="get_month_name"/>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="variableTypeType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="xpath"/>
			<xs:enumeration value="expression"/>
		</xs:restriction>
	</xs:simpleType>
	
</xs:schema>
