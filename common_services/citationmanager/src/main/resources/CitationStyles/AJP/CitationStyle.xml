		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/AJP
	-->
<citation-style name="AJP"
	xmlns="http://www.escidoc.de/citationstyle" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.escidoc.de/citationstyle ../../Schemas/citation-style.xsd"
	read-only="no" element-specific="no" md-xpath="//item/md-records/md-record"> 	
	<!-- special variables to be used in expressions for short notations -->
	<variables>
		<!-- variables which use xpath directly in DataSource NS-->
		<variable name="hasPublication" type="xpath" >
			<![CDATA[not(publication)=false()]]>
		</variable>
		<variable name="authorsCount" type="xpath">
			<![CDATA[string(count(publication/creator[@role='author']))]]>
		</variable>
		<variable name="editorsCount" type="xpath">
			<![CDATA[string(count(publication/creator[@role='editor']))]]>
		</variable>
			
		<variable name="sourceEditorsCount" type="xpath">
			<![CDATA[string(count(publication/source/creator[@role='editor']))]]>
		</variable>
			
		<!--
			variables which use java-like expressions with references to other
			variables defined above
		-->
		<variable name="date" type="expression">
			<![CDATA[
				${publication/issued} != null ? 
					${publication/issued} :
					${publication/published-online} != null ? 
						${publication/published-online} :
						${publication/@type}.equals("manuscript") ?
						(
							${publication/dateAccepted} != null ?
								${publication/dateAccepted} :
								${publication/dateSubmitted} != null ?
									${publication/dateSubmitted} :
									${publication/modified} != null ?
										${publication/modified} :
											${publication/created} != null ?
												${publication/created} :
												null 
						) :
						null
			]]>
		</variable>
		
		<variable name="static_in" type="expression">
			<![CDATA["in"]]>
		</variable>	 
<!--		<variable name="static_in" xpath="'in'" />-->

		<variable name="ed" type="expression">
					<![CDATA[ ${toInt}(${editorsCount}) == 1 ? " (ed)" : " (eds)"]]>
		</variable>

	</variables>
	
	<!-- predefined layout elements which can be referenced in CSLDs -->
	<layout-elements> 
		<!-- repeatable layout elements -->
		<!-- authors -->
		<layout-element name="authors-MoreThan2"
			ref="publication/creator[@role='author']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=", and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${authorsCount})!=2]]></valid-if>
				<delimiter value=", " />
				<ends-with value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		<layout-element name="authors-Equal2"
			ref="publication/creator[@role='author']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=" and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${authorsCount})==2]]></valid-if>
				<delimiter value=", " />
				<ends-with value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		<layout-element name="authors">
			<parameters>
				<delimiter value="" />
			</parameters>
			<elements>
				<layout-element ref="authors-Equal2" />
				<layout-element ref="authors-MoreThan2" />
			</elements>
		</layout-element>	
		
		<!-- editors -->
		<layout-element name="editors-MoreThan2"
			ref="publication/creator[@role='editor']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=", and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${editorsCount})!=2]]></valid-if>
				<delimiter value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		<layout-element name="editors-Equal2"
			ref="publication/creator[@role='editor']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=" and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${editorsCount})==2]]></valid-if>
				<delimiter value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		
		<layout-element name="editors">
			<parameters>
				<delimiter value="" />
				<ends-with value=","/>
			</parameters>
			<elements>
				<layout-element ref="editors-Equal2" />
				<layout-element ref="editors-MoreThan2" />
				<layout-element ref="ed" />
			</elements>
		</layout-element>
			
		<!-- creators -->
		<layout-element name="creators">
			<parameters/>
			<elements>
				<layout-element ref="authors">
					<parameters>
						<valid-if><![CDATA[${toInt}(${authorsCount})>0]]></valid-if>
					</parameters>
					<elements/>
				</layout-element>
				<layout-element ref="editors">
					<parameters>
						<valid-if><![CDATA[${toInt}(${authorsCount})==0 && ${toInt}(${editorsCount})>0]]></valid-if>
					</parameters>
					<elements/>
				</layout-element>
			</elements>
		</layout-element>
		
		
		<!-- source-editors -->
		<layout-element name="source-editors-MoreThan2"
			ref="publication/source/creator[@role='editor']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=", and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${sourceEditorsCount})!=2]]></valid-if>
				<delimiter value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		<layout-element name="source-editors-Equal2"
			ref="publication/source/creator[@role='editor']"
			repeatable="yes">
			<parameters position="last">
				<delimiter value=" and " />
			</parameters>
			<elements position="last">
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
			<parameters>
				<valid-if><![CDATA[${toInt}(${sourceEditorsCount})==2]]></valid-if>
				<delimiter value=", " />
			</parameters>
			<elements>
				<layout-element ref="organization/organization-name" />
				<layout-element ref="person/given-name" />
				<layout-element ref="person/family-name" />
			</elements>
		</layout-element>
		<layout-element name="source-editors">
			<parameters>
				<delimiter value="" />
			</parameters>
			<elements>
				<layout-element ref="source-editors-Equal2" />
				<layout-element ref="source-editors-MoreThan2" />
			</elements>
		</layout-element>	
		
			
		<!-- "plain" layout elements -->
		<layout-element name="quoted_title" ref="publication/title">
			<parameters>
				<starts-with value="&quot;" />
				<ends-with value=",&quot;" />
			</parameters>
			<elements />
		</layout-element>
		
		<layout-element name="vol" ref="publication/source/volume">
			<parameters>
				<starts-with value="Vol. "/>
			</parameters>
			<elements/>
		</layout-element>
		
		
		<layout-element name="pp-with-total-number-of-pages"> 
			<parameters>
				<starts-with value="pp. "/>
			</parameters>
			<elements>
				<layout-element ref="publication/total-number-of-pages" />
				<layout-element>
					<parameters>
						<valid-if><![CDATA[${publication/total-number-of-pages}==null]]></valid-if>
						<delimiter value="-" />
					</parameters>
					<elements>
						<layout-element ref="publication/source/start-page" />
						<layout-element ref="publication/source/end-page" />
					</elements>
				</layout-element>			
			</elements>
		</layout-element>			

		<layout-element name="pp"> 
			<parameters>
				<starts-with value="pp. "/>
				<delimiter value="-" />
			</parameters>
			<elements>
				<layout-element ref="publication/source/start-page" />
				<layout-element ref="publication/source/end-page" />
			</elements>
		</layout-element>			

		
		<layout-element name="publishingInfoAndDate">
				<parameters>
					<delimiter value=", " />
					<starts-with value=" (" />
					<ends-with value=")" />
				</parameters>
				<elements>
					<layout-element ref="publication/publishing-info/publisher" />
					<layout-element ref="publication/publishing-info/place" />
					<layout-element ref="date" func="get_year" />
				</elements>
			</layout-element>

			<layout-element name="editorsAndPublishingInfoAndDate">
				<parameters>
					<delimiter value=" "/>
				</parameters>
				<elements>
					<layout-element ref="source-editors">
						<parameters>
							<starts-with value=" edited by "/>
						</parameters>
						<elements/>
					</layout-element>
					<layout-element ref="publishingInfoAndDate" />
				</elements>
			</layout-element>
			
			<layout-element name="edition" ref="publication/publishing-info/edition" >
				<parameters>
					<starts-with value=", "/>
					<ends-with value=" ed"/>
				</parameters>
				<elements/>
			</layout-element>	
			
			<layout-element  name="title-italic" ref="publication/title">
				<parameters>
					<starts-with value=" "/>
					<ends-with value="."/>
					<font-style ref="ITALIC"/>
				</parameters>
				<elements />
			</layout-element>
		
				<!-- debug elements: -->
			<layout-element name="__debug__">
				<parameters>
					<starts-with value="debug__" />
					<ends-with value="__debug" />
					<font-style ref="BLUE"/>
					<delimiter value=","/>
				</parameters>
				<elements>
					<layout-element ref="../../@objid" >
						<parameters>
							<starts-with value="OBJID:"/>
						</parameters>
						<elements/>
					</layout-element>
					<layout-element ref="publication/@type" >
						<parameters>
							<starts-with value="type:"/>
						</parameters>
						<elements/>
					</layout-element>
					<layout-element ref="publication/abstract[contains(.,'AJP:')]" />
					<layout-element ref="publication/subject" />
				</elements>
			</layout-element>
			
		
	</layout-elements>
	
    
    <!-- Print warning message for non-publication items -->
	<cs-layout-definition name="isNotPublication">
		<parameters>
			<valid-if><![CDATA[${hasPublication}.equals("false") ]]></valid-if>
			<starts-with
				value="## Citaion style layout is not defined for metadata record: " />
			<ends-with value="." />
		</parameters>
		<elements>
			<layout-element ref="../../@objid" />
		</elements>
		<!-- BOOK CHAPTER -->
		<!--
			Question: Should courseware, other, conference-paper and
			conference-report handled identically?
		-->
		<!--
			Note: We need to differentiate between conference-papers published in
			a book and those published in a journal issue
		-->
	</cs-layout-definition>

	<cs-layout-definition name="Article">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("article") ]]></valid-if>
			<delimiter value=" " />
			<ends-with value="." />
		</parameters>
		<elements>
			
			<layout-element ref="debug" />
			
			<layout-element ref="creators" />
						
					<!-- JOURNAL ARTICLE, element "journal article"  -->
			<layout-element ref="quoted_title"/>
			
					<!-- JOURNAL ARTICLE, element "source"  -->
			<layout-element name="SourceTitleVolumeIssuePhysicalDescriptionBlock">
				<parameters >
					<delimiter value=""/>
				</parameters>
				<elements>
					<layout-element ref="publication/source/title" />
					<layout-element ref="publication/source/volume">
						<parameters>
							<font-style ref="BOLD" />
							<starts-with value=" "/>
						</parameters>
						<elements />
					</layout-element>
					<layout-element ref="publication/source/issue">
						<parameters>
							<starts-with value=" (" />
							<ends-with value=")" />
						</parameters>
						<elements />
					</layout-element>
					<layout-element ref="publication/source/start-page">
						<parameters>
							<starts-with value=", " />
						</parameters>
						<elements />
					</layout-element>
					<layout-element ref="publication/source/end-page">
						<parameters>
							<starts-with value="-" />
						</parameters>
						<elements />
					</layout-element>
				</elements>
			</layout-element>
			<layout-element ref="date">
				<parameters>
					<starts-with value="(" />
					<ends-with value=")" />
				</parameters>
				<elements />
			</layout-element>
		</elements>
	</cs-layout-definition>

	<cs-layout-definition name="Book">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("book")  ]]></valid-if>
			<delimiter value="" />
			<ends-with value="." />
		</parameters>
		<elements>
			
			<layout-element ref="debug" />
			
			<layout-element ref="creators" />
						
			<layout-element  ref="title-italic"/>

			<layout-element ref="publishingInfoAndDate"/>
						
			<layout-element ref="edition"/>
		</elements>
	</cs-layout-definition>

	
	<cs-layout-definition name="BookChapter">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("book-item") ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>
			
			<layout-element ref="debug" />
			
			<layout-element ref="creators" />
						
			<layout-element  ref="publication/title">
				<parameters>
					<starts-with value="&quot;" />
					<ends-with value="&quot;" />
				</parameters>
				<elements />
			</layout-element>
			
			<layout-element name="BookTitleBlock">
				<parameters>
					<valid-if><![CDATA[${publication/source[@type='book']/title}!=null]]></valid-if>
					<delimiter value=" "/>
				</parameters>
				<elements>
					<layout-element ref="static_in"/>
					<layout-element ref="publication/source[@type='book']/title">
						<parameters>
							<font-style ref="ITALIC"/>
						</parameters>
						<elements/>
					</layout-element>
				</elements>
			</layout-element>

			<layout-element ref="editorsAndPublishingInfoAndDate"/>
			
			<layout-element ref="vol"/>
			
			<layout-element ref="pp"/>
			
		</elements>
	</cs-layout-definition>
	
		
	<cs-layout-definition name="Thesis">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("thesis") ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>

			<layout-element ref="debug" />
			
			<layout-element ref="creators" >
				<parameters>
					<ends-with value="PhD-Thesis"/>
				</parameters>
				<elements/>
			</layout-element>

			<layout-element ref="publication/publishing-info/publisher" />
			
			<layout-element ref="date" />
						
		</elements>
	</cs-layout-definition>

	<cs-layout-definition name="Report">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("report") ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>

			<layout-element ref="debug" />
			
			<layout-element ref="creators" />

			<layout-element ref="publication/identifier[contains(@type,'OTHER')]" >
				<parameters>
					<starts-with value="Report No. "/>
				</parameters>
				<elements/>
			</layout-element>
			
			<layout-element ref="date" />
						
		</elements>
	</cs-layout-definition>	
	
	<cs-layout-definition name="Proceedings">
		<parameters>
			<valid-if><![CDATA[ ${publication/@type}.equals("proceedings") ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>

			<layout-element ref="debug" />
			
			<layout-element ref="creators" />

			<layout-element ref="publication/event/title" >
				<parameters>
					<starts-with value="presented at "/>
				</parameters>
				<elements/>
			</layout-element>
			
			<layout-element ref="publication/event/place" />
			
			<layout-element ref="date" />
						
		</elements>
	</cs-layout-definition>
	
	<cs-layout-definition name="Generic">
		<parameters>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>
			
			<layout-element ref="debug" />
			
			<layout-element ref="creators" />

			<layout-element  ref="publication/title">
				<parameters>
					<starts-with value="&quot;" />
					<ends-with value="&quot;" />
				</parameters>
				<elements />
			</layout-element>
			
			
			<layout-element name="SourceTitleBlock">
				<parameters>
					<valid-if><![CDATA[ ${publication/source/title}!=null ]]></valid-if>
					<delimiter value=" "/>
				</parameters>
				<elements>
					<layout-element ref="static_in"/>
					<layout-element ref="publication/source/title">
						<parameters>
							<font-style ref="ITALIC"/>
						</parameters>
						<elements/>
					</layout-element>
				</elements>
			</layout-element>
			
			<layout-element ref="editorsAndPublishingInfoAndDate"/>
			
			<layout-element ref="vol"/>
			
			<layout-element ref="pp-with-total-number-of-pages"/>
			
		</elements>
	</cs-layout-definition>
	
</citation-style>