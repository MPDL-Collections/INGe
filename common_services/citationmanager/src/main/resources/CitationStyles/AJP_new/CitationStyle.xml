<citation-style name="AJP"
	xmlns="http://www.escidoc.de/citationstyle" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.escidoc.de/citationstyle ../../Schemas/citation-style-new.xsd"
	read-only="no" 
	element-specific="no" 
	md-xpath="../../mdr:md-records/mdr:md-record"
	source-placeholder-tag="prop:content-model-specific"
	citation-placeholder-tag="dcterms:bibliographicCitation"
	> 	
	<!-- special variables to be used in expressions for short notations -->
	<variables>
		<variable name="objid" ><![CDATA[../../@objid]]></variable>
		<variable name="hasPublication" type="xs:boolean"><![CDATA[exists(mdp:publication)]]></variable>
		<variable name="genre"><![CDATA[mdp:publication/@type]]></variable>
		<variable name="authorsCount"><![CDATA[count(mdp:publication/pub:creator[@role='author'])]]></variable>
		<variable name="editorsCount"><![CDATA[count(mdp:publication/pub:creator[@role='editor'])]]></variable>
		<variable name="sourceEditorsCount"><![CDATA[count(mdp:publication/pub:source[1]/e:creator[@role='editor'])]]></variable>
		<variable name="ed"><![CDATA[if ($editorsCount=1) then ' (ed)' else ' (eds)']]></variable>
			
		<!--
			variables which use java-like expressions with references to other
			variables defined above
		-->
		<variable name="date">
			<![CDATA[
			func:get_year(
				if (exists(mdp:publication/dcterms:issued/text())) 
				then mdp:publication/dcterms:issued/text()  
				else if (exists(mdp:publication/pub:published-online/text()))
				then mdp:publication/pub:published-online/text()  
				else (
					if ( $genre='manuscript')
					then (
							 if (exists(mdp:publication/dcterms:dateAccepted/text()))
							 then mdp:publication/dcterms:dateAccepted/text()
							 else if (exists(mdp:publication/dcterms:dateSubmitted/text()))
							 then mdp:publication/dcterms:dateSubmitted/text()
							 else if (exists(mdp:publication/dcterms:modified/text()))
							 then mdp:publication/dcterms:modified/text()
							 else if (exists(mdp:publication/dcterms:created/text()))
							 then mdp:publication/dcterms:created/text()
							 else ''
					)
					else ''
				)	
			)
			]]>
		</variable>
		
<!--		master, diploma, magister, staatsexamen, phd, habilitation, bachelor -->
		<variable name="degree">
			<![CDATA[
				if (exists(mdp:publication/pub:degree/text()))
				then 
				(
					if (mdp:publication/pub:degree/text()='phd')
					then 'PhD Thesis'
					else mdp:publication/pub:degree/text()
				)
				else 'Thesis'
			]]>
		</variable>
		


	</variables>
	
	<!-- predefined layout elements which can be referenced in CSLDs -->
	<predefined-layout-elements> 
	
		<!-- repeatable layout elements -->
		<!-- authors -->
		
		<layout-element name="authors">
			<parameters>
				<delimiter value="" />
			</parameters>
			<elements>
				<layout-element name="authors-NotEqual2"
					ref="mdp:publication/pub:creator[@role='author']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=", and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$authorsCount!=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
				<layout-element name="authors-Equal2"
					ref="mdp:publication/pub:creator[@role='author']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=" and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$authorsCount=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
			</elements>
		</layout-element>	
		
		<!-- editors -->
		
		<layout-element name="editors">
			<parameters>
				<delimiter value="" />
			</parameters>
			<elements>
				<layout-element name="editors-NotEqual2"
					ref="mdp:publication/pub:creator[@role='editor']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=", and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$editorsCount!=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
				<layout-element name="editors-Equal2"
					ref="mdp:publication/pub:creator[@role='editor']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=" and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$editorsCount=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
				
				<layout-element ref="$ed" />
			
			</elements>
		
		</layout-element>
		
			
		<!-- creators -->
		<layout-element name="creators">
			<parameters/>
			<elements>
				<layout-element ref="$authors">
					<parameters>
						<valid-if><![CDATA[$authorsCount>0]]></valid-if>
					</parameters>
				</layout-element>
				<layout-element ref="$editors">
					<parameters>
						<valid-if><![CDATA[$authorsCount=0 and $editorsCount>0]]></valid-if>
					</parameters>
				</layout-element>
			</elements>
		</layout-element>
		
		
		<!-- source-editors -->
		<layout-element name="source-editors">
			<parameters>
				<delimiter value="" />
			</parameters>
			<elements>
				<layout-element name="source-editors-NotEqual2"
					ref="mdp:publication/pub:source[1]/e:creator[@role='editor']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=", and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$sourceEditorsCount!=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
				<layout-element name="source-editors-Equal2"
					ref="mdp:publication/pub:source[1]/e:creator[@role='editor']"
					repeatable="yes">
					<parameters position="last">
						<delimiter value=" and " />
					</parameters>
					<parameters>
						<valid-if><![CDATA[$sourceEditorsCount=2]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="e:organization/e:organization-name/text()" />
						<layout-element ref="e:person/e:given-name/text()"/>
						<layout-element ref="e:person/e:family-name/text()" />
					</elements>
				</layout-element>
			</elements>
		</layout-element>	
			
		<!-- "plain" layout elements -->
		
		<layout-element name="vol" ref="mdp:publication/pub:source[1]/e:volume/text()">
			<parameters>
				<starts-with value="Vol. "/>
			</parameters>
		</layout-element>
		
		<layout-element name="start-page-end-page">
			<parameters>
				<delimiter value="-" />
			</parameters>
			<elements>
				<layout-element ref="mdp:publication/pub:source[1]/e:start-page/text()" />
				<layout-element ref="mdp:publication/pub:source[1]/e:end-page/text()" />
			</elements>
		</layout-element>
		
		
		<layout-element name="pp-with-total-number-of-pages"> 
			<parameters>
				<starts-with value="pp. "/>
			</parameters>
			<elements>
				<layout-element ref="mdp:publication/pub:total-number-of-pages/text()" />
				<layout-element ref="$start-page-end-page">
					<parameters>
						<valid-if><![CDATA[not(exists(mdp:publication/pub:total-number-of-pages/text()))]]></valid-if>
					</parameters>
				</layout-element>			
			</elements>
		</layout-element>			

		<layout-element name="pp" ref="$start-page-end-page"> 
			<parameters>
				<starts-with value="pp. "/>
			</parameters>
		</layout-element>			

		
		<layout-element name="publishingInfoAndDate">
				<parameters>
					<delimiter value=", " />
					<starts-with value=" (" />
					<ends-with value=")" />
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/pub:publishing-info/dc:publisher/text()" />
					<layout-element ref="mdp:publication/pub:publishing-info/e:place/text()" />
					<layout-element ref="$date" />
				</elements>
		</layout-element>
			
		<layout-element name="sourceEditorsAndPublishingInfoAndDate">
			<elements>
				<layout-element ref="$source-editors">
					<parameters>
						<starts-with value=" edited by "/>
					</parameters>
				</layout-element>
				<layout-element>
					<parameters>
						<delimiter value=", " />
						<starts-with value="(" />
						<ends-with value=")" />
					</parameters>
					<elements>
						<layout-element ref="mdp:publication/pub:source[1]/e:publishing-info/dc:publisher/text()"/>
						<layout-element ref="mdp:publication/pub:source[1]/e:publishing-info/e:place/text()"/>
						<layout-element ref="$date" />
					</elements>
				</layout-element>
			</elements>
		</layout-element>
		
		<!-- Special block for the handling of the "Title," "Title." in the article .  -->	
		<layout-element name="SourceTitleVolumeIssuePhysicalDescriptionDateBlock">
			<parameters >
				<delimiter value=""/>
			</parameters>
			<elements>
				<layout-element ref="mdp:publication/pub:source[1]/dc:title/text()" />
				<layout-element ref="mdp:publication/pub:source[1]//e:volume/text()">
					<parameters>
						<font-style ref="BOLD" />
						<starts-with value=" "/>
					</parameters>
				</layout-element>
				<layout-element ref="mdp:publication/pub:source[1]/e:issue/text()">
					<parameters>
						<starts-with value=" (" />
						<ends-with value=")" />
					</parameters>
				</layout-element>
				<layout-element ref="mdp:publication/pub:source[1]/e:sequence-number/text()">
					<parameters>
						<starts-with value=", " />
					</parameters>
				</layout-element>
				<layout-element ref="$start-page-end-page">
					<parameters>
						<valid-if><![CDATA[not(exists(mdp:publication/pub:source[1]/e:sequence-number/text()))]]></valid-if>
						<starts-with value=", " />
					</parameters>
				</layout-element>
				<layout-element ref="$date">
					<parameters>
						<starts-with value=" (" />
						<ends-with value=")" />
					</parameters>
				</layout-element>					
			</elements>
		</layout-element>
		
		<layout-element name="edition" ref="mdp:publication/pub:publishing-info/e:edition/text()" >
			<parameters>
				<starts-with value=", "/>
				<ends-with value=" ed"/>
			</parameters>
		</layout-element>	
			
		<layout-element  name="title-italic" ref="mdp:publication/dc:title/text()">
			<parameters>
				<starts-with value=" "/>
				<ends-with value="."/>
				<font-style ref="ITALIC"/>
			</parameters>
		</layout-element>
		
		<!-- debug elements: -->
		<layout-element name="__debug__">
			<parameters>
				<starts-with value="debug__" />
				<ends-with value="__debug" />
				<font-style ref="BLUE"/>
				<delimiter value=","/>
			</parameters>
			<elements>
				<layout-element ref="$objid" >
					<parameters>
						<starts-with value="OBJID:"/>
					</parameters>
				</layout-element>
				<layout-element ref="$genre" >
					<parameters>
						<starts-with value="genre:"/>
					</parameters>
				</layout-element>
				<layout-element ref="mdp:publication/dcterms:abstract[contains(.,'AJP:')]/text()" />
				<layout-element ref="mdp:publication/dc:subject/text()" />
			</elements>
		</layout-element>
			
		
	</predefined-layout-elements>
	
    
    <!-- Print warning message for non-publication items -->
	<cs-layout-definition name="isNotPublication">
		<parameters>
			<valid-if><![CDATA[not($hasPublication)]]></valid-if>
			<starts-with
				value="## Citaion style layout is not defined for metadata record: " />
		</parameters>
		<elements>
			<layout-element ref="$objid" />
		</elements>
	</cs-layout-definition>

<!--Creator.Person.GivenName Creator.Person.FamilyName, "Title," Source.Title Source.Volume (Source.Issue), Source.sequence-number (year issued). -->

	<cs-layout-definition name="Article">
		<parameters>
			<valid-if><![CDATA[$genre = 'article']]></valid-if>
			<delimiter value=""/>
		</parameters>
		<elements>
			
<!--			<layout-element ref="debug" />-->
			
			<layout-element ref="$creators" />
						
					<!-- JOURNAL ARTICLE, element "journal article"  -->
			<layout-element >
				<parameters>
					<starts-with value=", "/>
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/dc:title/text()">
						<parameters>
							<valid-if><![CDATA[not(exists($SourceTitleVolumeIssuePhysicalDescriptionDateBlock/text()))]]></valid-if>
							<starts-with value="&quot;" />		
							<ends-with value=".&quot;" />		
						</parameters>
					</layout-element>
					<layout-element ref="mdp:publication/dc:title/text()">
						<parameters>
							<valid-if><![CDATA[exists($SourceTitleVolumeIssuePhysicalDescriptionDateBlock/text())]]></valid-if>
							<starts-with value="&quot;" />		
							<ends-with value=",&quot; " />		
						</parameters>
					</layout-element>
				</elements>
			</layout-element>
			
			<layout-element ref="$SourceTitleVolumeIssuePhysicalDescriptionDateBlock">
				<parameters>
					<ends-with value="."/>
				</parameters>
			</layout-element>
						
		</elements>	
		
	</cs-layout-definition>

	<cs-layout-definition name="Book-or-Proceedings">
		<parameters>
			<valid-if><![CDATA[ $genre = ('book', 'proceedings')  ]]></valid-if>
			<delimiter value=""/>
		</parameters>
		<elements>
			
<!--			<layout-element ref="debug" />-->
			
			<layout-element ref="$creators" />
			
			<layout-element ref="$title-italic" >
				<parameters>
					<starts-with value=","/>
				</parameters>
			</layout-element>
			
			<layout-element>
				<parameters>
					<ends-with value="."/>
					<delimiter value=""/>
				</parameters>
				<elements>
					<layout-element ref="$publishingInfoAndDate"/>
					<layout-element ref="$edition"/>
				</elements>
			</layout-element>			
			
		</elements>
	</cs-layout-definition>

	
	<cs-layout-definition name="BookChapter">
		<parameters>
			<valid-if><![CDATA[ $genre = ('book-item') ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>
			
<!--			<layout-element ref="debug" />-->
			
			<layout-element ref="$creators" />
						
			<layout-element ref="mdp:publication/dc:title">
				<parameters>
					<starts-with value="&quot;" />
					<ends-with value="&quot;" />
				</parameters>
			</layout-element>
			
			<layout-element name="BookTitleBlock">
				<parameters>
					<valid-if><![CDATA[exists(mdp:publication/pub:source[@type='book']/dc:title)]]></valid-if>
					<starts-with value="in "/>
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/pub:source[@type='book'][1]/dc:title/text()">
						<parameters>
							<font-style ref="ITALIC"/>
						</parameters>
					</layout-element>
				</elements>
			</layout-element>

			<layout-element ref="$sourceEditorsAndPublishingInfoAndDate"/>
			
			<layout-element ref="$vol"/>
			
			<layout-element ref="$pp"/>
			
		</elements>
	</cs-layout-definition>
	
		
	<cs-layout-definition name="Thesis">
	
		<parameters>
			<valid-if><![CDATA[ $genre = ('thesis') ]]></valid-if>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>

<!--			<layout-element ref="debug" />-->
			
			<layout-element ref="$creators"/>
			
			<layout-element ref="$degree"/>

			<layout-element ref="mdp:publication/pub:publishing-info/dc:publisher/text()" />
			
			<layout-element ref="$date" />
						
		</elements>
	</cs-layout-definition>
	
	<cs-layout-definition name="Generic">
		<parameters>
			<delimiter value=", " />
			<ends-with value="." />
		</parameters>
		<elements>
			
<!--			<layout-element ref="debug" />-->
			
			<layout-element ref="$creators" />

			<layout-element  ref="mdp:publication/dc:title">
				<parameters>
					<starts-with value="&quot;" />
					<ends-with value="&quot;" />
				</parameters>
			</layout-element>
			
			
			<layout-element name="SourceTitleBlock">
				<parameters>
					<valid-if><![CDATA[ exists(mdp:publication/pub:source[1]/dc:title) ]]></valid-if>
					<starts-with value="in "/>
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/pub:source[1]/dc:title">
						<parameters>
							<font-style ref="ITALIC"/>
						</parameters>
					</layout-element>
				</elements>
			</layout-element>
			
			<layout-element ref="$sourceEditorsAndPublishingInfoAndDate"/>
			
			<layout-element ref="$vol"/>
			
			<layout-element ref="$pp-with-total-number-of-pages"/>
			
		</elements>
	</cs-layout-definition>
	
</citation-style>