        <layoutElement name="Date" ref="date">
          <parameters>
            <startsWith value=" (" />
            <endsWith value=")." />
            <fontStyle ref="BOLD" />
          </parameters>
          <elements />
        </layoutElement>
        <layoutElement name="SourceCreatorsAPA" ref="source/sourcecreators/person" repeatable="yes">
          <parameters>
            <startsWith value="In " />
            <endsWith value=" (Ed.)," />
            <delimiter value=", " />
          </parameters>
          <elements>
            <layoutElement ref="creatorfullname" />
