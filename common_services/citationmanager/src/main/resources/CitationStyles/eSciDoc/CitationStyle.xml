        <validIf><![CDATA[$F{genre}.equals("InBook")|| $F{genre}.equals("Interactive Resource")|| $F{genre}.equals("Lecture / Courseware")|| $F{genre}.equals("Other")|| $F{genre}.equals("Software") || $F{genre}.equals("Conference-Paper") || $F{genre}.equals("Conference-Report")]]></validIf>
