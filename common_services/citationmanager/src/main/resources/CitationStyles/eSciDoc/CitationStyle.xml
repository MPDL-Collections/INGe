        </layoutElement>
        <layoutElement name="SourceTitle" ref="sourcetitle">
          <parameters>
            <fontStyle ref="ITALIC" />
          </parameters>
          <elements />
        </layoutElement>
        <layoutElement name="VolumeIssueBlock">
          <parameters>
            <startsWith value="(" />
            <endsWith value=")." />
