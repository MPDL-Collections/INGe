<citation-style name="APA"
	xmlns="http://www.escidoc.de/citationstyle" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.escidoc.de/citationstyle ../../Schemas/citation-style-new.xsd"
	read-only="no" 
	element-specific="no" 
	md-xpath="../../mdr:md-records/mdr:md-record"
	source-placeholder-tag="prop:content-model-specific"
	citation-placeholder-tag="dcterms:bibliographicCitation"
	>
	<!-- special variables to be used in expressions for short notations -->
	<variables>
		<!-- variables which use xpath directly in DataSource NS-->

		<!--		NOTE: -->
		<!--		the type should be set forcibly for the cases .. otherwise error: -->
		<!--		XTDE0420: Cannot create an attribute node whose parent is a document node-->
		<!--		??????-->

		<!-- ### objid should be always defined!!! ### -->
		<variable name="objid" ><![CDATA[../../@objid]]></variable>
		<!--  -->
		<variable name="genre"><![CDATA[mdp:publication/@type]]></variable>
		<variable name="source-type"><![CDATA[mdp:publication/pub:source[1]/@type]]></variable>
		<variable name="hasPublication" type="xs:boolean"><![CDATA[exists(mdp:publication)]]></variable>
		<variable name="authorsCount"><![CDATA[count(mdp:publication/pub:creator[@role='author'])]]></variable>
		<variable name="editorsCount"><![CDATA[count(mdp:publication/pub:creator[@role='editor'])]]></variable>
		<variable name="ed-postfix"><![CDATA[if ($editorsCount=1) then ' (Ed.)' else ' (Eds.)']]></variable>
		<variable name="sourceEditorsCount"><![CDATA[count(mdp:publication/pub:source[1]/e:creator[@role='editor'])]]></variable>
		<variable name="source-ed-postfix"><![CDATA[if ($sourceEditorsCount=1) then ' (Ed.)' else ' (Eds.)']]></variable>
		<variable name="genre-exception" type="xs:boolean"><![CDATA[$genre=( 'poster', 'talk-at-event', 'courseware-lecture' )]]></variable>

		<!-- Dates block -->
		<variable name="date">
			<![CDATA[
				if ($genre='manuscript' and mdp:publication/dcterms:created) 
				then func:get_year(mdp:publication/dcterms:created)  
				else if ($genre-exception and mdp:publication/pub:event/e:start-date)
				then func:get_year(mdp:publication/pub:event/e:start-date) 
				else if (mdp:publication/dcterms:issued)
				then func:get_year(mdp:publication/dcterms:issued) 
				else if (mdp:publication/pub:published-online) 
				then func:get_year(mdp:publication/pub:published-online) 
				else if (( $genre-exception and $genre='manuscript') and mdp:publication/dcterms:dateAccepted)
				then func:get_year(mdp:publication/dcterms:dateAccepted)
				else if (mdp:publication/dcterms:dateAccepted) 
				then 'in press' 
				else if	(( $genre-exception or $genre='manuscript') and mdp:publication/dcterms:dateSubmitted)
				then func:get_year(mdp:publication/dcterms:dateSubmitted)
				else if (mdp:publication/dcterms:dateSubmitted) 
				then 'submitted' 
				else if	(( $genre-exception or $genre='manuscript') and mdp:publication/dcterms:modified)
				then func:get_year(mdp:publication/dcterms:modified)
				else if (( $genre-exception or $genre='manuscript') and mdp:publication/dcterms:created)
				then func:get_year(mdp:publication/dcterms:created)
				else if (mdp:publication/dcterms:modified or mdp:publication/dcterms:created) 
				then 'in preparation' 
				else if (not($genre = ( 'journal', 'series')))
				then 'n.d.'
				else ''
			]]>
		</variable>
		
		<variable name="start-date-or-date">
			<![CDATA[
				if (mdp:publication/pub:event/e:start-date) 
				then mdp:publication/pub:event/e:start-date
				else $date
			]]>
		</variable>

		<variable name="date-for-thesis">
			<![CDATA[
				if (mdp:publication/dcterms:issued)
				then func:get_year(mdp:publication/dcterms:issued) 
				else if (mdp:publication/dcterms:dateAccepted)
				then func:get_year(mdp:publication/dcterms:dateAccepted) 
				else if (mdp:publication/pub:published-online)
				then func:get_year(mdp:publication/pub:published-online) 
				else ''
			]]>
		</variable>
		
		<!-- see http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Citation_of_not_yet_published_works_.28valid_for_all_genres.2C_except_for_manuscript.2C_teaching_.28Lecture.2FCourseware.29.2C_Talk_at_event.2C_Poster.29 -->
		<variable name="notPublishedRule" type="xs:boolean">
			<![CDATA[
				$date = ( 'submitted', 'in preparation') and
				not( $genre = ('manuscript', 'courseware-lecture', 'talk-at-event', 'poster') )
			]]>
		</variable>		
		
		
		<variable name="degree">
			<![CDATA[
					concat (
						(if (not(mdp:publication/pub:degree))
						then ''
						else if (mdp:publication/pub:degree/text()='phd')
						then 'PhD '
						else concat (mdp:publication/pub:degree/text(), ' ')),
						'Thesis'
					)		
			]]>
		</variable>
		
		
		<variable name="doi"><![CDATA[(mdp:publication/dc:identifier[@xsi:type='eidt:DOI'])[1]/text()]]></variable>
		<variable name="uri"><![CDATA[(mdp:publication/dc:identifier[@xsi:type='dcterms:URI'])[1]/text()]]></variable>
		
		<variable name="published-online-and-external-locator">
			<![CDATA[
				if (not(mdp:publication/dcterms:issued) and mdp:publication/pub:published-online)
				then 
					(
						if (not($doi='')) 
						then concat('doi:', $doi)
						else concat('Retrieved from ', $uri)
					)
				else ''	
			]]>
		</variable>

	</variables>

