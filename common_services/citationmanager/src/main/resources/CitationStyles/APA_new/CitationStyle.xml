					<parameters>
						<starts-with value="published-online:" />
					</parameters>
				</layout-element>
				<layout-element ref="$doi">
					<parameters>
						<starts-with value="doi:" />
					</parameters>
				</layout-element>
				<layout-element ref="mdp:publication/dcterms:dateAccepted/text()">
					<parameters>
						<starts-with value="dateAccepted:" />
					</parameters>
					<elements />
				</layout-element>
				<layout-element ref="mdp:publication/dcterms:dateSubmitted/text()">
					<parameters>
						<starts-with value="dateSubmitted:" />
					</parameters>
					<elements />
				</layout-element>
				<layout-element ref="mdp:publication/dcterms:modified/text()">
					<parameters>
						<starts-with value="modified:" />
					</parameters>
					<elements />
				</layout-element>

				<layout-element ref="mdp:publication/dcterms:created/text()">
					<parameters>
						<starts-with value="created:" />
					</parameters>
					<elements />
				</layout-element>
			</elements>
		</layout-element>

	</predefined-layout-elements>


	<!-- Print warning message for non-publication items -->
	<cs-layout-definition name="isNotPublication">
		<parameters>
			<valid-if><![CDATA[not($hasPublication)]]></valid-if>
			<starts-with
				value="## Citaion style layout is not defined for metadata record: " />
		</parameters>
		<elements>
			<layout-element ref="$objid" />
		</elements>
	</cs-layout-definition>

	<!--
		Special rule for submitted and in preparation, except for manuscript, teaching (Lecture/Courseware), Talk at event, Poster, Journals or Series 
		See: http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Citation_of_not_yet_published_works_.28valid_for_all_genres.2C_except_for_manuscript.2C_teaching_.28Lecture.2FCourseware.29.2C_Talk_at_event.2C_Poster.2C_Journals_or_Series.29 
	-->
	<cs-layout-definition name="submitted-or-in-preparation">
		<parameters>
			<valid-if><![CDATA[$notPublishedRule]]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
<!--						<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot" />

		</elements>
	</cs-layout-definition>
	
	<!--
		JOURNAL ARTICLE OR PAPER, (OTHER OR CONFERENCE-REPORT, etc.)+source.genre=journal
	-->
	<cs-layout-definition name="journal-article-etc">
		<parameters>
			<valid-if><![CDATA[
				$genre = ( 'article', 'paper' ) 
				or ( $genre = ( 'other', 'paper', 'conference-report', 'conference-paper') and $source-type = 'journal' )  
			]]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
		
<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot" />

			<layout-element name="volume-issue-start-page-end-page">
				<parameters>
					<ends-with value="."/>
					<delimiter value=", " />
				</parameters>
				<elements>
					<layout-element ref="$source-title" />
					<layout-element ref="$volume-issue" />
					<layout-element ref="$start-page-end-page" />
				</elements>
			</layout-element>

			<layout-element ref="$published-online-and-external-locator" />

		</elements>
	</cs-layout-definition>



	<!--
		BOOK, PROCEEDINGS, CONFERENCE-REPORT or CONFERENCE-PAPER with not
		source in(book,proceedings,journal), OTHER without source
	-->
	<cs-layout-definition name="book-etc">
		<parameters>
			<valid-if><![CDATA[
				$genre = ( 'book', 'proceedings') 
				or ( $genre = ( 'conference-report', 'conference-paper', 'other' ) and 
					not($source-type = ('journal', 'proceedings', 'book' ))  
				)  
				or ( $genre = 'other' and not($source-type) )
			]]></valid-if>
		</parameters>
		<elements>
<!--						<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors" />

			<layout-element ref="$year-authors-or-editors-are-presented" />

			<layout-element>
				<parameters>
					<ends-with value="." />
				</parameters>
				<elements>
					<layout-element ref="$title-italic"/>
					<layout-element ref="mdp:publication/pub:publishing-info/e:edition/text()">
						<parameters>
							<valid-if><![CDATA[$genre = 'book']]></valid-if>
							<starts-with value=" (" />
							<ends-with value=")" />
						</parameters>
					</layout-element>
				</elements>
			</layout-element>

			<layout-element ref="$year-authors-or-editors-are-not-presented" />

			<layout-element ref="$place-publisher">
				<parameters>
					<ends-with value="."/>
				</parameters>
			</layout-element>
			
			<layout-element ref="$published-online-and-external-locator" />

		</elements>
	</cs-layout-definition>


	<!-- THESIS, in print or accepted -->
	<!--
		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Thesis
	-->
	<cs-layout-definition name="thesis-in-print-or-accepted">
		<parameters>
			<valid-if><![CDATA[ $genre = 'thesis' and (mdp:publication/dcterms:issued or mdp:publication/dcterms:dateAccepted)]]></valid-if>
		</parameters>
		<elements>
			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors" />

			<layout-element ref="$year-for-thesis" />

			<layout-element ref="$title-with-dot"/>

			<layout-element name="degree-place-publisher">
				<parameters>
					<starts-with value=" "/>
					<ends-with value="." />
					<delimiter value=", " />
				</parameters>
				<elements>
					<layout-element ref="$degree" />
					<layout-element ref="mdp:publication/pub:publishing-info/dc:publisher/text()" />
					<layout-element ref="mdp:publication/pub:publishing-info/e:place/text()" />
				</elements>
			</layout-element>

		</elements>
	</cs-layout-definition>

	<!-- THESIS, published online -->
	<!--
		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Thesis
	-->
	<cs-layout-definition name="thesis-published-online">
		<parameters>
			<valid-if><![CDATA[ $genre = 'thesis' and mdp:publication/pub:published-online ]]></valid-if>
		</parameters>
		<elements>
			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors" />

			<layout-element ref="$year-for-thesis" />

			<layout-element name="degree-place-publisher-year">
				<parameters>
					<ends-with value="." />
				</parameters>
				<elements>
					<layout-element ref="$title-italic" />
					<layout-element name="degree-place-publisher-year">
						<parameters>
							<starts-with value="(" />
							<ends-with value=")" />
							<delimiter value=", " />
						</parameters>
						<elements>
							<layout-element ref="$degree" />
							<layout-element ref="mdp:publication/pub:publishing-info/dc:publisher/text()" />
							<layout-element ref="mdp:publication/pub:publishing-info/e:place/text()" />
							<layout-element ref="$date-for-thesis" />
						</elements>
					</layout-element>	
				</elements>
			</layout-element>

			<layout-element ref="$uri">
				<parameters>
					<starts-with value=" Retrieved from " />
				</parameters>
			</layout-element>

		</elements>
	</cs-layout-definition>


	<!--
		BOOK CHAPTER, OTHER+source==book, CONFERENCE REPORT or PAPER
		+source==book or source==proceedings
	-->
	<cs-layout-definition name="book-item-etc">
		<parameters>
			<valid-if><![CDATA[
				$genre = 'book-item'
				or ( $genre = 'other' and $source-type = 'book' )  
				or ( 
					 $genre = ( 'conference-report', 'conference-paper' )   
					 and  $source-type = ( 'book', 'proceedings' )  
				)  
			]]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot" />

			<layout-element>
				<parameters>
					<starts-with value=" In " />
					<ends-with value="." />
				</parameters>
				<elements>
					<layout-element ref="$source-editors">
						<parameters>
							<ends-with value=", " />
						</parameters>
					</layout-element>
					<layout-element ref="mdp:publication/pub:source[1]/dc:title/text()">
						<parameters>
							<font-style ref="ITALIC" />
						</parameters>
					</layout-element>
					<layout-element ref="$source-edition-start-page-end-page" />
				</elements>
			</layout-element>

			<layout-element name="source-place-publisher">
				<parameters>
					<starts-with value=" " />
					<ends-with value="." />
					<delimiter value=": " />
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/pub:source[1]/e:publishing-info/e:place/text()" />
					<layout-element ref="mdp:publication/pub:source[1]/e:publishing-info/dc:publisher/text()" />
				</elements>
			</layout-element>
		
			<layout-element ref="$published-online-and-external-locator" />

		</elements>
	</cs-layout-definition>


	<!-- ISSUE -->
	<cs-layout-definition name="issue">
		<parameters>
			<valid-if><![CDATA[$genre = 'issue']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$editors-with-dot" />

			<layout-element ref="$year-editors-are-presented" />

			<layout-element ref="mdp:publication/dc:title/text()">
				<parameters>
					<starts-with value=" " />
					<ends-with value=" [Special Issue]. " />
				</parameters>
			</layout-element>

			<layout-element ref="$year-editors-are-not-presented" />

			<layout-element >
				<parameters>
					<ends-with value="." />
					<delimiter value=", "/>
				</parameters>
				<elements>
					<layout-element ref="$source-title" />
					<layout-element ref="$volume-issue" />
				</elements>
			</layout-element>

		</elements>

	</cs-layout-definition>


	<!-- experimental -->
	<!-- JOURNAL -->
	<cs-layout-definition name="journal">
		<parameters>
			<valid-if><![CDATA[$genre = 'journal']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
<!--						<layout-element ref="$debugBlock" />-->

			<layout-element ref="$editors-with-dot" />

			<layout-element ref="$title-with-dot-italic" />

			<layout-element ref="$place-publisher" >
				<parameters>
					<ends-with value="."/>
				</parameters>
			</layout-element>

		</elements>

	</cs-layout-definition>

	<!-- UNPUBLISHED MANUSCRIPT -->
	<!--
		Author, A. A., & Author, B. (Year of Publication). Title of
		manuscript. Unpublished manuscript.
	-->
	<cs-layout-definition name="manuscript">
		<parameters>
			<valid-if><![CDATA[$genre = 'manuscript']]></valid-if>
			<ends-with value=" Unpublished Manuscript." />
		</parameters>
		<elements>

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot-italic" />

		</elements>

	</cs-layout-definition>

	<!-- SERIES -->
	<cs-layout-definition name="series">
		<parameters>
			<valid-if><![CDATA[$genre = 'series']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
<!--						<layout-element ref="$debugBlock" />-->

			<layout-element ref="$editors-with-dot" />

			<layout-element ref="$title-with-dot-italic" />

			<!--
				start-volume / end-volume are not presented in MD, only volume!!!
				TODO:  to be updated!!! : http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Series
			-->
			<layout-element ref="mdp:publication/pub:source[1]/e:volume">
				<parameters>
					<starts-with value=" (Vols. " />
					<ends-with value=")." />
				</parameters>
			</layout-element>

			<layout-element ref="$place-publisher" >
				<parameters>
					<ends-with value="."/>
				</parameters>
			</layout-element>

		</elements>

	</cs-layout-definition>

	<!-- TALK-AT-EVENT -->
	<!--
		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Talk_at_event
	-->
	<cs-layout-definition name="talk-at-event">
		<parameters>
			<valid-if><![CDATA[$genre = 'talk-at-event']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>

			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot" />

			<layout-element ref="mdp:publication/pub:event/dc:title/text()">
				<parameters>
					<font-style ref="ITALIC"/>
					<starts-with value=" "/>
					<ends-with value="."/>
				</parameters>
			</layout-element>

			<layout-element ref="$event-place-start-date-end-date-with-dot" />

		</elements>

	</cs-layout-definition>

	<!--COURSEWARE-LECTURE(TEACHING) -->
	<!--
		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Lecture.2F_Courseware_.28Teaching.29
	-->
	<cs-layout-definition name="courseware-lecture">
		<parameters>
			<valid-if><![CDATA[
					$genre = 'courseware-lecture'
				]]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>

			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot" />

			<layout-element ref="mdp:publication/pub:event/dc:title/text()">
				<parameters>
					<starts-with value=" " />
					<ends-with value="." />
				</parameters>
			</layout-element>

			<layout-element ref="$event-place-start-date-end-date-with-dot" />
			
		</elements>

	</cs-layout-definition>

	<!-- POSTER  -->
	<!--
		http://colab.mpdl.mpg.de/mediawiki/PubMan_Func_Spec_Export/APA#Poster
	-->
	<cs-layout-definition name="poster">
		<parameters>
			<valid-if><![CDATA[$genre = 'poster']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>

			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors-and-year-and-title-with-dot-italic" />

			<layout-element name="event-title-and-place">
				<parameters>
					<valid-if><![CDATA[exists(mdp:publication/pub:event/dc:title/text()) and mdp:publication/pub:event/dc:title/text()!='']]></valid-if>
					<starts-with value=" Poster presented at the " />
					<ends-with value="." />
					<delimiter value=", " />
				</parameters>
				<elements>
					<layout-element ref="mdp:publication/pub:event/dc:title/text()" />
					<layout-element ref="mdp:publication/pub:event/e:place/text()" />
				</elements>
			</layout-element>

		</elements>

	</cs-layout-definition>


	<!-- REPORT -->
	<cs-layout-definition name="report">
		<parameters>
			<valid-if><![CDATA[$genre = 'report']]></valid-if>
			<delimiter value="" />
		</parameters>
		<elements>
			<!--			<layout-element ref="$debugBlock" />-->

			<layout-element ref="$authors-or-editors" />

			<layout-element ref="$year-authors-or-editors-are-presented" />

			<layout-element name="title-report-identifier">
				<parameters>
					<starts-with value=" " />
					<ends-with value="." />
					<delimiter value=" " />
				</parameters>
				<elements>
					<layout-element ref="$title-italic"/>
					<layout-element ref="(mdp:publication/e:identifier[@xsi:type='eidt:OTHER'])[1]/text()">
						<parameters>
							<starts-with value="(" />
							<ends-with value=")" />
						</parameters>
					</layout-element>
				</elements>
			</layout-element>

			<layout-element ref="$year-authors-or-editors-are-not-presented" />

			<layout-element ref="$place-publisher" >
				<parameters>
					<ends-with value="." />
				</parameters>
			</layout-element>

		</elements>

	</cs-layout-definition>


