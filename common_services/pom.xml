                       </executions>
                   </plugin>
               </plugins>
           </build> 
            <properties>
                <!-- the jdk version to use -->
                <jdk.version>1.5</jdk.version>

                <!-- used by the cargo plugin to run a jboss server for integration-testing /goal: cargo:start-->
                <cargo.port>8080</cargo.port>
                <cargo.rmi.port>1099</cargo.rmi.port>
                <cargo.log>low</cargo.log>
                <cargo.jvmargs>-Dcom.sun.xml.namespace.QName.useCompatibleSerialVersionUID=1.0
                    -Dpubman.properties.file=./pubman.properties</cargo.jvmargs>
                <!-- this path is used as root for all jboss installations -->
                <cargo.install.dir>${user.home}/jboss</cargo.install.dir>
                <!-- fetch the jboss from this url -->
                <cargo.jboss.url>http://heanet.dl.sourceforge.net/sourceforge/jboss/jboss-4.2.2.GA.zip</cargo.jboss.url>
                <!-- local intallation of the jboss for integration-tests -->
                <cargo.jboss.install.dir>${user.home}/jboss/jboss-4.2.2.GA/jboss-4.2.2.GA</cargo.jboss.install.dir>

                <!-- deploy the pubman ear to this server and port via jmx /goal: jboss:deploy -->
                <jboss.deploy.host>localhost</jboss.deploy.host>
                <jboss.deploy.port>8080</jboss.deploy.port>
                <!-- the ears are deployed to this server using jboss:harddeploy -->
                <jboss.install.dir>${user.home}/jboss/server_eclipse/jboss-4.2.2.GA/jboss-4.2.2.GA</jboss.install.dir>

                <!-- Flag to disable the GUI-entry points for UC_PM_SR_03 do advanced search -->
                <escidoc.pubman_presentation.disable.advanced_search>false</escidoc.pubman_presentation.disable.advanced_search>
                <escidoc.pubman_presentation.disable.export>false</escidoc.pubman_presentation.disable.export>
                <escidoc.pubman_presentation.disable.modify>false</escidoc.pubman_presentation.disable.modify>
                <escidoc.pubman_presentation.disable.new_revision>false</escidoc.pubman_presentation.disable.new_revision>
                <escidoc.pubman_presentation.disable.view_statistics>false</escidoc.pubman_presentation.disable.view_statistics>
                <escidoc.pubman_presentation.disable.view_revisions>false</escidoc.pubman_presentation.disable.view_revisions>

                <!-- URL of this PubMan instance -->
                <escidoc.pubman.instance.url>http://localhost:8080/pubman</escidoc.pubman.instance.url>
                <escidoc.pubman.item.pattern>/viewItemPage.jsp?itemId=$1</escidoc.pubman.item.pattern>
                <escidoc.pubman.component.pattern>/viewComponentPage.jsp?componentId=$1</escidoc.pubman.component.pattern>

                <!-- URL of the FIZ framework instance used by all services -->
                <escidoc.common.framework.url>http://dev-coreservice.mpdl.mpg.de:8080</escidoc.common.framework.url>
                <!-- URL of the FIZ framework instance used by the framework_access module only -->
                <escidoc.framework_access.framework.url>http://dev-coreservice.mpdl.mpg.de:8080</escidoc.framework_access.framework.url>
                <!-- Identifier of the content type "publication" in the actual framework instance -->
                <escidoc.framework_access.content-model.id.publication>escidoc:persistent4</escidoc.framework_access.content-model.id.publication>

                <!--
                    Due to a historical defect, QName was released with multiple serialVersionUID values even though its serialization was the same. To workaround this issue,
                    serialVersionUID is set with either a default value or a compatibility value. To use the compatibility value you have to set the following property to "1.0".
                -->
                <com.sun.xml.namespace.QName.useCompatibleSerialVersionUID>1.0</com.sun.xml.namespace.QName.useCompatibleSerialVersionUID>

                <!-- RE Pattern for retrieving determinators from item xml -->
                <escidoc.content.model.pattern>:content-model (?:objid=\"|xlink:href=\"/cmm/content-model/)?([^\"]*)\"</escidoc.content.model.pattern>
                <escidoc.context.pattern>:context (?:objid=\"|xlink:href=\"/ir/context/)?([^\"]*)\"</escidoc.context.pattern>
                <escidoc.validation.source.classname>de.mpg.escidoc.services.validation.VoidValidationSchemaSource</escidoc.validation.source.classname>
                <escidoc.validation.content-model>escidoc:validation1</escidoc.validation.content-model>
                <escidoc.validation.refresh.interval>180</escidoc.validation.refresh.interval>

                <escidoc.pubman.root.organisation.id>escidoc:persistent13</escidoc.pubman.root.organisation.id>
