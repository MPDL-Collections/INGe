<binding>

	<!-- concrete mapping for ContextVO -->
	<!-- Type: ContextVO... -->
	<mapping abstract="true" class="de.mpg.escidoc.services.common.valueobjects.publication.PublicationAdminDescriptorVO" ordered="false" flexible="true"
		allow-repeats="true">


		<!-- Node: context.admin-descriptor.allowed-content-types.allowed-content-type.allowed-genres -->
		<!-- Field: PubCollectionVO.allowedGenres [List<MdsPublicationVO.Genre>] -->
		<structure name="allowed-genres" usage="optional">

			<collection field="allowedGenres" factory="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.genreListFactory" usage="optional">

				<!-- Node: context.admin-descriptor.allowed-content-types.allowed-genres.allowed-genre -->
				<value style="element" name="allowed-genre"
					type="de.mpg.escidoc.services.common.valueobjects.publication.MdsPublicationVO$Genre"
					deserializer="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.deserializeGenreEnum"
					serializer="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.serializeGenreEnum" usage="optional" />

			</collection>
		</structure>

		<value style="element" name="template-item" field="templateItem" usage="optional" />
		
		<value style="element" name="validation-schema" field="validationSchema" usage="optional" />

		<value style="element" name="workflow"
			type="de.mpg.escidoc.services.common.valueobjects.publication.PublicationAdminDescriptorVO$Workflow"
			deserializer="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.deserializeWorkflowEnum"
			serializer="de.mpg.escidoc.services.common.xmltransforming.JiBXHelper.serializeRegularEnumToString"
			field="workflow"
			usage="optional" />

		<value style="element" name="contact-email" field="contactEmail" usage="optional" />

	</mapping>
</binding>