<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>

	<!--  
	<lifecycle>
		<phase-listener>de.mpg.escidoc.services.cone.PhaseDebugger</phase-listener>
	</lifecycle>
	 -->

	<managed-bean>
		<managed-bean-name>navigation</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.common.Navigation
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>identity</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.common.AuthenticationBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>journalSearch</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.journalnames.JournalSearchBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>journalAdd</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.journalnames.AddJournal
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>journalEdit</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.journalnames.EditJournal
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>triples</managed-bean-name>
		<managed-bean-class>
			de.mpg.escidoc.services.cone.mss.TripleSearchBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>tree</managed-bean-name>
		<managed-bean-class>
			test.TreeBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadHome</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadJournalNames</from-outcome>
			<to-view-id>/journals.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadPersonNames</from-outcome>
			<to-view-id>/persons.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadOrgUnitNames</from-outcome>
			<to-view-id>/orgunits.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadJournalSearch</from-outcome>
			<to-view-id>/journalSearch.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadJournalAdd</from-outcome>
			<to-view-id>/journalAdd.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadJournalEdit</from-outcome>
			<to-view-id>/journalEdit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>loadTSE</from-outcome>
			<to-view-id>/tse_index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<display-name>
		IssnValidator</display-name>
		<validator-id>
		IssnValidator</validator-id>
		<validator-class>
		de.mpg.escidoc.services.cone.common.IssnValidator</validator-class>
	</validator>

</faces-config>
